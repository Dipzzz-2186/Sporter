extends ../layout/main

block content
  .container.mt-4
    h3 Detail Pesanan ##{order.id}

    form(method="POST" action=`/orders/${order.id}/holders`)
      // ===== INPUT NAMA PEMEGANG (PER TIKET) =====
      each t, i in tickets
        .card.mb-3
          .card-body
            label.form-label
              | Nama Pemegang Tiket #{i + 1}

            input.form-control(
              type="text"
              name=`names[${i}][name]`
              value=t.holder_name || ''
              required
            )

            input(
              type="hidden"
              name=`names[${i}][ticket_id]`
              value=t.id
            )

      // ===== QR CODE (SATU KALI, DI BAWAH) =====
      .text-center.mt-4
        hr
        p.text-success.fw-bold.mb-2
          i.bi.bi-check-circle-fill.me-1
          | Tiket Valid

        img(
          src=qrDemo
          width="180"
          alt="QR Ticket"
        )

      button.btn.btn-primary.mt-4.w-100(type="submit")
        i.bi.bi-ticket-perforated.me-2
        | Simpan & Konfirmasi Tiket
