extends ../layout/main

block content
  style.
    .error-page {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
    }
    .error-card {
      background: white;
      border-radius: 24px;
      padding: 3rem;
      text-align: center;
      box-shadow: 0 10px 40px rgba(0,0,0,0.1);
      max-width: 500px;
    }
    .error-code {
      font-family: 'Bebas Neue', cursive;
      font-size: 8rem;
      line-height: 1;
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    .error-title {
      font-weight: 700;
      font-size: 1.8rem;
      color: #0B1F3F;
      margin: 1rem 0;
    }
    .error-desc {
      color: #5a6c7d;
      margin-bottom: 2rem;
    }

  .error-page
    .container
      .error-card
        .error-code 404
        h1.error-title Halaman Tidak Ditemukan
        p.error-desc Maaf, halaman yang Anda cari tidak ditemukan atau sudah dipindahkan.
        a.btn.btn-primary.btn-lg(href="/")
