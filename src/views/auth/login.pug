doctype html
html(lang="id")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Login Admin - SPORTER
    
    // Bootstrap
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    )
    
    // Bootstrap Icons
    link(
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    )
    
    // Google Font
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com" crossorigin)
    link(
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=Bebas+Neue&display=swap"
      rel="stylesheet"
    )
    
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: 'Inter', sans-serif;
        background: linear-gradient(135deg, #1C1C1E 0%, #2c2c2e 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
      }
      
      /* Background Animation */
      body::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 800px;
        height: 800px;
        background: radial-gradient(circle, rgba(255, 59, 48, 0.15) 0%, transparent 70%);
        border-radius: 50%;
        animation: float 8s ease-in-out infinite;
      }
      
      body::after {
        content: '';
        position: absolute;
        bottom: -40%;
        left: -10%;
        width: 600px;
        height: 600px;
        background: radial-gradient(circle, rgba(255, 149, 0, 0.1) 0%, transparent 70%);
        border-radius: 50%;
        animation: float 10s ease-in-out infinite reverse;
      }
      
      @keyframes float {
        0%, 100% {
          transform: translate(0, 0) scale(1);
        }
        50% {
          transform: translate(50px, -50px) scale(1.1);
        }
      }
      
      /* Login Container */
      .login-container {
        width: 100%;
        max-width: 480px;
        padding: 2rem;
        position: relative;
        z-index: 2;
        animation: fadeInUp 0.8s ease-out;
      }
      
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      /* Logo Section */
      .login-logo {
        text-align: center;
        margin-bottom: 2rem;
        animation: fadeInDown 0.8s ease-out;
      }
      
      @keyframes fadeInDown {
        from {
          opacity: 0;
          transform: translateY(-30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      .logo-icon {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.2);
        animation: bounce 2s infinite;
      }
      
      @keyframes bounce {
        0%, 100% {
          transform: translateY(0);
        }
        50% {
          transform: translateY(-10px);
        }
      }
      
      .logo-icon i {
        font-size: 3rem;
        background: linear-gradient(135deg, #FF3B30 0%, #FF9500 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      
      .logo-text {
        font-family: 'Bebas Neue', cursive;
        font-size: 2.5rem;
        letter-spacing: 2px;
        background: linear-gradient(135deg, #FF3B30 0%, #FF9500 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 0.5rem;
      }
      
      .logo-subtitle {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.9rem;
        font-weight: 500;
      }
      
      /* Login Card */
      .login-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 24px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(20px);
        overflow: hidden;
        animation: fadeInScale 0.8s ease-out 0.2s backwards;
      }
      
      @keyframes fadeInScale {
        from {
          opacity: 0;
          transform: scale(0.9);
        }
        to {
          opacity: 1;
          transform: scale(1);
        }
      }
      
      .login-card .card-body {
        padding: 3rem;
      }
      
      .login-title {
        font-family: 'Bebas Neue', cursive;
        font-size: 2rem;
        color: #1C1C1E;
        letter-spacing: 1px;
        margin-bottom: 0.5rem;
        text-align: center;
      }
      
      .login-title span {
        background: linear-gradient(135deg, #FF3B30 0%, #FF9500 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      
      .login-subtitle {
        color: #6c757d;
        font-size: 0.95rem;
        text-align: center;
        margin-bottom: 2rem;
        line-height: 1.6;
      }
      
      /* Form Elements */
      .form-label {
        color: #1C1C1E;
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }
      
      .form-label i {
        color: #FF3B30;
        font-size: 1rem;
      }
      
      .form-control {
        border: 2px solid #e8e8e8;
        border-radius: 12px;
        padding: 0.9rem 1.2rem;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        background: #f8f9fa;
      }
      
      .form-control:focus {
        border-color: #FF3B30;
        box-shadow: 0 0 0 0.25rem rgba(255, 59, 48, 0.15);
        background: white;
      }
      
      .form-control:hover {
        border-color: #d0d0d0;
        background: white;
      }
      
      /* Button */
      .btn-login {
        background: linear-gradient(135deg, #FF3B30 0%, #FF9500 100%);
        border: none;
        border-radius: 12px;
        padding: 1rem;
        font-weight: 700;
        font-size: 1rem;
        letter-spacing: 0.5px;
        color: white;
        width: 100%;
        transition: all 0.3s ease;
        box-shadow: 0 8px 20px rgba(255, 59, 48, 0.3);
        text-transform: uppercase;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
      }
      
      .btn-login:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 30px rgba(255, 59, 48, 0.4);
        color: white;
      }
      
      .btn-login:active {
        transform: translateY(-1px);
      }
      
      /* Alerts */
      .alert {
        border-radius: 12px;
        border: none;
        padding: 1rem 1.25rem;
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
        animation: slideInDown 0.4s ease-out;
      }
      
      @keyframes slideInDown {
        from {
          opacity: 0;
          transform: translateY(-20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      .alert-danger {
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        color: #991b1b;
        border-left: 4px solid #dc2626;
      }
      
      .alert-success {
        background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
        color: #065f46;
        border-left: 4px solid #059669;
      }
      
      .alert i {
        margin-right: 0.5rem;
      }
      
      /* Footer Note */
      .login-footer {
        text-align: center;
        color: #6c757d;
        font-size: 0.85rem;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid #e8e8e8;
        line-height: 1.6;
      }
      
      .login-footer strong {
        color: #1C1C1E;
        font-weight: 700;
      }
      
      .login-footer .badge {
        background: linear-gradient(135deg, #fff5f5 0%, #ffe8e6 100%);
        color: #FF3B30;
        border: 1px solid #ffeded;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.8rem;
        margin: 0 0.2rem;
      }
      
      /* Back to Home Link */
      .back-home {
        position: fixed;
        top: 2rem;
        left: 2rem;
        z-index: 10;
      }
      
      .back-home a {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: rgba(255, 255, 255, 0.1);
        border: 2px solid rgba(255, 255, 255, 0.2);
        color: white;
        padding: 0.7rem 1.2rem;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
      }
      
      .back-home a:hover {
        background: rgba(255, 255, 255, 0.2);
        border-color: #FF3B30;
        transform: translateX(-5px);
      }
      
      /* Responsive */
      @media (max-width: 767px) {
        .login-container {
          padding: 1rem;
        }
        
        .login-card .card-body {
          padding: 2rem 1.5rem;
        }
        
        .login-title {
          font-size: 1.75rem;
        }
        
        .logo-icon {
          width: 70px;
          height: 70px;
        }
        
        .logo-icon i {
          font-size: 2.5rem;
        }
        
        .logo-text {
          font-size: 2rem;
        }
        
        .back-home {
          top: 1rem;
          left: 1rem;
        }
        
        .back-home a {
          padding: 0.6rem 1rem;
          font-size: 0.85rem;
        }
      }
      
      @media (max-width: 480px) {
        .login-card .card-body {
          padding: 1.5rem 1.25rem;
        }
        
        .form-control {
          padding: 0.8rem 1rem;
        }
        
        .btn-login {
          padding: 0.9rem;
        }
      }

  body
    
    //- Login Container
    .login-container
      //- Logo Section
      .login-logo
        .logo-icon
          i.bi.bi-shield-lock-fill
        .logo-text SPORTER
      
      //- Login Card
      .card.login-card.border-0
        .card-body
          h1.login-title
            | Login 
            span Admin
          p.login-subtitle
            | Masuk sebagai user untuk mendapatkan lebih banyak akses.
          
          //- Flash Messages
          if flash && flash.error && flash.error.length
            .alert.alert-danger
              i.bi.bi-exclamation-triangle-fill
              each msg in flash.error
                div= msg
          
          if flash && flash.success && flash.success.length
            .alert.alert-success
              i.bi.bi-check-circle-fill
              each msg in flash.success
                div= msg
          
          //- Login Form
          form(method="POST", action="/login")
            .mb-3
              label.form-label(for="email")
                i.bi.bi-envelope-fill
                | Email
              input#email.form-control(
                type="email", 
                name="email", 
                placeholder="admin@sporter.id",
                required, 
                value=old && old.email ? old.email : ''
              )
            
            .mb-4
              label.form-label(for="password")
                i.bi.bi-lock-fill
                | Password
              input#password.form-control(
                type="password", 
                name="password", 
                placeholder="••••••••",
                required
              )
            
            button.btn.btn-login(type="submit")
              i.bi.bi-box-arrow-in-right
              span Masuk

    //- Bootstrap JS
    script(
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    )
    
    //- Custom JS
    script.
      (function() {
        // Auto focus on email input
        var emailInput = document.getElementById('email');
        if (emailInput && !emailInput.value) {
          emailInput.focus();
        }
        
        // Form validation feedback
        var form = document.querySelector('form');
        if (form) {
          form.addEventListener('submit', function(e) {
            var btn = form.querySelector('.btn-login');
            if (btn) {
              btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Memproses...';
              btn.disabled = true;
            }
          });
        }
        
        // Auto dismiss alerts after 5 seconds
        var alerts = document.querySelectorAll('.alert');
        alerts.forEach(function(alert) {
          setTimeout(function() {
            alert.style.transition = 'opacity 0.5s ease';
            alert.style.opacity = '0';
            setTimeout(function() {
              alert.remove();
            }, 500);
          }, 5000);
        });
        
        // Add keyboard shortcut (Enter to submit)
        document.addEventListener('keydown', function(e) {
          if (e.key === 'Enter' && !e.shiftKey) {
            var activeElement = document.activeElement;
            if (activeElement.tagName === 'INPUT' && form) {
              e.preventDefault();
              form.requestSubmit();
            }
          }
        });
      })();