    script(
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    )
    
    //- Custom JS
    script.
      (function() {
        // Auto focus on name input
        var nameInput = document.getElementById('name');
        if (nameInput && !nameInput.value) {
          nameInput.focus();
        }
        
        // Password strength checker
        var passwordInput = document.getElementById('password');
        var strengthIndicator = document.getElementById('passwordStrength');
        
        if (passwordInput && strengthIndicator) {
          passwordInput.addEventListener('input', function() {
            var password = this.value;
            
            if (password.length === 0) {
              strengthIndicator.style.display = 'none';
              strengthIndicator.className = 'password-strength';
              return;
            }
            
            strengthIndicator.style.display = 'block';
            
            var strength = 0;
            if (password.length >= 8) strength++;
            if (password.match(/[a-z]/) && password.match(/[A-Z]/)) strength++;
            if (password.match(/[0-9]/)) strength++;
            if (password.match(/[^a-zA-Z0-9]/)) strength++;
            
            strengthIndicator.className = 'password-strength';
            if (strength <= 2) {
              strengthIndicator.classList.add('weak');
            } else if (strength === 3) {
              strengthIndicator.classList.add('medium');
            } else {
              strengthIndicator.classList.add('strong');
            }
          });
        }
        
        // Password confirmation validation
        var confirmPasswordInput = document.getElementById('confirm_password');
        if (passwordInput && confirmPasswordInput) {
          confirmPasswordInput.addEventListener('input', function() {
            if (this.value !== passwordInput.value) {
              this.setCustomValidity('Password tidak cocok');
            } else {
              this.setCustomValidity('');
            }
          });
          
          passwordInput.addEventListener('input', function() {
            if (confirmPasswordInput.value && confirmPasswordInput.value !== this.value) {
              confirmPasswordInput.setCustomValidity('Password tidak cocok');
            } else {
              confirmPasswordInput.setCustomValidity('');
            }
          });
        }
        
        // Form validation feedback
        var form = document.querySelector('form');
        if (form) {
          form.addEventListener('submit', function(e) {
            var btn = form.querySelector('.btn-register');
            if (btn) {
              btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Membuat Akun...';
              btn.disabled = true;
            }
          });
        }
        
        // Auto dismiss alerts after 5 seconds
        var alerts = document.querySelectorAll('.alert');
        alerts.forEach(function(alert) {
          setTimeout(function() {
            alert.style.transition = 'opacity 0.5s ease';
            alert.style.opacity = '0';
            setTimeout(function() {
              alert.remove();
            }, 500);
          }, 5000);
        });
      })();