  script.
    (function() {
      // Stagger animation for cards
      var sportCards = document.querySelectorAll('.sport-card');
      sportCards.forEach(function(card, index) {
        card.style.animationDelay = (index * 0.1) + 's';
      });
      
      // Enhanced parallax effect
      window.addEventListener('scroll', function() {
        var hero = document.querySelector('.sports-hero');
        var illustration = document.querySelector('.hero-illustration');
        
        if (hero) {
          var scrolled = window.pageYOffset || document.documentElement.scrollTop;
          if (scrolled < 800) {
            var heroParallax = scrolled * 0.25;
            hero.style.transform = 'translateY(' + heroParallax + 'px)';
            
            if (illustration) {
              var illustrationParallax = scrolled * 0.1;
              illustration.style.transform = 'translateY(' + illustrationParallax + 'px) rotate(' + (scrolled * 0.05) + 'deg)';
            }
          }
        }
      });
      
      // Click analytics with animation
      sportCards.forEach(function(card) {
        card.addEventListener('click', function(e) {
          var sportName = this.querySelector('.sport-name');
          if (sportName) {
            // Add click animation
            this.style.transform = 'translateY(-15px) scale(1.03)';
            setTimeout(() => {
              this.style.transform = '';
            }, 300);
            
            // Analytics (optional)
            console.log('Sport selected:', sportName.textContent);
          }
        });
      });
      
      // Intersection Observer for scroll animations
      if ('IntersectionObserver' in window) {
        var observerOptions = {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px'
        };
        
        var cardObserver = new IntersectionObserver(function(entries) {
          entries.forEach(function(entry) {
            if (entry.isIntersecting) {
              entry.target.style.opacity = '1';
              entry.target.style.transform = 'translateY(0) scale(1)';
              
              // Add glow effect
              entry.target.style.boxShadow = '0 25px 50px rgba(0, 149, 255, 0.15)';
              setTimeout(() => {
                if (entry.target.style.boxShadow.includes('0 25px 50px')) {
                  entry.target.style.boxShadow = '';
                }
              }, 1000);
            }
          });
        }, observerOptions);
        
        // Observe cards
        sportCards.forEach(function(card) {
          cardObserver.observe(card);
        });
        
        // Observe stats section
        var statsSection = document.querySelector('.stats-section');
        if (statsSection) {
          var statsObserver = new IntersectionObserver(function(entries) {
            entries.forEach(function(entry) {
              if (entry.isIntersecting) {
                // Animate stat numbers
                var statNumbers = entry.target.querySelectorAll('.stat-number');
                statNumbers.forEach(function(stat, index) {
                  setTimeout(function() {
                    var originalText = stat.textContent;
                    if (!originalText.includes('+') && !isNaN(parseInt(originalText))) {
                      var finalValue = parseInt(originalText);
                      var startValue = 0;
                      var duration = 1500;
                      var startTime = null;
                      
                      function animateNumber(currentTime) {
                        if (!startTime) startTime = currentTime;
                        var progress = currentTime - startTime;
                        var percentage = Math.min(progress / duration, 1);
                        
                        // Easing function
                        var easeOutCubic = 1 - Math.pow(1 - percentage, 3);
                        var currentValue = Math.floor(easeOutCubic * finalValue);
                        
                        stat.textContent = currentValue;
                        
                        if (percentage < 1) {
                          requestAnimationFrame(animateNumber);
                        } else {
                          stat.textContent = originalText;
                        }
                      }
                      
                      requestAnimationFrame(animateNumber);
                    }
                  }, index * 300);
                });
              }
            });
          }, { threshold: 0.5 });
          
          statsObserver.observe(statsSection);
        }
      }
      
      // Hover sound effect simulation (optional)
      sportCards.forEach(function(card) {
        card.addEventListener('mouseenter', function() {
          this.style.transition = 'all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1)';
          this.style.zIndex = '10';
        });
        
        card.addEventListener('mouseleave', function() {
          this.style.zIndex = '1';
        });
      });
    })();