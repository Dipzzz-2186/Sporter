  script.
    // Open order detail modal
    async function openOrderDetail(orderId) {
      try {
        const response = await fetch(`/seller/orders/${orderId}/detail`);
        const data = await response.json();
        
        // Create modal for order detail
        const modalHtml = `
          <div class="modal fade" id="orderDetailModal" tabindex="-1">
            <div class="modal-dialog modal-lg modal-dialog-centered">
              <div class="modal-content" style="border-radius: 22px; border: 2px solid var(--gray-200);">
                <div class="modal-header" style="background: linear-gradient(135deg, var(--gray-50) 0%, var(--gray-100) 100%); border-bottom: 2px solid var(--gray-200);">
                  <h5 class="modal-title">
                    <i class="bi bi-receipt me-2"></i>
                    Detail Pesanan #${data.id}
                  </h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-0">
                  <div class="p-3" style="background: var(--gray-50); border-bottom: 1px solid var(--gray-200);">
                    <div class="row">
                      <div class="col-md-6">
                        <strong>Pembeli:</strong> ${data.buyer_name || '-'}
                      </div>
                      <div class="col-md-6">
                        <strong>Status:</strong> 
                        <span class="badge ${
                          data.status === 'paid' ? 'bg-primary' : 
                          data.status === 'shipped' ? 'bg-info' : 
                          data.status === 'delivered' ? 'bg-success' : 'bg-warning'
                        }">
                          ${data.status}
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="p-3">
                    <strong>Total:</strong> Rp ${Number(data.total).toLocaleString('id-ID')}
                  </div>
                </div>
                <div class="modal-footer">
                  <a href="/seller/orders/${orderId}" class="btn btn-primary" style="background: var(--gradient-primary); border: none;">
                    <i class="bi bi-eye me-2"></i>
                    Lihat Detail Lengkap
                  </a>
                  <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Tutup</button>
                </div>
              </div>
            </div>
          </div>
        `;
        
        // Add modal to DOM
        document.body.insertAdjacentHTML('beforeend', modalHtml);
        
        // Show modal
        const modal = new bootstrap.Modal(document.getElementById('orderDetailModal'));
        modal.show();
        
        // Remove modal on hide
        document.getElementById('orderDetailModal').addEventListener('hidden.bs.modal', function() {
          this.remove();
        });
        
      } catch (error) {
        console.error('Error:', error);
        alert('Gagal memuat detail pesanan');
      }
    }
    
    // Initialize dashboard
    document.addEventListener('DOMContentLoaded', function() {
      // Add click animations to stat cards
      const statCards = document.querySelectorAll('.stat-card');
      statCards.forEach(card => {
        card.addEventListener('click', function() {
          this.style.transform = 'translateY(-8px) scale(1.02)';
          setTimeout(() => {
            this.style.transform = 'translateY(-8px)';
          }, 150);
        });
      });
      
      // Add row hover effects
      const tableRows = document.querySelectorAll('.modern-table tbody tr');
      tableRows.forEach(row => {
        row.addEventListener('mouseenter', function() {
          this.style.transform = 'translateX(4px)';
        });
        
        row.addEventListener('mouseleave', function() {
          this.style.transform = 'translateX(0)';
        });
      });
      
      // Update quick stats with live data
      updateQuickStats();
    });
    
    // Update quick stats every minute
    function updateQuickStats() {
      setTimeout(async function() {
        try {
          const response = await fetch('/seller/dashboard/stats');
          const data = await response.json();
          
          // Update today's orders
          const todayOrders = document.querySelector('.quick-stat:nth-child(1) .quick-stat-value');
          if (todayOrders) {
            todayOrders.textContent = data.ordersToday || 0;
          }
          
          // Update today's revenue
          const todayRevenue = document.querySelector('.quick-stat:nth-child(2) .quick-stat-value');
          if (todayRevenue) {
            todayRevenue.textContent = 'Rp ' + (data.revenueToday || 0).toLocaleString('id-ID');
          }
        } catch (error) {
          console.error('Failed to update stats:', error);
        }
        
        // Update again in 60 seconds
        updateQuickStats();
      }, 60000);
    }