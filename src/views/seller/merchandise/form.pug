extends ../../layout/main

block content
  style.
    :root {
      --primary-color: #0095FF;
      --primary-dark: #0066CC;
      --primary-light: #34C7FF;
      --secondary-dark: #0B1F3F;
      --secondary-light: #152844;
      --accent-color: #FF6B35;
      --success-color: #00CC88;
      --warning-color: #FFAA00;
      --danger-color: #FF4757;
      --gray-50: #F8FAFC;
      --gray-100: #F1F5F9;
      --gray-200: #E2E8F0;
      --gray-300: #CBD5E1;
      --gray-400: #94A3B8;
      --gray-500: #64748B;
      --gray-600: #475569;
      --gray-700: #334155;
      --gray-800: #1E293B;
      --gray-900: #0F172A;
      --shadow-sm: 0 2px 8px rgba(0, 149, 255, 0.08);
      --shadow-md: 0 8px 25px rgba(0, 149, 255, 0.12);
      --shadow-lg: 0 15px 35px rgba(0, 149, 255, 0.15);
      --shadow-xl: 0 25px 50px rgba(0, 149, 255, 0.2);
      --gradient-primary: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
      --gradient-secondary: linear-gradient(135deg, var(--secondary-dark) 0%, var(--secondary-light) 100%);
      --gradient-accent: linear-gradient(135deg, var(--accent-color) 0%, #FF8E53 100%);
    }

    /* Form Hero Section */
    .form-hero {
      background: var(--gradient-secondary);
      padding: 3rem 0;
      margin-bottom: 2.5rem;
      border-radius: 0 0 30px 30px;
      color: white;
      position: relative;
      overflow: hidden;
      animation: fadeIn 0.8s ease-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .form-hero::before {
      content: '';
      position: absolute;
      top: -30%;
      right: -20%;
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, rgba(0, 149, 255, 0.15) 0%, transparent 70%);
      border-radius: 50%;
    }

    .form-hero-content {
      position: relative;
      z-index: 2;
    }

    .form-title {
      font-size: 2.5rem;
      font-weight: 800;
      margin-bottom: 0.75rem;
      color: white;
      background: linear-gradient(135deg, #FFFFFF 0%, var(--primary-light) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .form-subtitle {
      color: rgba(255, 255, 255, 0.9);
      font-size: 1.1rem;
      margin-bottom: 0;
      max-width: 600px;
    }

    /* Form Container */
    .form-container {
      background: white;
      border-radius: 24px;
      padding: 3rem;
      box-shadow: var(--shadow-xl);
      border: 2px solid var(--gray-200);
      margin-bottom: 3rem;
      animation: slideInUp 0.6s ease-out;
    }

    @keyframes slideInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }

    /* Form Layout */
    .form-layout {
      display: grid;
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .form-section {
      background: var(--gray-50);
      border-radius: 20px;
      padding: 2rem;
      border: 2px solid var(--gray-200);
    }

    .section-title {
      font-size: 1.25rem;
      font-weight: 800;
      color: var(--secondary-dark);
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding-bottom: 0.75rem;
      border-bottom: 2px solid var(--gray-200);
    }

    .section-title i {
      color: var(--primary-color);
      font-size: 1.2rem;
    }

    /* Form Groups */
    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-label {
      font-weight: 700;
      color: var(--gray-800);
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.95rem;
    }

    .form-label i {
      color: var(--primary-color);
      font-size: 0.9rem;
    }

    .required::after {
      content: '*';
      color: var(--danger-color);
      margin-left: 0.25rem;
    }

    /* Form Controls */
    .form-control, .form-select, .form-textarea {
      width: 100%;
      padding: 1rem 1.25rem;
      border: 2px solid var(--gray-300);
      border-radius: 15px;
      font-size: 1rem;
      transition: all 0.3s ease;
      background: white;
      color: var(--gray-800);
    }

    .form-control:focus, .form-select:focus, .form-textarea:focus {
      outline: none;
      border-color: var(--primary-color);
      box-shadow: 0 0 0 4px rgba(0, 149, 255, 0.1);
      transform: translateY(-2px);
    }

    .form-textarea {
      resize: vertical;
      min-height: 120px;
      line-height: 1.6;
    }

    /* File Upload Styling */
    .file-upload-container {
      position: relative;
      overflow: hidden;
    }

    .file-upload-input {
      position: absolute;
      top: 0;
      left: 0;
      opacity: 0;
      width: 100%;
      height: 100%;
      cursor: pointer;
    }

    .file-upload-label {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
      background: linear-gradient(135deg, var(--gray-50) 0%, var(--gray-100) 100%);
      border: 3px dashed var(--gray-300);
      border-radius: 15px;
      color: var(--gray-600);
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      text-align: center;
      flex-direction: column;
      gap: 1rem;
    }

    .file-upload-label:hover {
      border-color: var(--primary-color);
      background: linear-gradient(135deg, rgba(0, 149, 255, 0.05) 0%, rgba(52, 199, 255, 0.05) 100%);
      transform: translateY(-2px);
    }

    .file-upload-label i {
      font-size: 2.5rem;
      color: var(--primary-color);
    }

    /* Image Preview */
    .image-preview-container {
      margin-top: 1.5rem;
    }

    .preview-title {
      font-weight: 600;
      color: var(--gray-700);
      margin-bottom: 0.75rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .image-preview {
      max-width: 300px;
      border-radius: 16px;
      border: 2px solid var(--gray-200);
      box-shadow: var(--shadow-md);
      transition: all 0.3s ease;
    }

    .image-preview:hover {
      transform: scale(1.02);
      box-shadow: var(--shadow-lg);
    }

    /* Price Input Styling */
    .price-container {
      position: relative;
    }

    .price-prefix {
      position: absolute;
      left: 1.25rem;
      top: 50%;
      transform: translateY(-50%);
      color: var(--primary-color);
      font-weight: 700;
      font-size: 1rem;
    }

    .price-input {
      padding-left: 3.5rem;
    }

    /* Stock Status */
    .stock-status {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin-top: 0.5rem;
      padding: 0.75rem;
      border-radius: 12px;
      background: var(--gray-50);
      border: 1px solid var(--gray-200);
    }

    .stock-icon {
      width: 40px;
      height: 40px;
      border-radius: 10px;
      background: var(--gradient-primary);
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.2rem;
    }

    .stock-info h6 {
      font-weight: 700;
      color: var(--gray-800);
      margin-bottom: 0.25rem;
      font-size: 0.9rem;
    }

    .stock-info p {
      font-size: 0.85rem;
      color: var(--gray-600);
      margin: 0;
    }

    /* Form Actions */
    .form-actions {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 1.5rem;
      margin-top: 3rem;
      padding-top: 2rem;
      border-top: 2px solid var(--gray-200);
    }

    .btn-back {
      background: white;
      color: var(--gray-700);
      border: 2px solid var(--gray-300);
      padding: 1rem 2rem;
      border-radius: 15px;
      font-weight: 700;
      font-size: 1rem;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      transition: all 0.3s ease;
    }

    .btn-back:hover {
      background: var(--gray-50);
      color: var(--gray-800);
      border-color: var(--gray-400);
      transform: translateX(-3px);
    }

    .btn-submit {
      background: var(--gradient-primary);
      color: white;
      border: none;
      padding: 1rem 2.5rem;
      border-radius: 15px;
      font-weight: 700;
      font-size: 1rem;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      box-shadow: 0 6px 20px rgba(0, 149, 255, 0.3);
    }

    .btn-submit:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 25px rgba(0, 149, 255, 0.4);
    }

    .btn-submit:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none;
    }

    /* Alert Styling */
    .alert-container {
      margin-bottom: 2rem;
      animation: fadeIn 0.5s ease-out;
    }

    .alert {
      border-radius: 15px;
      border: 2px solid transparent;
      padding: 1.25rem 1.5rem;
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .alert-danger {
      background: linear-gradient(135deg, rgba(255, 71, 87, 0.1) 0%, rgba(255, 107, 53, 0.1) 100%);
      border-color: var(--danger-color);
      color: var(--danger-color);
    }

    .alert-success {
      background: linear-gradient(135deg, rgba(0, 204, 136, 0.1) 0%, rgba(0, 230, 153, 0.1) 100%);
      border-color: var(--success-color);
      color: var(--success-color);
    }

    .alert i {
      font-size: 1.2rem;
    }

    /* Responsive Design */
    @media (max-width: 1200px) {
      .form-container {
        padding: 2.5rem;
      }
    }

    @media (max-width: 992px) {
      .form-hero {
        padding: 2.5rem 0;
        border-radius: 0 0 24px 24px;
      }

      .form-title {
        font-size: 2rem;
      }

      .form-container {
        padding: 2rem;
      }

      .form-actions {
        flex-direction: column;
        align-items: stretch;
      }

      .btn-back, .btn-submit {
        width: 100%;
        text-align: center;
        justify-content: center;
      }
    }

    @media (max-width: 768px) {
      .form-hero {
        padding: 2rem 0;
      }

      .form-title {
        font-size: 1.75rem;
      }

      .form-subtitle {
        font-size: 1rem;
      }

      .form-container {
        padding: 1.5rem;
      }

      .form-section {
        padding: 1.5rem;
      }

      .section-title {
        font-size: 1.1rem;
      }

      .form-control, .form-select, .form-textarea {
        padding: 0.875rem 1rem;
      }
    }

    @media (max-width: 576px) {
      .form-hero {
        padding: 1.5rem 0;
        border-radius: 0 0 20px 20px;
      }

      .form-title {
        font-size: 1.5rem;
      }

      .form-layout {
        gap: 1.5rem;
      }
    }

    /* Loading State */
    .loading-spinner {
      display: inline-block;
      width: 20px;
      height: 20px;
      border: 2px solid rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      border-top-color: white;
      animation: spin 0.8s linear infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

  // FORM HERO
  .form-hero
    .container
      .form-hero-content
        if mode === 'edit'
          h1.form-title Edit Merchandise
          p.form-subtitle Perbarui informasi produk merchandise Anda dengan data yang terbaru
        else
          h1.form-title Tambah Merchandise Baru
          p.form-subtitle Isi form berikut untuk menambahkan produk merchandise baru ke marketplace SPORTER

  .container

    // ALERTS
    .alert-container
      if flash && flash.error && flash.error.length
        each msg in flash.error
          .alert.alert-danger
            i.bi.bi-exclamation-triangle-fill
            div= msg
      
      if flash && flash.success && flash.success.length
        each msg in flash.success
          .alert.alert-success
            i.bi.bi-check-circle-fill
            div= msg

    // FORM
    .form-container
      form(
        method="post"
        enctype="multipart/form-data"
        action= mode === 'edit'
          ? `/seller/merchandise/${merchandise.id}/edit`
          : '/seller/merchandise/create'
        id="merchandiseForm"
        onsubmit="return handleSubmit(event)"
      )

        .form-layout
          // SECTION 1: PRODUCT INFO
          .form-section
            .section-title
              i.bi.bi-info-circle-fill
              | Informasi Produk
            
            .row.g-3
              .col-md-8
                .form-group
                  label.form-label.required(for="productName")
                    i.bi.bi-tag
                    | Nama Produk
                  input.form-control(
                    type="text"
                    id="productName"
                    name="name"
                    required
                    value=merchandise.name || ''
                    placeholder="Contoh: Jersey Tim Nasional 2024"
                    maxlength="100"
                  )
                  .form-text.text-muted.mt-1
                    | Nama produk yang menarik akan meningkatkan penjualan (maks. 100 karakter)
              
              .col-md-4
                .form-group
                  label.form-label.required(for="sportSelect")
                    i.bi.bi-trophy
                    | Cabang Olahraga
                  select.form-select(
                    id="sportSelect"
                    name="sport_id"
                    required
                  )
                    option(value="") Pilih Cabang Olahraga
                    each s in sports
                      option(
                        value=s.id
                        selected=(merchandise.sport_id && merchandise.sport_id == s.id)
                      )= s.name
              
              .col-12
                .form-group
                  label.form-label.required(for="productDescription")
                    i.bi.bi-card-text
                    | Deskripsi Produk
                  textarea.form-control.form-textarea(
                    id="productDescription"
                    name="description"
                    rows="5"
                    required
                    placeholder="Deskripsi lengkap produk, fitur, spesifikasi, dan keunggulan..."
                  )= merchandise.description || ''
                  .form-text.text-muted.mt-1
                    | Buat deskripsi yang informatif dan menarik untuk calon pembeli

          // SECTION 2: PRICE & STOCK
          .form-section
            .section-title
              i.bi.bi-cash-stack
              | Harga & Stok
            
            .row.g-3
              .col-md-6
                .form-group
                  label.form-label.required(for="productPrice")
                    i.bi.bi-currency-exchange
                    | Harga (Rp)
                  .price-container
                    span.price-prefix Rp
                    input.form-control.price-input(
                      type="number"
                      id="productPrice"
                      name="price"
                      min="0"
                      required
                      value=merchandise.price || ''
                      placeholder="0"
                      oninput="formatPrice(this)"
                    )
                  .form-text.text-muted.mt-1
                    | Harga produk dalam Rupiah
              
              .col-md-6
                .form-group
                  label.form-label.required(for="productStock")
                    i.bi.bi-box
                    | Stok Tersedia
                  input.form-control(
                    type="number"
                    id="productStock"
                    name="stock"
                    min="0"
                    required
                    value=merchandise.stock || 0
                    placeholder="0"
                    oninput="updateStockStatus(this.value)"
                  )
                  .stock-status(id="stockStatus")
                    .stock-icon
                      i.bi.bi-check-lg
                    .stock-info
                      h6 Stok Tersedia
                      p(id="stockMessage") Masukkan jumlah stok yang tersedia

          // SECTION 3: STATUS & IMAGE
          .form-section
            .section-title
              i.bi.bi-gear-fill
              | Status & Media
            
            .row.g-3
              .col-md-6
                .form-group
                  label.form-label.required(for="productStatus")
                    i.bi.bi-toggle-on
                    | Status Produk
                  select.form-select(
                    id="productStatus"
                    name="status"
                    required
                  )
                    option(
                      value="active"
                      selected=!merchandise.status || merchandise.status === 'active'
                    ) 
                      i.bi.bi-check-circle-fill.me-1
                      | Aktif (Tersedia untuk dijual)
                    option(
                      value="inactive"
                      selected=merchandise.status === 'inactive'
                    ) 
                      i.bi.bi-x-circle-fill.me-1
                      | Tidak Aktif (Sembunyikan dari store)
              
              .col-md-6
                .form-group
                  label.form-label(for="productImage")
                    i.bi.bi-camera-fill
                    | Foto Produk
                  .file-upload-container
                    input.file-upload-input(
                      type="file"
                      id="productImage"
                      name="image"
                      accept="image/*"
                      onchange="previewImage(this)"
                    )
                    label.file-upload-label(for="productImage")
                      i.bi.bi-cloud-arrow-up
                      div
                        | Klik untuk mengunggah gambar
                        br
                        small.text-muted Format: JPG, PNG, WebP (maks. 5MB)
                  
                  .image-preview-container(id="imagePreviewContainer")
                    .preview-title
                      i.bi.bi-image-fill
                      | Preview Gambar
                    if mode === 'edit' && merchandise.image_url
                      img.image-preview(
                        src=merchandise.image_url
                        alt="Preview"
                        id="imagePreview"
                      )
                    else
                      img.image-preview(
                        style="display:none"
                        id="imagePreview"
                      )
                    .form-text.text-muted.mt-1
                      | Rekomendasi: Rasio 1:1, resolusi minimal 800x800px

        // FORM ACTIONS
        .form-actions
          a.btn-back(href="/seller/merchandise")
            i.bi.bi-arrow-left
            | Kembali ke Daftar Merchandise
          
          button.btn-submit(type="submit" id="submitBtn")
            if mode === 'edit'
              i.bi.bi-save-fill
              | Simpan Perubahan
            else
              i.bi.bi-plus-lg
              | Tambah Merchandise

  script.
    // Format price input
    function formatPrice(input) {
      const value = parseInt(input.value) || 0;
      input.value = value;
      
      // Show formatted value as placeholder
      const formatted = new Intl.NumberFormat('id-ID').format(value);
      input.setAttribute('data-formatted', formatted);
    }
    
    // Update stock status message
    function updateStockStatus(stock) {
      const stockNum = parseInt(stock) || 0;
      const statusElement = document.getElementById('stockStatus');
      const messageElement = document.getElementById('stockMessage');
      const iconElement = statusElement.querySelector('.stock-icon i');
      
      let message = '';
      let icon = 'bi-check-lg';
      let color = '#00CC88';
      
      if (stockNum === 0) {
        message = 'Stok habis. Produk tidak akan muncul di store.';
        icon = 'bi-x-lg';
        color = '#FF4757';
      } else if (stockNum < 10) {
        message = 'Stok rendah. Pertimbangkan untuk menambah stok.';
        icon = 'bi-exclamation-triangle';
        color = '#FFAA00';
      } else if (stockNum <= 50) {
        message = 'Stok sedang. Pantau persediaan secara berkala.';
        icon = 'bi-info-circle';
        color = '#0095FF';
      } else {
        message = 'Stok tinggi. Produk siap untuk dijual.';
        icon = 'bi-check-lg';
        color = '#00CC88';
      }
      
      messageElement.textContent = message;
      iconElement.className = `bi ${icon}`;
      statusElement.querySelector('.stock-icon').style.background = `linear-gradient(135deg, ${color} 0%, ${color}80 100%)`;
    }
    
    // Preview uploaded image
    function previewImage(input) {
      const previewContainer = document.getElementById('imagePreviewContainer');
      const preview = document.getElementById('imagePreview');
      const file = input.files[0];
      
      if (file) {
        // Check file size (max 5MB)
        if (file.size > 5 * 1024 * 1024) {
          alert('Ukuran file terlalu besar. Maksimal 5MB.');
          input.value = '';
          return;
        }
        
        // Check file type
        if (!file.type.match('image.*')) {
          alert('Format file tidak didukung. Harap unggah gambar.');
          input.value = '';
          return;
        }
        
        const reader = new FileReader();
        reader.onload = function(e) {
          preview.src = e.target.result;
          preview.style.display = 'block';
          previewContainer.style.display = 'block';
        };
        reader.readAsDataURL(file);
      }
    }
    
    // Form submission handler
    function handleSubmit(event) {
      const form = event.target;
      const submitBtn = document.getElementById('submitBtn');
      const originalText = submitBtn.innerHTML;
      
      // Basic validation
      const name = form.querySelector('#productName').value.trim();
      const price = parseInt(form.querySelector('#productPrice').value);
      const stock = parseInt(form.querySelector('#productStock').value);
      
      if (!name) {
        alert('Nama produk harus diisi');
        return false;
      }
      
      if (price < 0) {
        alert('Harga tidak boleh negatif');
        return false;
      }
      
      if (stock < 0) {
        alert('Stok tidak boleh negatif');
        return false;
      }
      
      // Show loading state
      submitBtn.disabled = true;
      submitBtn.innerHTML = `
        <div class="loading-spinner"></div>
        ${mode === 'edit' ? 'Menyimpan...' : 'Menambahkan...'}
      `;
      
      return true;
    }
    
    // Initialize form
    document.addEventListener('DOMContentLoaded', function() {
      // Initialize stock status
      const initialStock = document.getElementById('productStock').value;
      updateStockStatus(initialStock);
      
      // Initialize price formatting
      const priceInput = document.getElementById('productPrice');
      if (priceInput.value) {
        formatPrice(priceInput);
      }
      
      // Show image preview if editing
      if (mode === 'edit' && '#{merchandise.image_url}') {
        document.getElementById('imagePreviewContainer').style.display = 'block';
      }
      
      // Add character counter for description
      const descInput = document.getElementById('productDescription');
      if (descInput) {
        const counter = document.createElement('div');
        counter.className = 'form-text text-muted mt-1 text-end';
        counter.id = 'charCounter';
        counter.textContent = `${descInput.value.length} / 2000 karakter`;
        descInput.parentNode.appendChild(counter);
        
        descInput.addEventListener('input', function() {
          counter.textContent = `${this.value.length} / 2000 karakter`;
          if (this.value.length > 2000) {
            counter.style.color = 'var(--danger-color)';
          } else {
            counter.style.color = 'var(--gray-600)';
          }
        });
      }
      
      // Add price formatting on load
      priceInput.addEventListener('blur', function() {
        const value = parseInt(this.value) || 0;
        this.value = value.toLocaleString('id-ID');
      });
      
      priceInput.addEventListener('focus', function() {
        const value = this.value.replace(/\./g, '');
        this.value = value;
      });
    });
    
    // Keyboard shortcuts
    document.addEventListener('keydown', function(e) {
      // Ctrl/Cmd + S to save
      if ((e.ctrlKey || e.metaKey) && e.key === 's') {
        e.preventDefault();
        document.getElementById('submitBtn').click();
      }
      
      // Ctrl/Cmd + B to go back
      if ((e.ctrlKey || e.metaKey) && e.key === 'b') {
        e.preventDefault();
        window.location.href = '/seller/merchandise';
      }
      
      // Escape to cancel
