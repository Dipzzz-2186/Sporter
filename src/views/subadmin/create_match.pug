        .filter(o => o.value)                 // buang placeholder
        .filter(o => !o.disabled && !o.hidden) // hanya yang valid sesuai filter sport/mode
        .map(o => `<option value="${o.value}">${o.textContent}</option>`)
        .join('');
    }

      function refreshParticipantSelects(keepSelected = true) {
        if (!participantsList) return;

        var optionsHtml = buildParticipantOptionsHtml();
        var selects = participantsList.querySelectorAll('select[name="participant_ids[]"]');

        selects.forEach(function(sel) {
          var prev = sel.value;
          sel.innerHTML =
            `<option value="" selected disabled>-- Pilih peserta --</option>` +
            optionsHtml;

          if (keepSelected && prev && Array.from(sel.options).some(o => o.value === prev)) {
            sel.value = prev;
          } else {
            sel.value = '';
          }
        });
      }


