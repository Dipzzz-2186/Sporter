            var flag = opt.getAttribute('data-is-individual');

            // kalau belum ada kolom is_individual, jangan filter biar gak kosong
            if (!flag) {
              opt.hidden = false;
              opt.disabled = false;
              return;
            }

            var ok = (flag === needIsIndividual);
            opt.hidden = !ok;
            opt.disabled = !ok;
          });

          // kalau value yg kepilih gak sesuai mode → reset
          if (sel.value) {
            var selected = sel.options[sel.selectedIndex];
            var selectedFlag = selected ? selected.getAttribute('data-is-individual') : null;
            if (selectedFlag && selectedFlag !== needIsIndividual) {
              sel.value = '';
            }
          }
        });
      }
