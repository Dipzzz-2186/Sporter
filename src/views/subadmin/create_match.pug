      function filterTeamsByMode() {
        if (!homeSelect || !awaySelect || !modeTeam || !modeInd) return;

        var mode = modeInd.checked ? 'individual' : 'team';
        var needIsIndividual = (mode === 'individual') ? '1' : '0';

        [homeSelect, awaySelect].forEach(function(sel) {
          Array.from(sel.options).forEach(function(opt) {
