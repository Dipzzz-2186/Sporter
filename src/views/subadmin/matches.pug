extends ../layout/main

block content
  style.
    /* ========== GLOBAL STYLES ========== */
    .matches-page {
      background: linear-gradient(135deg, #f0f4f8 0%, #e2e8f0 100%);
      min-height: 100vh;
      padding: 2.5rem 0;
    }

    /* ========== HEADER SECTION ========== */
    .matches-header {
      background: linear-gradient(135deg, #0B1F3F 0%, #1a365d 100%);
      border-radius: 20px;
      padding: 2.5rem;
      margin-bottom: 2rem;
      color: white;
      box-shadow: 0 20px 50px rgba(11, 31, 63, 0.25);
      position: relative;
      overflow: hidden;
      animation: fadeInDown 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .matches-header::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -10%;
      width: 500px;
      height: 500px;
      background: radial-gradient(circle, rgba(0, 149, 255, 0.15) 0%, transparent 70%);
      border-radius: 50%;
      pointer-events: none;
    }

    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .matches-header h1 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.8rem;
      letter-spacing: 2px;
      margin-bottom: 0.5rem;
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      position: relative;
      z-index: 1;
      text-shadow: 0 2px 10px rgba(0, 149, 255, 0.3);
    }

    .matches-header h1 i {
      display: inline-block;
      animation: trophy-bounce 2s ease-in-out infinite;
    }

    @keyframes trophy-bounce {
      0%, 100% { transform: translateY(0) rotate(0deg); }
      25% { transform: translateY(-5px) rotate(-5deg); }
      75% { transform: translateY(-3px) rotate(5deg); }
    }

    .matches-header p {
      color: rgba(255, 255, 255, 0.8);
      font-size: 1.05rem;
      margin: 0;
      position: relative;
      z-index: 1;
    }

    .btn-secondary {
      background: rgba(255, 255, 255, 0.15);
      border: 2px solid rgba(255, 255, 255, 0.3);
      color: white;
      padding: 0.7rem 1.3rem;
      border-radius: 12px;
      font-weight: 600;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      backdrop-filter: blur(10px);
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-secondary:hover {
      background: rgba(255, 255, 255, 0.25);
      border-color: rgba(255, 255, 255, 0.5);
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
      color: white;
    }

    .btn-add-match {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      border: none;
      color: white;
      padding: 0.9rem 1.8rem;
      border-radius: 14px;
      font-weight: 600;
      font-size: 1rem;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 6px 20px rgba(0, 149, 255, 0.4);
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.6rem;
      position: relative;
      overflow: hidden;
    }

    .btn-add-match::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.3);
      transform: translate(-50%, -50%);
      transition: width 0.6s, height 0.6s;
    }

    .btn-add-match:hover::before {
      width: 300px;
      height: 300px;
    }

    .btn-add-match:hover {
      transform: translateY(-3px) scale(1.02);
      box-shadow: 0 10px 30px rgba(0, 149, 255, 0.5);
      color: white;
    }

    .btn-add-match i {
      font-size: 1.2rem;
      transition: transform 0.3s ease;
    }

    .btn-add-match:hover i {
      transform: rotate(90deg);
    }

    /* ========== ALERTS ========== */
    .alert {
      border-radius: 14px;
      border: none;
      padding: 1.2rem 1.5rem;
      margin-bottom: 1.5rem;
      animation: slideInDown 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      display: flex;
      align-items: center;
      gap: 1rem;
      backdrop-filter: blur(10px);
    }

    @keyframes slideInDown {
      from {
        opacity: 0;
        transform: translateY(-30px) scale(0.95);
      }
      to {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }

    .alert-danger {
      background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
      color: #991b1b;
      border-left: 5px solid #dc2626;
      box-shadow: 0 4px 15px rgba(220, 38, 38, 0.2);
    }

    .alert-success {
      background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
      color: #065f46;
      border-left: 5px solid #059669;
      box-shadow: 0 4px 15px rgba(5, 150, 105, 0.2);
    }

    .alert i {
      font-size: 1.4rem;
      animation: pulse-icon 2s ease-in-out infinite;
    }

    @keyframes pulse-icon {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.1); }
    }

    /* ========== FILTER SECTION ========== */
    .filter-card {
      background: white;
      border-radius: 20px;
      border: none;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
      margin-bottom: 2rem;
      animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.2s backwards;
      overflow: hidden;
      transition: all 0.3s ease;
    }

    .filter-card:hover {
      box-shadow: 0 15px 50px rgba(0, 0, 0, 0.12);
      transform: translateY(-2px);
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .filter-card .card-header {
      background: linear-gradient(135deg, #f8fafc 0%, #e8edf2 100%);
      border-bottom: 2px solid #e2e8f0;
      padding: 1.5rem 2rem;
    }

    .filter-title {
      display: flex;
      align-items: center;
      gap: 0.8rem;
      color: #0B1F3F;
      font-weight: 700;
      font-size: 1.2rem;
      margin: 0;
    }

    .filter-title i {
      font-size: 1.4rem;
      color: #0095FF;
      animation: filter-rotate 3s ease-in-out infinite;
    }

    @keyframes filter-rotate {
      0%, 100% { transform: rotate(0deg); }
      50% { transform: rotate(180deg); }
    }

    .filter-card .card-body {
      padding: 2rem;
    }

    .filter-form label {
      color: #0B1F3F;
      font-weight: 600;
      font-size: 0.95rem;
      margin-bottom: 0.6rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      transition: color 0.3s ease;
    }

    .filter-form label i {
      color: #0095FF;
      font-size: 1rem;
      transition: transform 0.3s ease;
    }

    .filter-form label:hover i {
      transform: scale(1.2);
    }

    .filter-form .form-select,
    .filter-form .form-control {
      border-radius: 12px;
      border: 2px solid #e2e8f0;
      padding: 0.85rem 1.1rem;
      font-size: 0.95rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      background-color: #f8fafc;
    }

    .filter-form .form-select:hover,
    .filter-form .form-control:hover {
      border-color: #cbd5e1;
      background-color: white;
    }

    .filter-form .form-select:focus,
    .filter-form .form-control:focus {
      border-color: #0095FF;
      box-shadow: 0 0 0 4px rgba(0, 149, 255, 0.15);
      outline: none;
      background-color: white;
      transform: translateY(-1px);
    }

    .filter-form .form-select {
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%230095FF' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m2 5 6 6 6-6'/%3e%3c/svg%3e");
      background-repeat: no-repeat;
      background-position: right 1rem center;
      background-size: 18px 14px;
      cursor: pointer;
    }

    .btn-filter {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      border: none;
      color: white;
      border-radius: 12px;
      padding: 0.85rem 1.5rem;
      font-weight: 600;
      font-size: 0.95rem;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 4px 15px rgba(0, 149, 255, 0.3);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.6rem;
      width: 100%;
      position: relative;
      overflow: hidden;
    }

    .btn-filter::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.3);
      transform: translate(-50%, -50%);
      transition: width 0.6s, height 0.6s;
    }

    .btn-filter:hover::before {
      width: 300px;
      height: 300px;
    }

    .btn-filter:hover {
      transform: translateY(-2px) scale(1.02);
      box-shadow: 0 8px 25px rgba(0, 149, 255, 0.4);
      color: white;
    }

    .btn-filter:active {
      transform: translateY(0) scale(0.98);
    }

    .btn-filter i {
      transition: transform 0.3s ease;
    }

    .btn-filter:hover i {
      transform: rotate(180deg);
    }

    /* ========== TABLE STYLES ========== */
    .matches-table-card {
      background: white;
      border-radius: 20px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
      animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.3s backwards;
      overflow: hidden;
      transition: all 0.3s ease;
    }

    .matches-table-card:hover {
      box-shadow: 0 15px 50px rgba(0, 0, 0, 0.12);
    }

    .matches-table-card .card-body {
      padding: 0;
    }

    .table-responsive {
      border-radius: 20px;
    }

    .matches-table {
      table-layout: fixed;
      width: 100%;
    }

    /* ID */
    .matches-table th:nth-child(1),
    .matches-table td:nth-child(1) {
      width: 70px;
      text-align: center;
    }

    /* Cabang */
    .matches-table th:nth-child(2),
    .matches-table td:nth-child(2) {
      width: 140px;
    }

    /* Waktu */
    .matches-table th:nth-child(5),
    .matches-table td:nth-child(5) {
      width: 180px;
    }

    /* Status */
    .matches-table th:nth-child(7),
    .matches-table td:nth-child(7) {
      width: 160px;
    }

    /* Aksi */
    .matches-table th:nth-child(8),
    .matches-table td:nth-child(8) {
      width: 180px;
    }


    .matches-table thead {
      background: linear-gradient(135deg, #0B1F3F 0%, #1a365d 100%);
      position: sticky;
      top: 0;
      z-index: 10;
    }

    .matches-table thead th {
      background: transparent !important; /* ikut parent */
      color: white !important;
      font-weight: 600;
      font-size: 0.9rem;
      padding: 1.3rem 1.2rem;
      border: none;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .match-title,
    .match-event,
    .match-teams {
      white-space: normal;
      word-break: break-word;
    }

    .vs-badge,
    .mode-chip,
    .status-badge {
      white-space: nowrap;
    }

    .matches-table thead th:first-child {
      border-top-left-radius: 20px;
    }

    .matches-table thead th:last-child {
      border-top-right-radius: 20px;
    }

    .matches-table thead th i {
      color: #34C7FF;
      margin-right: 0.3rem;
      font-size: 1rem;
    }

    .matches-table tbody tr {
      background: white;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      border-bottom: 1px solid #f1f5f9;
    }

    .matches-table tbody tr:hover {
      background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
      transform: translateX(5px);
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }

    .matches-table tbody td {
      padding: 1.2rem 1.2rem;
      vertical-align: middle;
      border: none;
      color: #334155;
      font-size: 0.9rem;
    }

    .match-id {
      font-weight: 700;
      color: #0095FF;
      background: linear-gradient(135deg, #e0f2fe 0%, #bae6fd 100%);
      padding: 0.4rem 0.8rem;
      border-radius: 8px;
      display: inline-block;
      font-size: 0.85rem;
      border: 2px solid #7dd3fc;
    }

    .sport-badge {
      background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
      color: #1e40af;
      padding: 0.5rem 1rem;
      border-radius: 10px;
      font-weight: 600;
      font-size: 0.85rem;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      border: 2px solid #93c5fd;
      transition: all 0.3s ease;
    }

    .sport-badge:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(30, 64, 175, 0.2);
    }

    .sport-badge i {
      font-size: 1rem;
      color: #2563eb;
      flex-shrink: 0;
    }

    .match-title {
      font-weight: 700;
      color: #0B1F3F;
      font-size: 1rem;
      margin-bottom: 0.3rem;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .match-event {
      color: #64748b;
      font-size: 0.85rem;
      display: flex;
      align-items: center;
      gap: 0.3rem;
      margin-top: 0.3rem;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .match-event i {
      color: #0095FF;
      font-size: 0.9rem;
    }

    .match-teams {
      display: inline-flex;
      align-items: center;
      gap: 0.8rem;
      font-weight: 600;
      color: #334155;
    }

    .match-teams span {
      display: inline-block;
      max-width: 120px;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .vs-badge {
      background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
      color: white;
      padding: 0.3rem 0.6rem;
      border-radius: 6px;
      font-size: 0.75rem;
      font-weight: 700;
      letter-spacing: 1px;
      box-shadow: 0 2px 8px rgba(239, 68, 68, 0.3);
      animation: vs-pulse 2s ease-in-out infinite;
      flex-shrink: 0;
    }

    @keyframes vs-pulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.05); }
    }

    .mode-chip {
      font-size: 0.7rem;
      font-weight: 700;
      padding: 0.3rem 0.6rem;
      border-radius: 999px;
      border: 2px solid #e5e7eb;
      color: #374151;
      background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
      display: inline-block;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .match-time {
      display: flex;
      flex-direction: column;
      gap: 0.3rem;
    }

    .match-time strong {
      color: #0B1F3F;
      font-size: 0.9rem;
    }

    .match-time small {
      color: #64748b;
      font-size: 0.8rem;
      display: flex;
      align-items: center;
      gap: 0.3rem;
    }

    .match-time small i {
      color: #0095FF;
    }

    .status-badge {
      padding: 0.5rem 1rem;
      border-radius: 10px;
      font-weight: 600;
      font-size: 0.85rem;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      transition: all 0.3s ease;
    }

    .status-badge:hover {
      transform: translateY(-2px);
    }

    .status-scheduled {
      background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
      color: #92400e;
      border: 2px solid #fbbf24;
    }

    .status-scheduled i {
      color: #f59e0b;
      animation: calendar-shake 2s ease-in-out infinite;
    }

    @keyframes calendar-shake {
      0%, 100% { transform: rotate(0deg); }
      25% { transform: rotate(-5deg); }
      75% { transform: rotate(5deg); }
    }

    .status-ongoing {
      background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%);
      color: #166534;
      border: 2px solid #4ade80;
    }

    .status-ongoing i {
      color: #22c55e;
      animation: broadcast-pulse 1.5s ease-in-out infinite;
    }

    @keyframes broadcast-pulse {
      0%, 100% { opacity: 1; transform: scale(1); }
      50% { opacity: 0.5; transform: scale(1.2); }
    }

    .status-finished {
      background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
      color: #1e40af;
      border: 2px solid #60a5fa;
    }

    .status-finished i {
      color: #3b82f6;
    }

    /* ========== ACTION BUTTONS ========== */
    .action-buttons {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      gap: 6px;
    }

    .action-buttons .action-main {
      display: flex;
      gap: 6px;
    }

    .action-buttons .action-icons {
      display: flex;
      gap: 6px;
    }

    .btn-action {
      width: 38px;
      height: 38px;
      border-radius: 10px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      border: 2px solid;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      cursor: pointer;
      position: relative;
      overflow: hidden;
    }

    .btn-action::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      transform: translate(-50%, -50%);
      transition: width 0.4s, height 0.4s;
    }

    .btn-action:hover::before {
      width: 100px;
      height: 100px;
    }

    .btn-action i {
      position: relative;
      z-index: 1;
      font-size: 1rem;
    }

    .btn-action-edit {
      background: white;
      border-color: #0095FF;
      color: #0095FF;
    }

    .btn-action-edit::before {
      background: rgba(0, 149, 255, 0.1);
    }

    .btn-action-edit:hover {
      background: #0095FF;
      color: white;
      transform: translateY(-3px) rotate(5deg);
      box-shadow: 0 8px 20px rgba(0, 149, 255, 0.3);
    }

    .btn-action-delete {
      background: white;
      border-color: #ef4444;
      color: #ef4444;
    }

    .btn-action-delete::before {
      background: rgba(239, 68, 68, 0.1);
    }

    .btn-action-delete:hover {
      background: #ef4444;
      color: white;
      transform: translateY(-3px) rotate(-5deg);
      box-shadow: 0 8px 20px rgba(239, 68, 68, 0.3);
    }

    .btn-sm {
      padding: 0.5rem 1rem;
      border-radius: 10px;
      font-weight: 600;
      font-size: 0.85rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      border: 2px solid;
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
    }

    .btn-sm.btn-primary {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      border-color: #0095FF;
      color: white;
      box-shadow: 0 4px 12px rgba(0, 149, 255, 0.25);
    }

    .btn-sm.btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 18px rgba(0, 149, 255, 0.35);
    }

    .btn-sm.btn-secondary {
      background: #e2e8f0;
      border-color: #cbd5e1;
      color: #64748b;
    }

    /* ========== EMPTY STATE ========== */
    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
      animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .empty-state-icon {
      width: 120px;
      height: 120px;
      margin: 0 auto 2rem;
      background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      animation: empty-float 3s ease-in-out infinite;
    }

    @keyframes empty-float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }

    .empty-state-icon i {
      font-size: 4rem;
      color: #94a3b8;
    }

    .empty-state h4 {
      color: #0B1F3F;
      font-weight: 700;
      font-size: 1.8rem;
      margin-bottom: 1rem;
    }

    .empty-state p {
      color: #64748b;
      font-size: 1.05rem;
      line-height: 1.6;
      margin-bottom: 2rem;
    }

    /* ========== MODALS ========== */
    .modal-content {
      border-radius: 20px;
      border: none;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      overflow: hidden;
    }

    .modal-header {
      background: linear-gradient(135deg, #0B1F3F 0%, #1a365d 100%);
      color: white;
      padding: 1.5rem 2rem;
      border: none;
    }

    .modal-title {
      font-weight: 700;
      font-size: 1.3rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .modal-title i {
      color: #34C7FF;
      font-size: 1.4rem;
    }

    .modal-body {
      padding: 2rem;
    }

    .modal-footer {
      padding: 1.5rem 2rem;
      border-top: 2px solid #f1f5f9;
    }

    .btn-close {
      filter: brightness(0) invert(1);
      opacity: 0.8;
    }

    .btn-close:hover {
      opacity: 1;
    }

    /* ========== SPINNER ========== */
