          function openScoreModal(btn) {
            const mode = btn.dataset.mode;
            document.getElementById('matchId').value = btn.dataset.matchId;

            if (mode === 'individual') {
              const names = (btn.dataset.participants || '').split(' vs ');
              document.getElementById('homeLabel').innerText =
                names[0] || 'Peserta 1';
              document.getElementById('awayLabel').innerText =
                names[1] || 'Peserta 2';
              document.getElementById('padelScoreModal').dataset.mode =
                'individual';
            } else {
              document.getElementById('homeLabel').innerText =
                btn.dataset.home || 'Home';
              document.getElementById('awayLabel').innerText =
                btn.dataset.away || 'Away';
              document.getElementById('padelScoreModal').dataset.mode = 'team';
            }

            document.getElementById('homeScore').value = 0;
            document.getElementById('awayScore').value = 0;
            new bootstrap.Modal(
              document.getElementById('padelScoreModal')
            ).show();
          }

          async function submitPadelScore() {
            const modal = document.getElementById('padelScoreModal');
            const mode = modal.dataset.mode;
            const matchId = document.getElementById('matchId').value;
            const home = Number(document.getElementById('homeScore').value);
            const away = Number(document.getElementById('awayScore').value);

            if (Number.isNaN(home) || Number.isNaN(away)) {
              alert('Isi skor yang valid');
              return;
            }

            if (home === away) {
              alert('Skor tidak boleh seri');
              return;
            }

            if (home > 7 || away > 7) {
              alert('Skor maksimal adalah 7');
              return;
            }

            const max = Math.max(home, away);
            const min = Math.min(home, away);
            const diff = max - min;

            if (max === 6 && diff !== 2) {
              alert('Skor 6 harus selisih 2 (contoh: 6–4)');
              return;
            }

            if (max === 7 && !(diff === 1 || diff === 2)) {
              alert('Skor 7 hanya boleh 7–5 atau 7–6');
              return;
            }

            if (max < 6) {
              alert('Set belum selesai');
              return;
            }

            const url =
              mode === 'individual'
                ? `/subadmin/matches/${matchId}/submit-individual-score`
                : `/subadmin/matches/${matchId}/submit-score`;

            const btnSave = document.querySelector(
              '#padelScoreModal .btn-primary'
            );
            if (btnSave) {
              btnSave.disabled = true;
              btnSave.dataset.orig = btnSave.innerHTML;
              btnSave.innerHTML =
                '<span class="spinner-border spinner-border-sm me-2"></span>Simpan';
            }

            try {
              const res = await fetch(url, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                  home_score: home,
                  away_score: away,
                }),
              });

              let data;
              try {
                data = await res.json();
              } catch (e) {
                data = null;
              }

              if (btnSave) {
                btnSave.disabled = false;
                btnSave.innerHTML = btnSave.dataset.orig || 'Simpan';
              }

              if (!res.ok || !data || data.success === false) {
                alert((data && data.message) || 'Gagal menyimpan skor');
                return;
              }

              const finished = !!data.finished;
              const bsModal = bootstrap.Modal.getInstance(modal);
              if (bsModal) bsModal.hide();

              const actionBtn = document.querySelector(
                `button[data-match-id="${matchId}"]`
              );

              if (finished) {
                if (actionBtn) {
                  const parent = actionBtn.parentElement;
                  const finishedSpan = document.createElement('span');
                  finishedSpan.className = 'status-badge status-finished';
                  finishedSpan.innerHTML =
                    '<i class="bi bi-check-circle me-1"></i> BO3 Selesai';
                  parent.replaceChild(finishedSpan, actionBtn);
                }
                showToast('Match selesai (BO3)', 'success');
              } else {
                showToast(
                  'Skor tersimpan — lanjut set berikutnya',
                  'success'
                );
              }
            } catch (err) {
              console.error(err);
              if (btnSave) {
                btnSave.disabled = false;
                btnSave.innerHTML = btnSave.dataset.orig || 'Simpan';
              }
              alert('Terjadi kesalahan, coba lagi.');
            }
          }