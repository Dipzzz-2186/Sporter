extends ../layout/main

block content
  style.
    /* Video Form Page Styles */
    .video-form-page {
      background: linear-gradient(135deg, #f5f8fa 0%, #e9eef3 100%);
      min-height: 100vh;
      padding: 2rem 0;
    }
    
    /* Header Section */
    .video-form-header {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
      border-radius: 24px;
      padding: 2rem;
      margin-bottom: 2rem;
      color: white;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
      animation: fadeInDown 0.6s ease-out;
      position: relative;
      overflow: hidden;
    }
    
    .video-form-header::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -10%;
      width: 300px;
      height: 300px;
      background: radial-gradient(circle, rgba(0, 149, 255, 0.15) 0%, transparent 70%);
      border-radius: 50%;
    }
    
    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .video-form-header h1 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.5rem;
      letter-spacing: 1px;
      margin-bottom: 0.5rem;
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      position: relative;
      z-index: 2;
    }
    
    .video-form-header p {
      color: rgba(255, 255, 255, 0.7);
      font-size: 1rem;
      margin: 0;
      position: relative;
      z-index: 2;
    }
    
    /* Form Card */
    .video-form-card {
      background: white;
      border-radius: 24px;
      border: 2px solid #e8edf2;
      padding: 2.5rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      animation: fadeInUp 0.6s ease-out;
    }
    
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    /* Form Sections */
    .video-form-section {
      margin-bottom: 2.5rem;
      padding-bottom: 2rem;
      border-bottom: 2px solid #e8edf2;
    }
    
    .video-form-section:last-child {
      border-bottom: none;
      margin-bottom: 0;
      padding-bottom: 0;
    }
    
    .section-title {
      font-family: 'Bebas Neue', cursive;
      font-size: 1.5rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .section-title i {
      color: #0095FF;
      font-size: 1.5rem;
    }
    
    .section-description {
      color: #5a6c7d;
      font-size: 0.9rem;
      margin-bottom: 1.5rem;
      padding-left: 2rem;
    }
    
    /* Form Elements */
    .form-label {
      color: #0B1F3F;
      font-weight: 600;
      font-size: 0.95rem;
      margin-bottom: 0.75rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .form-label i {
      color: #0095FF;
      font-size: 1rem;
    }
    
    .form-label .badge {
      background: linear-gradient(135deg, #f0f8ff 0%, #e0f2ff 100%);
      color: #0095FF;
      font-size: 0.7rem;
      padding: 0.25rem 0.5rem;
      border-radius: 8px;
      font-weight: 600;
      border: 1px solid #d6edff;
    }
    
    .badge-required {
      background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
      color: #991b1b;
      border-color: #fecaca;
    }
    
    .form-control,
    .form-select {
      border: 2px solid #e8edf2;
      border-radius: 12px;
      padding: 0.9rem 1.2rem;
      font-size: 0.95rem;
      transition: all 0.3s ease;
      background: #f8f9fa;
    }
    
    .form-control:focus,
    .form-select:focus {
      border-color: #0095FF;
      box-shadow: 0 0 0 0.25rem rgba(0, 149, 255, 0.15);
      background: white;
    }
    
    .form-control:hover,
    .form-select:hover {
      border-color: #c9d6e4;
      background: white;
    }
    
    .form-control::placeholder {
      color: #adb5bd;
      font-style: italic;
    }
    
    /* Help Text */
    .form-text {
      color: #5a6c7d;
      font-size: 0.85rem;
      margin-top: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.4rem;
    }
    
    .form-text i {
      color: #0095FF;
      font-size: 0.9rem;
    }
    
    /* Type Radio Cards */
    .type-radio-group {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
    }
    
    .type-radio-card {
      position: relative;
    }
    
    .type-radio-card input[type="radio"] {
      position: absolute;
      opacity: 0;
    }
    
    .type-radio-label {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.75rem;
      padding: 1.5rem;
      background: #f8f9fa;
      border: 2px solid #e8edf2;
      border-radius: 16px;
      cursor: pointer;
      transition: all 0.3s ease;
      text-align: center;
    }
    
    .type-radio-label:hover {
      background: white;
      border-color: #0095FF;
      transform: translateY(-3px);
      box-shadow: 0 4px 15px rgba(0, 149, 255, 0.15);
    }
    
    .type-radio-card input[type="radio"]:checked + .type-radio-label {
      background: linear-gradient(135deg, #f0f8ff 0%, #e0f2ff 100%);
      border-color: #0095FF;
      box-shadow: 0 4px 15px rgba(0, 149, 255, 0.2);
    }
    
    .type-radio-icon {
      width: 60px;
      height: 60px;
      background: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.8rem;
      color: #5a6c7d;
      transition: all 0.3s ease;
    }
    
    .type-radio-card input[type="radio"]:checked + .type-radio-label .type-radio-icon {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      color: white;
      transform: scale(1.1);
    }
    
    .type-radio-title {
      font-weight: 700;
      color: #0B1F3F;
      font-size: 1rem;
    }
    
    .type-radio-desc {
      font-size: 0.8rem;
      color: #5a6c7d;
    }
    
    /* Platform Suggestions */
    .platform-suggestions {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
      margin-top: 0.75rem;
    }
    
    .platform-chip {
      background: #f8f9fa;
      border: 1px solid #e8edf2;
      color: #5a6c7d;
      padding: 0.4rem 0.8rem;
      border-radius: 20px;
      font-size: 0.85rem;
      cursor: pointer;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
    }
    
    .platform-chip:hover {
      background: linear-gradient(135deg, #f0f8ff 0%, #e0f2ff 100%);
      border-color: #0095FF;
      color: #0095FF;
      transform: translateY(-2px);
    }
    
    .platform-chip i {
      font-size: 1rem;
    }
    
    /* URL Preview */
    .url-preview {
      background: #f8f9fa;
      border: 2px dashed #e8edf2;
      border-radius: 12px;
      padding: 1rem;
      margin-top: 0.75rem;
      display: none;
    }
    
    .url-preview.active {
      display: block;
      animation: fadeInUp 0.3s ease-out;
    }
    
    .url-preview-title {
      font-weight: 600;
      color: #0B1F3F;
      font-size: 0.9rem;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.4rem;
    }
    
    .url-preview-content {
      color: #5a6c7d;
      font-size: 0.85rem;
      word-break: break-all;
    }
    
    /* Action Buttons */
    .form-actions {
      display: flex;
      gap: 1rem;
      padding-top: 2rem;
      border-top: 2px solid #e8edf2;
      margin-top: 2rem;
    }
    
    .btn-submit {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      border: none;
      color: white;
      padding: 1rem 2rem;
      border-radius: 12px;
      font-weight: 700;
      font-size: 1rem;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(0, 149, 255, 0.3);
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      flex: 1;
      justify-content: center;
    }
    
    .btn-submit:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(0, 149, 255, 0.4);
      color: white;
    }
    
    .btn-back {
      background: white;
      border: 2px solid #e8edf2;
      color: #5a6c7d;
      padding: 1rem 2rem;
      border-radius: 12px;
      font-weight: 600;
      font-size: 1rem;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      text-decoration: none;
      justify-content: center;
    }
    
    .btn-back:hover {
      background: #f8f9fa;
      border-color: #0B1F3F;
      color: #0B1F3F;
      transform: translateY(-2px);
    }
    
    /* Responsive */
    @media (max-width: 991px) {
      .video-form-header {
        padding: 1.5rem;
      }
      
      .video-form-header h1 {
        font-size: 2rem;
      }
      
      .video-form-card {
        padding: 2rem;
      }
      
      .type-radio-group {
        grid-template-columns: 1fr;
      }
    }
    
    @media (max-width: 767px) {
      .video-form-page {
        padding: 1rem 0;
      }
      
      .video-form-header {
        padding: 1.25rem;
        border-radius: 16px;
      }
      
      .video-form-header h1 {
        font-size: 1.75rem;
      }
      
      .video-form-card {
        padding: 1.5rem;
        border-radius: 16px;
      }
      
      .section-title {
        font-size: 1.3rem;
      }
      
      .video-form-section {
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
      }
      
      .form-control,
      .form-select {
        padding: 0.8rem 1rem;
      }
      
      .form-actions {
        flex-direction: column;
      }
      
      .btn-submit,
      .btn-back {
        width: 100%;
      }
    }

  .video-form-page
    .container
      //- Header Section
      .video-form-header
        h1
          i.bi.bi-camera-video-fill
          | #{mode === 'edit' ? 'Edit Video' : 'Tambah Video'}
        p
          i.bi.bi-info-circle.me-2
          | Upload video Full Match, Highlight, atau Livestream untuk pertandingan

      //- Form Card
      .video-form-card
        form(
          method="post"
          action= mode === 'edit'
            ? `/subadmin/videos/${video.id}/edit`
            : '/subadmin/videos/create'
        )
          
          //- Section 1: Basic Info
          .video-form-section
            .section-title
              i.bi.bi-info-circle-fill
              | Informasi Dasar
            .section-description
              | Pilih cabang olahraga dan relasi dengan event atau pertandingan.
            
            .row.g-3
              .col-md-6
                .mb-3
                  label.form-label(for="sport_id")
                    i.bi.bi-trophy
                    | Cabang Olahraga
                    span.badge Wajib
                  select.form-select#sport_id(
                    name="sport_id"
                    required
                    disabled=(defaultSportId)
                  )
                    option(value="" disabled selected) -- Pilih Cabang --
                    each s in sports
                      option(
                        value=s.id
                        selected=(
                          (mode === 'edit' && video && Number(video.sport_id) === Number(s.id)) ||
                          (!video && defaultSportId && Number(defaultSportId) === Number(s.id))
                        )
                      )= s.name
                  if defaultSportId
                    input(type="hidden" name="sport_id" value=defaultSportId)
                  small.form-text
                    i.bi.bi-info-circle
                    | Kategorisasi video berdasarkan cabang olahraga
              
              .col-md-6
                .mb-3
                  label.form-label(for="event_id")
                    i.bi.bi-calendar-event
                    | Event ID
                    span.badge Opsional
                  input.form-control#event_id(
                    type="number"
                    name="event_id"
                    min="1"
                    placeholder="Masukkan ID event (contoh: 123)"
                    value=mode === 'edit' ? video.event_id : ''
                  )
                  small.form-text
                    i.bi.bi-info-circle
                    | Jika video terkait event tertentu
              
              .col-12
                .mb-3
                  label.form-label(for="match_id")
                    i.bi.bi-flag-fill
                    | Match ID
                    span.badge Opsional
                  input.form-control#match_id(
                    type="number"
                    name="match_id"
                    min="1"
                    placeholder="Masukkan ID pertandingan (contoh: 456)"
                    value=mode === 'edit' ? video.match_id : ''
                  )
                  small.form-text
                    i.bi.bi-info-circle
                    | Jika video untuk pertandingan spesifik

          //- Section 2: Video Details
          .video-form-section
            .section-title
              i.bi.bi-card-heading
              | Detail Video
            .section-description
              | Berikan judul dan pilih tipe video yang sesuai.
            
            .mb-3
              label.form-label(for="title")
                i.bi.bi-text-left
                | Judul Video
                span.badge.badge-required Wajib
              input.form-control#title(
                type="text"
                name="title"
                required
                value=mode === 'edit' ? video.title : ''
              )
              small.form-text
                i.bi.bi-info-circle
                | Buat judul yang deskriptif dan menarik
            
            .mb-3
              label.form-label
                i.bi.bi-collection-play
                | Tipe Video
                span.badge.badge-required Wajib
              .type-radio-group
                .type-radio-card
                  input#type-full_match(
                    type="radio"
                    name="type"
                    value="full_match"
                    checked=(mode !== 'edit' || video.type === 'full_match')
                  )
                  label.type-radio-label(for="type-full_match")
                    .type-radio-icon
                      i.bi.bi-play-circle-fill
                    .type-radio-title Full Match
                    .type-radio-desc Rekaman lengkap
                
                .type-radio-card
                  input#type-highlight(
                    type="radio"
                    name="type"
                    value="highlight"
                    checked=(mode === 'edit' && video.type === 'highlight')
                  )
                  label.type-radio-label(for="type-highlight")
                    .type-radio-icon
                      i.bi.bi-star-fill
                    .type-radio-title Highlight
                    .type-radio-desc Cuplikan momen terbaik

          //- Section 3: Platform & URL
          .video-form-section
            .section-title
              i.bi.bi-link-45deg
              | Platform & URL
            .section-description
              | Tentukan platform video dan URL/embed code.
            
            .mb-3
              label.form-label(for="platform")
                i.bi.bi-youtube
                | Platform Video
                span.badge Wajib
              input.form-control#platform(
                type="text"
                name="platform"
                placeholder="YouTube, Vimeo, Facebook, Instagram, dll"
                value=mode === 'edit' ? video.platform : ''
                required
              )
              .platform-suggestions
                span.platform-chip(data-platform="YouTube")
                  i.bi.bi-youtube
                  | YouTube
                span.platform-chip(data-platform="Vimeo")
                  i.bi.bi-vimeo
                  | Vimeo
                span.platform-chip(data-platform="Facebook")
                  i.bi.bi-facebook
                  | Facebook
                span.platform-chip(data-platform="Instagram")
                  i.bi.bi-instagram
                  | Instagram
              small.form-text
                i.bi.bi-info-circle
                | Klik chip untuk auto-fill platform
            
            .mb-3
              label.form-label(for="url")
                i.bi.bi-link
                | URL / Embed Code
                span.badge Wajib
              textarea.form-control#url(
                name="url"
                rows="3"
                placeholder="https://youtube.com/watch?v=... atau <iframe>...</iframe>"
                required
              )=mode === 'edit' ? video.url : ''
              small.form-text
                i.bi.bi-info-circle
                | Masukkan URL video atau embed code dari platform
              #urlPreview.url-preview
                .url-preview-title
                  i.bi.bi-play-circle-fill
                  | Preview Video
                .ratio.ratio-16x9.mt-2
                  iframe(
                    id="videoPreviewFrame"
                    src=""
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen
                  )
          //- Action Buttons
          .form-actions
            button.btn.btn-submit(type="submit")
              i.bi.bi-save-fill
              span Simpan Video

            a.btn.btn-back(href="javascript:void(0);" onclick="history.back()")
              i.bi.bi-arrow-left
              span Kembali

  //- Custom JavaScript
  script.
    (function () {
      // ================= PLATFORM CHIP =================
      const platformInput = document.getElementById('platform');
      document.querySelectorAll('.platform-chip').forEach(chip => {
        chip.addEventListener('click', () => {
          platformInput.value = chip.dataset.platform;
          platformInput.focus();
        });
      });

      // ================= VIDEO PREVIEW =================
      const urlInput = document.getElementById('url');
      const previewBox = document.getElementById('urlPreview');
      const iframe = document.getElementById('videoPreviewFrame');

      function getEmbedUrl(url) {
        if (!url) return null;

        if (!/^https?:\/\//i.test(url)) {
          url = 'https://' + url;
        }

        let u;
        try {
          u = new URL(url);
        } catch {
          return null;
        }

        const host = u.hostname;

        // YouTube
        if (host.includes('youtube.com') || host.includes('youtu.be')) {
          let id = null;
          if (host.includes('youtu.be')) id = u.pathname.slice(1);
          else if (u.searchParams.get('v')) id = u.searchParams.get('v');
          else if (u.pathname.startsWith('/embed/')) id = u.pathname.split('/')[2];
          else if (u.pathname.startsWith('/live/')) id = u.pathname.split('/')[2];
          return id ? `https://www.youtube.com/embed/${id}` : null;
        }

        // Vimeo
        if (host.includes('vimeo.com')) {
          const id = u.pathname.split('/').pop();
          return id ? `https://player.vimeo.com/video/${id}` : null;
        }

        // Facebook
        if (host.includes('facebook.com')) {
          return `https://www.facebook.com/plugins/video.php?href=${encodeURIComponent(url)}&show_text=false`;
        }

        // Instagram
        if (host.includes('instagram.com')) {
          const parts = u.pathname.split('/');
          return parts[2] ? `https://www.instagram.com/p/${parts[2]}/embed` : null;
        }

        return null;
      }

      urlInput.addEventListener('input', () => {
        const embedUrl = getEmbedUrl(urlInput.value.trim());
        if (embedUrl) {
          iframe.src = embedUrl;
          previewBox.classList.add('active');
        } else {
          iframe.src = '';
          previewBox.classList.remove('active');
        }
      });

    })();