extends ../layout/main

block content
  style.
    :root {
      --primary-color: #0095FF;
      --primary-dark: #0066CC;
      --primary-light: #34C7FF;
      --secondary-dark: #0B1F3F;
      --secondary-light: #152844;
      --accent-color: #FF6B35;
      --success-color: #00CC88;
      --warning-color: #FFAA00;
      --danger-color: #FF4757;
      --gray-50: #F8FAFC;
      --gray-100: #F1F5F9;
      --gray-200: #E2E8F0;
      --gray-300: #CBD5E1;
      --gray-400: #94A3B8;
      --gray-500: #64748B;
      --gray-600: #475569;
      --gray-700: #334155;
      --gray-800: #1E293B;
      --gray-900: #0F172A;
      --shadow-sm: 0 2px 8px rgba(0, 149, 255, 0.08);
      --shadow-md: 0 8px 25px rgba(0, 149, 255, 0.12);
      --shadow-lg: 0 15px 35px rgba(0, 149, 255, 0.15);
      --shadow-xl: 0 25px 50px rgba(0, 149, 255, 0.2);
      --gradient-primary: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
      --gradient-secondary: linear-gradient(135deg, var(--secondary-dark) 0%, var(--secondary-light) 100%);
    }

    /* Detail Page */
    .detail-page {
      background: linear-gradient(135deg, var(--gray-50) 0%, var(--gray-100) 100%);
      min-height: 100vh;
      padding: 3rem 0;
      animation: fadeIn 0.8s ease-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    /* Page Header */
    .page-header {
      background: var(--gradient-secondary);
      border-radius: 20px;
      padding: 2.5rem;
      margin-bottom: 2rem;
      position: relative;
      overflow: hidden;
      animation: fadeInDown 0.6s ease-out;
      box-shadow: var(--shadow-xl);
    }

    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-30px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .page-header::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -20%;
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, rgba(0, 149, 255, 0.15) 0%, transparent 70%);
      border-radius: 50%;
    }

    .page-header-content {
      position: relative;
      z-index: 2;
    }

    .page-title {
      color: white;
      font-family: 'Bebas Neue', cursive;
      font-size: 2.5rem;
      letter-spacing: 1px;
      margin: 0 0 0.5rem 0;
    }

    .page-title i {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-right: 0.5rem;
    }

    .page-subtitle {
      color: rgba(255, 255, 255, 0.9);
      font-size: 1.05rem;
      margin: 0;
      max-width: 600px;
      line-height: 1.6;
    }

    /* Back Button */
    .btn-back-modern {
      display: inline-flex;
      align-items: center;
      gap: 0.45rem;
      margin-top: 1rem;
      background: rgba(255, 255, 255, 0.15);
      color: #fff;
      border: 1px solid rgba(255, 255, 255, 0.35);
      border-radius: 12px;
      padding: 0.45rem 0.9rem;
      font-size: 0.85rem;
      font-weight: 600;
      transition: all 0.25s ease;
      text-decoration: none;
    }

    .btn-back-modern:hover {
      background: rgba(255, 255, 255, 0.28);
      transform: translateX(-3px);
      color: #fff;
    }

    /* Match Card */
    .match-card {
      background: white;
      border-radius: 20px;
      border: 2px solid var(--gray-200);
      overflow: hidden;
      box-shadow: var(--shadow-xl);
      margin-bottom: 2rem;
      animation: slideInUp 0.6s ease-out backwards;
    }

    @keyframes slideInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .match-header {
      background: var(--gradient-primary);
      padding: 1.5rem 2rem;
      color: white;
      position: relative;
      overflow: hidden;
    }

    .match-header::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -10%;
      width: 300px;
      height: 300px;
      background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
      border-radius: 50%;
    }

    .match-title {
      font-family: 'Bebas Neue', cursive;
      font-size: 1.8rem;
      letter-spacing: 0.5px;
      margin: 0 0 0.5rem 0;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      position: relative;
      z-index: 1;
    }

    .match-title i {
      font-size: 1.5rem;
    }

    .match-datetime {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 1rem;
      opacity: 0.95;
      position: relative;
      z-index: 1;
    }

    .match-datetime i {
      font-size: 1.1rem;
    }

    .match-body {
      padding: 0;
    }

    /* Ticket Item */
    .ticket-item {
      padding: 1.5rem 2rem;
      border-bottom: 1px solid var(--gray-200);
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 1.5rem;
      animation: slideInUp 0.4s ease-out backwards;
    }

    .ticket-item:last-child {
      border-bottom: none;
    }

    .ticket-item:hover {
      background: linear-gradient(135deg, rgba(0, 149, 255, 0.03) 0%, rgba(52, 199, 255, 0.03) 100%);
      transform: translateX(4px);
    }

    .ticket-info {
      flex: 1;
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .ticket-icon {
      width: 50px;
      height: 50px;
      background: var(--gradient-primary);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.5rem;
      box-shadow: var(--shadow-md);
    }

    .ticket-details {
      flex: 1;
    }

    .ticket-label {
      font-size: 0.85rem;
      color: var(--gray-500);
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 0.25rem;
    }

    .ticket-holder {
      font-size: 1.1rem;
      color: var(--secondary-dark);
      font-weight: 700;
      margin: 0;
    }

    .ticket-price {
      font-size: 1.3rem;
      font-weight: 800;
      background: var(--gradient-primary);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      white-space: nowrap;
    }

    /* Subtotal Section */
    .subtotal-section {
      background: linear-gradient(135deg, var(--gray-50) 0%, var(--gray-100) 100%);
      padding: 1.5rem 2rem;
      border-top: 2px solid var(--gray-200);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .subtotal-label {
      font-size: 1.1rem;
      color: var(--gray-700);
      font-weight: 700;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .subtotal-label i {
      color: var(--primary-color);
      font-size: 1.2rem;
    }

    .subtotal-amount {
      font-size: 1.5rem;
      font-weight: 800;
      background: var(--gradient-primary);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      white-space: nowrap;
    }

    /* Empty State */
    .empty-state {
      background: linear-gradient(135deg, var(--gray-50) 0%, var(--gray-100) 100%);
      border: 2px solid var(--gray-200);
      border-radius: 22px;
      padding: 4rem 2rem;
      text-align: center;
      animation: fadeIn 0.6s ease-out;
    }

    .empty-state-icon {
      width: 100px;
      height: 100px;
      background: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      border: 2px solid var(--gray-200);
      animation: float 3s ease-in-out infinite;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }

    .empty-state-icon i {
      font-size: 3rem;
      color: var(--gray-400);
    }

    .empty-state h4 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2rem;
      color: var(--secondary-dark);
      letter-spacing: 1px;
      margin-bottom: 0.75rem;
    }

    .empty-state p {
      color: var(--gray-600);
      font-size: 1.05rem;
      margin: 0;
      line-height: 1.6;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .detail-page {
        padding: 2rem 0;
      }

      .page-header {
        padding: 2rem 1.5rem;
      }

      .page-title {
        font-size: 2rem;
      }

      .match-header {
        padding: 1.25rem 1.5rem;
      }

      .match-title {
        font-size: 1.5rem;
      }

      .ticket-item {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
        padding: 1.25rem 1.5rem;
      }

      .ticket-info {
        width: 100%;
      }

      .ticket-price {
        font-size: 1.2rem;
      }

      .subtotal-section {
        padding: 1.25rem 1.5rem;
        flex-direction: column;
        gap: 0.75rem;
        align-items: flex-start;
      }
    }

  .detail-page
    .container
      //- Page Header
      .page-header
        .page-header-content
          .d-flex.justify-content-between.align-items-start.mb-3
            h1.page-title
              i.bi.bi-ticket-detailed-fill
              | Detail Order Tiket
            
            - const backUrl = (currentUser && currentUser.role === 'admin') ? '/admin/ticket-orders' : '/subadmin/ticket-orders'
            a.btn-back-modern(href=backUrl)
              i.bi.bi-arrow-left.me-1
              | Kembali
          
          p.page-subtitle
            | Informasi lengkap pemesanan tiket untuk setiap pertandingan

      //- Tickets Content
      if rows && rows.length
        - let currentMatch = null
        - let subtotal = 0
        - let animationDelay = 0

        each r in rows
          if !currentMatch || currentMatch !== r.match_id
            //- Display previous match subtotal
            if currentMatch
              .subtotal-section
                .subtotal-label
                  i.bi.bi-receipt-cutoff
                  | Subtotal Pertandingan
                .subtotal-amount
                  | Rp. #{subtotal.toLocaleString('id-ID')}
            
            //- Start new match card
            - currentMatch = r.match_id
            - subtotal = 0
            - animationDelay += 0.1

            .match-card(style=`animation-delay: ${animationDelay}s`)
              .match-header
                h2.match-title
                  i.bi.bi-trophy-fill
                  = r.match_title
                .match-datetime
                  i.bi.bi-calendar-event
                  = new Date(r.start_time).toLocaleString('id-ID', { weekday:'long', year:'numeric', month:'long', day:'numeric', hour:'2-digit', minute:'2-digit' })
              
              .match-body
          
          //- Add ticket item
          - subtotal += Number(r.price)
          - animationDelay += 0.05
          
          .ticket-item(style=`animation-delay: ${animationDelay}s`)
            .ticket-info
              .ticket-icon
                i.bi.bi-ticket-perforated-fill
              .ticket-details
                .ticket-label Pemegang Tiket
                p.ticket-holder= r.holder_name || 'Tidak ada nama'
            .ticket-price
              | Rp. #{Number(r.price).toLocaleString('id-ID')}
        
        //- Display final subtotal
        .subtotal-section
          .subtotal-label
            i.bi.bi-receipt-cutoff
            | Subtotal Pertandingan
          .subtotal-amount
            | Rp. #{subtotal.toLocaleString('id-ID')}

      else
        //- Empty State
        .empty-state
          .empty-state-icon
            i.bi.bi-ticket-perforated
          h4 Tidak Ada Tiket
          p
            | Tidak ada data tiket untuk pemesanan ini.
            br
            | Silakan kembali ke halaman daftar order.

  script.
    document.addEventListener('DOMContentLoaded', function() {
      // Add keyboard shortcuts
      document.addEventListener('keydown', function(e) {
        // Escape or Backspace to go back
        if (e.key === 'Escape' || (e.key === 'Backspace' && !e.target.matches('input, textarea'))) {
          const backBtn = document.querySelector('.btn-back-modern');
          if (backBtn) {
            window.location.href = backBtn.href;
          }
        }
      });
      
      // Add print functionality (Ctrl/Cmd + P)
      document.addEventListener('keydown', function(e) {
        if ((e.ctrlKey || e.metaKey) && e.key === 'p') {
          e.preventDefault();
          window.print();
        }
      });
    });