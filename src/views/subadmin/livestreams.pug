extends ../layout/main

block content
  style.
    /* Livestreams Management Page Styles */
    .livestreams-page {
      background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
      min-height: 100vh;
      padding: 2rem 0;
    }
    
    /* ===== HEADER SECTION - DIUBAH SESUAI REFERENSI TEAMS ===== */
    .livestreams-header {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
      border-radius: 24px;
      padding: 2.5rem;
      margin-bottom: 2rem;
      position: relative;
      overflow: hidden;
      animation: fadeInDown 0.6s ease-out;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
      color: white;
    }
    
    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .livestreams-header::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -20%;
      width: 300px;
      height: 300px;
      background: radial-gradient(circle, rgba(255, 71, 87, 0.15) 0%, transparent 70%);
      border-radius: 50%;
    }
    
    .livestreams-header-content {
      position: relative;
      z-index: 2;
    }
    
    .livestreams-title {
      color: white;
      font-family: 'Bebas Neue', cursive;
      font-size: 2.5rem;
      letter-spacing: 1px;
      margin: 0 0 0.5rem 0;
      position: relative;
      z-index: 2;
    }
    
    .livestreams-title i {
      background: linear-gradient(135deg, #FF4757 0%, #FF6B7A 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-right: 0.5rem;
    }
    
    .livestreams-subtitle {
      color: rgba(255, 255, 255, 0.9);
      font-size: 1.05rem;
      margin-bottom: 1.5rem;
      max-width: 600px;
      line-height: 1.6;
    }
    
    /* ===== BACK BUTTON (FROM TEAMS REFERENCE) ===== */
    .btn-back-modern {
      display: inline-flex;
      align-items: center;
      gap: 0.45rem;
      margin-top: 1rem;
      background: rgba(255, 255, 255, 0.15);
      color: #fff;
      border: 1px solid rgba(255, 255, 255, 0.35);
      border-radius: 12px;
      padding: 0.45rem 0.9rem;
      font-size: 0.85rem;
      font-weight: 600;
      transition: all 0.25s ease;
      text-decoration: none;
    }
    
    .btn-back-modern:hover {
      background: rgba(255, 255, 255, 0.28);
      transform: translateX(-3px);
      color: #fff;
    }
    
    /* HEADER TOP LAYOUT (Like in Teams) */
    .header-top {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 1rem;
    }
    
    /* HEADER ACTIONS (From Teams) */
    .header-actions {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-top: 1.5rem;
    }
    
    .btn-add-livestream {
      background: linear-gradient(135deg, #FF4757 0%, #FF6B7A 100%);
      border: none;
      color: white;
      padding: 0.9rem 1.8rem;
      border-radius: 12px;
      font-weight: 600;
      font-size: 1rem;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(255, 71, 87, 0.3);
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      text-decoration: none;
      animation: fadeInUp 0.6s ease-out 0.4s backwards;
    }
    
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .btn-add-livestream:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(255, 71, 87, 0.4);
      color: white;
    }
    
    /* Table Card */
    .livestreams-table-card {
      background: white;
      border-radius: 20px;
      border: 2px solid #e8edf2;
      overflow: hidden;
      animation: fadeInUp 0.6s ease-out;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }
    
    .livestreams-table-card .card-body {
      padding: 0;
    }
    
    /* Table Styles */
    .livestreams-table {
      margin: 0;
      font-size: 0.95rem;
    }
    
    .livestreams-table thead {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
    }
    
    .livestreams-table thead th {
      background: transparent !important;
      color: white !important;
      font-weight: 700;
      font-size: 0.85rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      padding: 1.25rem 1rem;
      border: none;
      white-space: nowrap;
    }
    
    .livestreams-table tbody tr {
      border-bottom: 1px solid #e8edf2;
      transition: all 0.3s ease;
    }
    
    .livestreams-table tbody tr:hover {
      background: linear-gradient(135deg, rgba(255, 71, 87, 0.05) 0%, rgba(255, 107, 122, 0.05) 100%);
      transform: translateX(5px);
    }
    
    .livestreams-table tbody td {
      padding: 1.25rem 1rem;
      vertical-align: middle;
      border: none;
    }
    
    .stream-title {
      color: #0B1F3F;
      font-weight: 600;
      text-decoration: none;
      font-size: 0.95rem;
    }
    
    .stream-title:hover {
      color: #FF4757;
      text-decoration: underline;
    }
    
    .sport-badge {
      background: linear-gradient(135deg, #f0f8ff 0%, #e0f2ff 100%);
      color: #0095FF;
      padding: 0.4rem 0.8rem;
      border-radius: 20px;
      font-weight: 600;
      font-size: 0.8rem;
      border: 1px solid #d6edff;
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
    }
    
    /* Status Badges */
    .status-badge {
      padding: 0.5rem 1rem;
      border-radius: 20px;
      font-weight: 600;
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
    }
    
    .status-badge i {
      font-size: 1rem;
    }
    
    .status-live {
      background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
      color: #991b1b;
      border: 1px solid #fecaca;
      animation: pulse 2s ease-in-out infinite;
    }
    
    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.7; }
    }
    
    .status-scheduled {
      background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
      color: #075985;
      border: 1px solid #bfdbfe;
    }
    
    /* Action Buttons */
    .action-buttons {
      display: flex;
      gap: 0.5rem;
      justify-content: flex-end;
    }
    
    .btn-action {
      width: 36px;
      height: 36px;
      padding: 0;
      border-radius: 10px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      font-size: 0.9rem;
      border: 2px solid;
      transition: all 0.3s ease;
      cursor: pointer;
    }
    
    .btn-action-edit {
      background: white;
      border-color: #FF4757;
      color: #FF4757;
    }
    
    .btn-action-edit:hover {
      background: linear-gradient(135deg, #FF4757 0%, #FF6B7A 100%);
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(255, 71, 87, 0.3);
    }
    
    .btn-action-delete {
      background: white;
      border-color: #dc2626;
      color: #dc2626;
    }
    
    .btn-action-delete:hover {
      background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
    }
    
    /* Empty State */
    .empty-state {
      background: white;
      border: 2px dashed #e8edf2;
      border-radius: 24px;
      padding: 5rem 2rem;
      text-align: center;
      animation: fadeInUp 0.6s ease-out;
    }
    
    .empty-state-icon {
      width: 120px;
      height: 120px;
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 2rem;
      animation: float 3s ease-in-out infinite;
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-15px); }
    }
    
    .empty-state-icon i {
      font-size: 4rem;
      color: #adb5bd;
    }
    
    .empty-state h4 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2rem;
      color: #0B1F3F;
      letter-spacing: 1px;
      margin-bottom: 1rem;
    }
    
    .empty-state p {
      color: #5a6c7d;
      font-size: 1.05rem;
      margin-bottom: 2rem;
    }
    
    /* Responsive */
    @media (max-width: 991px) {
      .livestreams-header {
        padding: 2rem;
      }
      
      .livestreams-title {
        font-size: 2rem;
      }
      
      .livestreams-table {
        font-size: 0.85rem;
      }
      
      .livestreams-table thead th,
      .livestreams-table tbody td {
        padding: 1rem 0.75rem;
      }
      
      .header-top {
        flex-direction: column;
        gap: 1rem;
      }
      
      .header-actions {
        flex-direction: column;
        align-items: stretch;
      }
      
      .btn-add-livestream {
        width: 100%;
        justify-content: center;
      }
    }
    
    @media (max-width: 767px) {
      .livestreams-page {
        padding: 1.5rem 0;
      }
      
      .livestreams-header {
        padding: 1.5rem;
        border-radius: 16px;
      }
      
      .livestreams-title {
        font-size: 1.75rem;
      }
      
      .livestreams-subtitle {
        font-size: 1rem;
      }
      
      .livestreams-table {
        font-size: 0.8rem;
      }
      
      .livestreams-table thead th,
      .livestreams-table tbody td {
        padding: 0.75rem 0.5rem;
      }
      
      .action-buttons {
        flex-direction: column;
      }
      
      .btn-action {
        width: 100%;
      }
      
      .empty-state {
        padding: 3rem 1.5rem;
      }
      
      .empty-state-icon {
        width: 100px;
        height: 100px;
      }
      
      .empty-state-icon i {
        font-size: 3rem;
      }
      
      .empty-state h4 {
        font-size: 1.6rem;
      }
      
      .btn-back-modern {
        align-self: flex-start;
      }
    }

  .livestreams-page
    .container
      //- ===== IMPROVED HEADER SECTION (FROM TEAMS REFERENCE) =====
      .livestreams-header
        .livestreams-header-content
          //- Header Top with Back Button (Like in Teams)
          .header-top
            h1.livestreams-title
              i.bi.bi-broadcast
              | Kelola Livestream
            
            //- Back Button from Teams Reference
            - const backUrl = (currentUser && currentUser.role === 'admin') ? '/admin' : '/subadmin'
            a.btn-back-modern(href=backUrl)
              i.bi.bi-arrow-left.me-1
              | Kembali
          
          //- Subtitle
          p.livestreams-subtitle
            | Siarkan pertandingan secara langsung, jadwalkan streaming, dan kelola konten live untuk cabang olahraga Anda.
          
          //- Header Actions with Add Livestream Button
          .header-actions
            a.btn-add-livestream(href="/subadmin/livestreams/create")
              i.bi.bi-plus-circle
              span Tambah Livestream Baru

      if livestreams && livestreams.length
        .card.livestreams-table-card.border-0
          .card-body
            .table-responsive
              table.table.livestreams-table.mb-0
                thead
                  tr
                    th
                      i.bi.bi-card-heading.me-1
                      | Judul
                    th
                      i.bi.bi-dribbble.me-1
                      | Cabang
                    th
                      i.bi.bi-info-circle.me-1
                      | Status
                    th.text-end
                      i.bi.bi-gear.me-1
                      | Aksi
                tbody
                  each l in livestreams
                    - const isLive = l.is_live || false
                    tr
                      td
                        a.stream-title(
                            href=`/livestreams/${l.id}`
                            title="Lihat Livestream"
                        )= l.title
                      td
                        if l.sport_name
                          .sport-badge
                            i.bi.bi-trophy
                            span= l.sport_name
                        else
                          span.text-muted -
                      td
                        if isLive
                          .status-badge.status-live
                            i.bi.bi-broadcast
                            | LIVE
                        else
                          .status-badge.status-scheduled
                            i.bi.bi-check-circle-fill
                            | ENDED
                      td
                        .action-buttons
                          a.btn-action.btn-action-edit(
                            href=`/subadmin/livestreams/${l.id}/edit`
                            title="Edit Livestream"
                          )
                            i.bi.bi-pencil-fill
                          form.d-inline(
                            method="post"
                            action=`/subadmin/livestreams/${l.id}/delete`
                            onsubmit="return confirm('⚠️ Yakin ingin menghapus livestream ini?');"
                          )
                            button.btn-action.btn-action-delete(
                              type="submit"
                              title="Hapus Livestream"
                            )
                              i.bi.bi-trash-fill
      else
        //- Empty State
        .empty-state
          .empty-state-icon
            i.bi.bi-broadcast
          h4 Belum Ada Livestream
          p
            | Tambahkan livestream pertama untuk menyiarkan pertandingan secara langsung.
            br
            | Mulai buat livestream sekarang!
          a.btn-add-livestream(href="/subadmin/livestreams/create")
            i.bi.bi-plus-circle
            span Tambah Livestream Pertama