extends ../layout/main

block content
  style.
    /* Standings Page Styles */
    .standings-page {
      background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
      min-height: 100vh;
      padding: 3rem 0;
    }
    
    .standings-header {
      background: linear-gradient(135deg, #1C1C1E 0%, #2c2c2e 100%);
      border-radius: 20px;
      padding: 2.5rem;
      margin-bottom: 2rem;
      position: relative;
      overflow: hidden;
      animation: fadeInDown 0.6s ease-out;
    }
    
    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .standings-header::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -20%;
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, rgba(255, 59, 48, 0.15) 0%, transparent 70%);
      border-radius: 50%;
    }
    
    .standings-header h3 {
      color: white;
      font-family: 'Bebas Neue', cursive;
      font-size: 2.5rem;
      letter-spacing: 1px;
      margin: 0;
      position: relative;
      z-index: 2;
    }
    
    .standings-header h3 i {
      background: linear-gradient(135deg, #FF3B30 0%, #FF9500 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-right: 0.5rem;
    }
    
    .filter-section {
      background: white;
      border-radius: 15px;
      padding: 1.5rem;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
      margin-bottom: 2rem;
      animation: fadeInUp 0.6s ease-out 0.2s backwards;
    }
    
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .filter-section label {
      color: #1C1C1E;
      font-weight: 600;
      font-size: 0.95rem;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .filter-section label i {
      color: #FF3B30;
    }
    
    .filter-section select {
      border-radius: 10px;
      border: 2px solid #f0f0f0;
      padding: 0.75rem 1rem;
      font-size: 1rem;
      transition: all 0.3s ease;
    }
    
    .filter-section select:focus {
      border-color: #FF3B30;
      box-shadow: 0 0 0 0.2rem rgba(255, 59, 48, 0.15);
    }
    
    .standings-group {
      background: white;
      border-radius: 20px;
      padding: 2rem;
      margin-bottom: 2rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      animation: fadeInUp 0.6s ease-out backwards;
      border: 2px solid #f0f0f0;
      transition: all 0.4s ease;
    }
    
    .standings-group:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 30px rgba(255, 59, 48, 0.12);
      border-color: #FF3B30;
    }
    
    .group-title {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 2px solid #f0f0f0;
    }
    
    .group-title-icon {
      width: 50px;
      height: 50px;
      background: linear-gradient(135deg, #fff5f5 0%, #ffe8e6 100%);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 2px solid #ffeded;
    }
    
    .group-title-icon i {
      font-size: 1.5rem;
      background: linear-gradient(135deg, #FF3B30 0%, #FF9500 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .group-title h5 {
      color: #1C1C1E;
      font-weight: 700;
      font-size: 1.4rem;
      margin: 0;
    }
    
    .standings-table {
      border-radius: 15px;
      overflow: hidden;
      border: 2px solid #f8f9fa;
    }
    
    .standings-table table {
      margin-bottom: 0;
    }
    
    .standings-table thead {
      background: linear-gradient(135deg, #1C1C1E 0%, #2c2c2e 100%);
    }
    
    .standings-table thead th {
      color: white;
      font-weight: 600;
      font-size: 0.85rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      padding: 1rem 0.75rem;
      border: none;
      white-space: nowrap;
    }
    
    .standings-table tbody tr {
      transition: all 0.3s ease;
      border-bottom: 1px solid #f0f0f0;
    }
    
    .standings-table tbody tr:hover {
      background: linear-gradient(90deg, rgba(255, 59, 48, 0.05) 0%, rgba(255, 149, 0, 0.05) 100%);
      transform: scale(1.01);
    }
    
    .standings-table tbody td {
      padding: 1rem 0.75rem;
      vertical-align: middle;
      font-size: 0.95rem;
    }
    
    .team-name {
      font-weight: 700;
      color: #1C1C1E;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .team-name i {
      color: #FF3B30;
      font-size: 1rem;
    }
    
    .stat-cell {
      font-weight: 600;
      color: #495057;
    }
    
    .points-cell {
      font-weight: 700;
      font-size: 1.1rem;
      background: linear-gradient(135deg, #FF3B30 0%, #FF9500 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .action-buttons {
      display: flex;
      gap: 0.4rem;
    }
    
    .standings-table .btn {
      border-radius: 8px;
      font-weight: 600;
      font-size: 0.8rem;
      padding: 0.4rem 0.8rem;
      transition: all 0.3s ease;
      border: none;
      display: inline-flex;
      align-items: center;
      gap: 0.3rem;
    }
    
    .standings-table .btn-success {
      background: linear-gradient(135deg, #34C759 0%, #30D158 100%);
      box-shadow: 0 2px 8px rgba(52, 199, 89, 0.3);
    }
    
    .standings-table .btn-success:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(52, 199, 89, 0.4);
    }
    
    .standings-table .btn-danger {
      background: linear-gradient(135deg, #FF3B30 0%, #FF9500 100%);
      box-shadow: 0 2px 8px rgba(255, 59, 48, 0.3);
    }
    
    .standings-table .btn-danger:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(255, 59, 48, 0.4);
    }
    
    .empty-state {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border: 2px dashed #d0d0d0;
      border-radius: 20px;
      padding: 4rem 2rem;
      text-align: center;
      animation: fadeInUp 0.6s ease-out;
    }
    
    .empty-state-icon {
      width: 100px;
      height: 100px;
      background: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      animation: float 3s ease-in-out infinite;
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }
    
    .empty-state-icon i {
      font-size: 3rem;
      color: #adb5bd;
    }
    
    .empty-state h4 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2rem;
      color: #1C1C1E;
      letter-spacing: 1px;
      margin-bottom: 0.75rem;
    }
    
    .empty-state p {
      color: #6c757d;
      font-size: 1.05rem;
      margin: 0;
    }
    
    /* Position badges */
    .position-badge {
      width: 30px;
      height: 30px;
      border-radius: 8px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      font-size: 0.85rem;
      margin-right: 0.5rem;
    }
    
    .position-1 {
      background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
      color: white;
      box-shadow: 0 2px 8px rgba(255, 215, 0, 0.4);
    }
    
    .position-2 {
      background: linear-gradient(135deg, #C0C0C0 0%, #A8A8A8 100%);
      color: white;
      box-shadow: 0 2px 8px rgba(192, 192, 192, 0.4);
    }
    
    .position-3 {
      background: linear-gradient(135deg, #CD7F32 0%, #B87333 100%);
      color: white;
      box-shadow: 0 2px 8px rgba(205, 127, 50, 0.4);
    }
    
    .position-other {
      background: #f8f9fa;
      color: #6c757d;
      border: 2px solid #e9ecef;
    }
    
    /* Responsive */
    @media (max-width: 991px) {
      .standings-header {
        padding: 2rem;
      }
      
      .standings-header h3 {
        font-size: 2rem;
      }
      
      .standings-group {
        padding: 1.5rem;
      }
      
      .standings-table {
        font-size: 0.85rem;
      }
      
      .standings-table thead th,
      .standings-table tbody td {
        padding: 0.75rem 0.5rem;
      }
    }
    
    @media (max-width: 767px) {
      .standings-page {
        padding: 2rem 0;
      }
      
      .standings-header {
        padding: 1.5rem;
      }
      
      .standings-header h3 {
        font-size: 1.5rem;
      }
      
      .standings-group {
        padding: 1rem;
      }
      
      .group-title h5 {
        font-size: 1.2rem;
      }
      
      .standings-table {
        overflow-x: auto;
      }
      
      .standings-table table {
        min-width: 700px;
      }
      
      .action-buttons {
        flex-direction: column;
      }
      
      .standings-table .btn {
        width: 100%;
      }
    }
    
    /* Animation delays */
    .standings-group:nth-child(1) { animation-delay: 0.1s; }
    .standings-group:nth-child(2) { animation-delay: 0.2s; }
    .standings-group:nth-child(3) { animation-delay: 0.3s; }
    .standings-group:nth-child(4) { animation-delay: 0.4s; }

  .standings-page
    .container
      // Header
      .standings-header
        h3
          i.bi.bi-trophy-fill
          | Klasemen
      
      // Filter Section
      .filter-section
        form(action="/subadmin/standings" method="get")
          .row.align-items-end
            .col-md-8
              label.mb-2
                i.bi.bi-funnel-fill
                | Filter Berdasarkan Cabang Olahraga
              select.form-select(name="sport_id" onchange="this.form.submit()")
                option(value="") Semua Cabang Olahraga
                each s in sports
                  option(value=s.id selected=(query && s.id == query.sport_id))= s.name

      // Build groups
      - const groups = [];
      - if (standings && standings.length) {
      -   for (let i = 0; i < standings.length; i++) {
      -     const r = standings[i];
      -     const sid = r.sport_id || '__nogroup';
      -     if (!groups.length || groups[groups.length - 1].sport_id !== sid) {
      -       groups.push({ sport_id: sid, sport_name: r.sport_name, rows: [r] });
      -     } else {
      -       groups[groups.length - 1].rows.push(r);
      -     }
      -   }
      - }

      // Display standings
      if groups.length
        each group in groups
          .standings-group
            .group-title
              .group-title-icon
                i.bi.bi-flag-fill
              h5= group.sport_name
            
            .standings-table
              .table-responsive
                table.table.table-hover
                  thead
                    tr
                      th #
                      th Tim
                      th.text-center PJ
                      th.text-center M
                      th.text-center S
                      th.text-center K
                      th.text-center GM
                      th.text-center GK
                      th.text-center SG
                      th.text-end Poin
                      th.text-center Aksi
                  tbody
                    each row, index in group.rows
                      tr
                        td
                          if index === 0
                            span.position-badge.position-1 1
                          else if index === 1
                            span.position-badge.position-2 2
                          else if index === 2
                            span.position-badge.position-3 3
                          else
                            span.position-badge.position-other= index + 1
                        td
                          .team-name
                            i.bi.bi-shield-fill-check
                            b= row.team_name
                        td.text-center.stat-cell= row.played || 0
                        td.text-center.stat-cell= row.win || 0
                        td.text-center.stat-cell= row.draw || 0
                        td.text-center.stat-cell= row.loss || 0
                        td.text-center.stat-cell= row.goals_for || 0
                        td.text-center.stat-cell= row.goals_against || 0
                        td.text-center.stat-cell= (row.goals_for - row.goals_against)
                        td.text-end.points-cell= row.pts || 0
                        td.text-center
                          .action-buttons
                            a.btn.btn-sm.btn-success(href=`/subadmin/standings/${row.id}/add-win`)
                              i.bi.bi-plus-circle
                              | W
                            a.btn.btn-sm.btn-danger(href=`/subadmin/standings/${row.id}/add-loss`)
                              i.bi.bi-plus-circle
                              | L
      else
        .empty-state
          .empty-state-icon
            i.bi.bi-clipboard2-x
          h4 Belum Ada Klasemen
          p
            | Klasemen untuk cabang olahraga yang dipilih belum tersedia.
            br
            | Silakan pilih cabang olahraga lain atau tambahkan data klasemen baru.

  //- Custom JavaScript
  script.
    (function() {
      // Intersection Observer for animations
      if ('IntersectionObserver' in window) {
        var observer = new IntersectionObserver(function(entries) {
          entries.forEach(function(entry) {
            if (entry.isIntersecting) {
              entry.target.style.opacity = '1';
              entry.target.style.transform = 'translateY(0)';
            }
          });
        }, {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px'
        });
        
        // Observe all groups
        document.querySelectorAll('.standings-group').forEach(function(group) {
          observer.observe(group);
        });
      }
      
      // Add hover effects
      var rows = document.querySelectorAll('.standings-table tbody tr');
      rows.forEach(function(row) {
        row.addEventListener('mouseenter', function() {
          this.style.transition = 'all 0.3s ease';
        });
      });
    })();