extends ../layout/main

block content
  style.
    /* Standings Page Styles */
    .standings-page {
      background: linear-gradient(135deg, #f5f8fa 0%, #e9eef3 100%);
      min-height: 100vh;
      padding: 3rem 0;
    }
    
    .standings-header {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
      border-radius: 20px;
      padding: 2.5rem;
      margin-bottom: 2rem;
      position: relative;
      overflow: hidden;
      animation: fadeInDown 0.6s ease-out;
    }
    
    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .standings-header::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -20%;
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, rgba(0, 149, 255, 0.15) 0%, transparent 70%);
      border-radius: 50%;
    }
    
    .standings-header h3 {
      color: white;
      font-family: 'Bebas Neue', cursive;
      font-size: 2.5rem;
      letter-spacing: 1px;
      margin: 0;
      position: relative;
      z-index: 2;
    }
    
    .standings-header h3 i {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-right: 0.5rem;
    }
    
    .filter-section {
      background: white;
      border-radius: 15px;
      padding: 1.5rem;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
      margin-bottom: 2rem;
      animation: fadeInUp 0.6s ease-out 0.2s backwards;
    }
    
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .filter-section label {
      color: #0B1F3F;
      font-weight: 600;
      font-size: 0.95rem;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .filter-section label i {
      color: #0095FF;
    }
    
    .filter-section select {
      border-radius: 10px;
      border: 2px solid #e8edf2;
      padding: 0.75rem 1rem;
      font-size: 1rem;
      transition: all 0.3s ease;
    }
    
    .filter-section select:focus {
      border-color: #0095FF;
      box-shadow: 0 0 0 0.2rem rgba(0, 149, 255, 0.15);
    }
    
    .standings-group {
      background: white;
      border-radius: 20px;
      padding: 2rem;
      margin-bottom: 2rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      animation: fadeInUp 0.6s ease-out backwards;
      border: 2px solid #e8edf2;
      transition: all 0.4s ease;
    }
    
    .standings-group:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 30px rgba(0, 149, 255, 0.12);
      border-color: #0095FF;
    }
    
    .group-title {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 2px solid #e8edf2;
    }
    
    .group-title-icon {
      width: 50px;
      height: 50px;
      background: linear-gradient(135deg, #f0f8ff 0%, #e0f2ff 100%);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 2px solid #d6edff;
    }
    
    .group-title-icon i {
      font-size: 1.5rem;
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .group-title h5 {
      color: #0B1F3F;
      font-weight: 700;
      font-size: 1.4rem;
      margin: 0;
    }
    
    .standings-table {
      border-radius: 15px;
      overflow: hidden;
      border: 2px solid #f8f9fa;
    }
    
    .standings-table table {
      margin-bottom: 0;
    }
    
    .standings-table thead {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
    }
    
    .standings-table thead th {
      background: transparent !important; /* ikut parent */
      color: white !important;
      font-weight: 600;
      font-size: 0.85rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      padding: 1rem 0.75rem;
      border: none;
      white-space: nowrap;
    }
    
    .standings-table tbody tr {
      transition: all 0.3s ease;
      border-bottom: 1px solid #e8edf2;
    }
    
    .standings-table tbody tr:hover {
      background: linear-gradient(90deg, rgba(0, 149, 255, 0.05) 0%, rgba(52, 199, 255, 0.05) 100%);
      transform: scale(1.01);
    }
    
    .standings-table tbody td {
      padding: 1rem 0.75rem;
      vertical-align: middle;
      font-size: 0.95rem;
    }
    
    .team-name {
      font-weight: 700;
      color: #0B1F3F;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .team-name i {
      color: #0095FF;
      font-size: 1rem;
    }
    
    .stat-cell {
      font-weight: 600;
      color: #495057;
    }
    
    .points-cell {
      font-weight: 700;
      font-size: 1.1rem;
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .action-buttons {
      display: flex;
      gap: 0.4rem;
    }
    
    .standings-table .btn {
      border-radius: 8px;
      font-weight: 600;
      font-size: 0.8rem;
      padding: 0.4rem 0.8rem;
      transition: all 0.3s ease;
      border: none;
      display: inline-flex;
      align-items: center;
      gap: 0.3rem;
    }
    
    .standings-table .btn-success {
      background: linear-gradient(135deg, #34C759 0%, #30D158 100%);
      box-shadow: 0 2px 8px rgba(52, 199, 89, 0.3);
    }
    
    .standings-table .btn-success:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(52, 199, 89, 0.4);
    }
    
    .standings-table .btn-danger {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      box-shadow: 0 2px 8px rgba(0, 149, 255, 0.3);
    }
    
    .standings-table .btn-danger:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(0, 149, 255, 0.4);
    }
    
    .empty-state {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border: 2px dashed #d0d0d0;
      border-radius: 20px;
      padding: 4rem 2rem;
      text-align: center;
      animation: fadeInUp 0.6s ease-out;
    }
    
    .empty-state-icon {
      width: 100px;
      height: 100px;
      background: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      animation: float 3s ease-in-out infinite;
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }
    
    .empty-state-icon i {
      font-size: 3rem;
      color: #adb5bd;
    }
    
    .empty-state h4 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2rem;
      color: #0B1F3F;
      letter-spacing: 1px;
      margin-bottom: 0.75rem;
    }
    
    .empty-state p {
      color: #5a6c7d;
      font-size: 1.05rem;
      margin: 0;
    }
    
    /* Position badges */
    .position-badge {
      width: 30px;
      height: 30px;
      border-radius: 8px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      font-size: 0.85rem;
      margin-right: 0.5rem;
    }
    
    .position-1 {
      background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
      color: white;
      box-shadow: 0 2px 8px rgba(255, 215, 0, 0.4);
    }
    
    .position-2 {
      background: linear-gradient(135deg, #C0C0C0 0%, #A8A8A8 100%);
      color: white;
      box-shadow: 0 2px 8px rgba(192, 192, 192, 0.4);
    }
    
    .position-3 {
      background: linear-gradient(135deg, #CD7F32 0%, #B87333 100%);
      color: white;
      box-shadow: 0 2px 8px rgba(205, 127, 50, 0.4);
    }
    
    .position-other {
      background: #f8f9fa;
      color: #5a6c7d;
      border: 2px solid #e9ecef;
    }
    
    /* Responsive */
    @media (max-width: 991px) {
      .standings-header {
        padding: 2rem;
      }
      
      .standings-header h3 {
        font-size: 2rem;
      }
      
      .standings-group {
        padding: 1.5rem;
      }
      
      .standings-table {
        font-size: 0.85rem;
      }
      
      .standings-table thead th,
      .standings-table tbody td {
        padding: 0.75rem 0.5rem;
      }
    }
    
    @media (max-width: 767px) {
      .standings-page {
        padding: 2rem 0;
      }
      
      .standings-header {
        padding: 1.5rem;
      }
      
      .standings-header h3 {
        font-size: 1.5rem;
      }
      
      .standings-group {
        padding: 1rem;
      }
      
      .group-title h5 {
        font-size: 1.2rem;
      }
      
      .standings-table {
        overflow-x: auto;
      }
      
      .standings-table table {
        min-width: 700px;
      }
      
      .action-buttons {
        flex-direction: column;
      }
      
      .standings-table .btn {
        width: 100%;
      }
    }
    
    /* Animation delays */
    .standings-group:nth-child(1) { animation-delay: 0.1s; }
    .standings-group:nth-child(2) { animation-delay: 0.2s; }
    .standings-group:nth-child(3) { animation-delay: 0.3s; }
    .standings-group:nth-child(4) { animation-delay: 0.4s; }

    /* Guide Button */
    .btn-guide {
      display: inline-flex;
      align-items: center;
      gap: 0.35rem;

      background: rgba(255, 255, 255, 0.15);
      color: #fff;

      border: 1px solid rgba(255, 255, 255, 0.35);
      border-radius: 10px;

      font-size: 0.8rem;
      font-weight: 600;
      padding: 0.35rem 0.75rem;

      transition: all 0.25s ease;
    }

    .btn-guide i {
      font-size: 0.95rem;
    }

    .btn-guide:hover {
      background: rgba(255, 255, 255, 0.25);
      border-color: rgba(255, 255, 255, 0.6);
      color: #fff;
      transform: translateY(-1px);
    }

    .btn-guide:active {
      transform: translateY(0);
    }

    .btn-guide:focus {
      box-shadow: 0 0 0 0.15rem rgba(255, 255, 255, 0.25);
    }

  .standings-page
    .container
      .standings-header
        h3
          i.bi.bi-trophy-fill
          | Klasemen Padel 
        button.btn.btn-guide(
          type="button"
          data-bs-toggle="modal"
          data-bs-target="#guideModal"
        )
          i.bi.bi-info-circle
          span.ms-1 Panduan Input Skor

      // === FILTER CABANG (HANYA JIKA LEBIH DARI 1) ===
      if sports && sports.length > 1
        .filter-section
          label.mb-2
            i.bi.bi-funnel-fill
            | Pilih Cabang Olahraga
          select.form-select(
            name="sport_id"
            onchange="location.href='?sport_id=' + this.value"
          )
            each s in sports
              option(
                value=s.id
                selected=(query && Number(query.sport_id) === s.id)
              )= s.name

      if standings.length
        .standings-group
          .group-title
            .group-title-icon
              i.bi.bi-flag-fill
            h5= standings[0].sport_name
          .standings-table
            .table-responsive
              table.table.table-hover
                thead
                  tr
                    th No.
                    th Nama Tim

                    if isPadel
                      th.text-center Jumlah Match
                      th.text-center M-K
                      th.text-center Selisih Skor
                    else
                      th.text-center PJ
                      th.text-center M
                      th.text-center S
                      th.text-center K
                      th.text-center GM
                      th.text-center GK
                      th.text-center SG

                    th.text-center Poin
                    th.text-center Aksi

                tbody
                  each row, index in standings
                    tr
                      td
                        if index === 0
                          span.position-badge.position-1 1
                        else if index === 1
                          span.position-badge.position-2 2
                        else if index === 2
                          span.position-badge.position-3 3
                        else
                          span.position-badge.position-other= index + 1

                      td
                        .team-name
                          i.bi.bi-shield-fill-check
                          b= row.team_name

                      if isPadel
                        td.text-center.stat-cell= row.total_match
                        td.text-center.stat-cell #{row.win} - #{row.loss}
                        td.text-center.stat-cell
                          | #{row.game_win} - #{row.game_loss}
                          if (row.game_win - row.game_loss) >= 0
                            span.text-success.ms-1 (+#{row.game_win - row.game_loss})
                          else
                            span.text-danger.ms-1 (#{row.game_win - row.game_loss})
                      else
                        td.text-center.stat-cell= row.played
                        td.text-center.stat-cell= row.win
                        td.text-center.stat-cell= row.draw
                        td.text-center.stat-cell= row.loss
                        td.text-center.stat-cell= row.goals_for
                        td.text-center.stat-cell= row.goals_against
                        td.text-center.stat-cell
                          if row.goal_diff >= 0
                            span.text-success +#{row.goal_diff}
                          else
                            span.text-danger #{row.goal_diff}

                      td.text-center.points-cell= row.pts

                      td.text-center
                        .action-buttons
                          if isPadel
                            button.btn.btn-sm.btn-primary(
                              type="button"
                              data-id=row.id
                            )
                              i.bi.bi-pencil-square
                              | Input Skor
                          else
                            a.btn.btn-sm.btn-success(
                              href=`/subadmin/standings/${row.id}/add-win?sport_id=${query.sport_id}`
                            ) +W
                            a.btn.btn-sm.btn-danger(
                              href=`/subadmin/standings/${row.id}/add-loss?sport_id=${query.sport_id}`
                            ) -L

      else
        .empty-state
          .empty-state-icon
            i.bi.bi-clipboard2-x
          h4 Belum Ada Klasemen
          p Belum ada pertandingan padel yang selesai.

  #scoreModal.modal.fade(tabindex='-1')
    .modal-dialog
      .modal-content
        .modal-header
          h5.modal-title Input Skor Padel
          button.btn-close(type='button', data-bs-dismiss='modal')

        .modal-body
          small.text-muted
            | Bingung cara isi?
            a.ms-1(
              href="#"
              data-bs-dismiss="modal"
              data-bs-toggle="modal"
              data-bs-target="#guideModal"
            ) Lihat panduan

          input(type="hidden" id="standingId")
          input(type="hidden" id="matchAction")

          .mb-3
            label.form-label Game Menang
            input.form-control(type="number" id="gameWin" min="0" value="0")

          .mb-3
            label.form-label Game Kalah
            input.form-control(type="number" id="gameLoss" min="0" value="0")

        .modal-footer
          button.btn.btn-secondary(data-bs-dismiss='modal') Batal
          button.btn.btn-primary(type="button" id="saveScore") Simpan

  #guideModal.modal.fade(tabindex='-1')
    .modal-dialog.modal-lg.modal-dialog-centered
      .modal-content
        .modal-header
          h5.modal-title
            i.bi.bi-question-circle-fill.me-2
            | Panduan Input Skor Padel
          button.btn-close(type='button', data-bs-dismiss='modal')

        .modal-body
          h6.text-primary.mb-2 1. Apa itu Game Menang & Game Kalah?
          p.mb-3
            | Game Menang adalah jumlah game yang dimenangkan tim.
            | Game Kalah adalah jumlah game yang kalah dari lawan.

          h6.text-primary.mb-2 2. Contoh Pengisian yang Benar
          ul
            li Tim A menang 6‚Äì4 ‚Üí isi:
              ul
                li Game Menang: <b>6</b>
                li Game Kalah: <b>4</b>
            li Tim kalah 3‚Äì6 ‚Üí isi:
              ul
                li Game Menang: <b>3</b>
                li Game Kalah: <b>6</b>

          h6.text-danger.mb-2 3. Aturan Penting
          ul
            li ‚ùå Game Menang dan Game Kalah <b>tidak boleh sama</b>
            li ‚úÖ Tim dengan angka lebih besar otomatis dianggap menang
            li üèÜ Menang mendapat <b>3 poin</b>, kalah <b>0 poin</b>

          h6.text-primary.mb-2 4. Yang Dihitung Sistem
          ul
            li Jumlah Match diambil dari <b>jadwal pertandingan</b>
            li Poin & klasemen dihitung otomatis
            li Tidak perlu input poin manual

          .alert.alert-warning.mt-3
            i.bi.bi-exclamation-triangle-fill.me-2
            | Pastikan skor sudah benar sebelum disimpan. Saat ini skor tidak bisa di-edit ulang.

        .modal-footer
          button.btn.btn-secondary(data-bs-dismiss='modal') Tutup

  script.
    window.CURRENT_SPORT_ID = #{query && query.sport_id ? query.sport_id : 'null'};

  //- Custom JavaScript
  script.
    (function() {
      // Sport filter without reload
      var sportFilter = document.getElementById('sportFilter');
      if (sportFilter) {
        sportFilter.addEventListener('change', function(e) {
          var sportId = this.value;
          var currentUrl = new URL(window.location.href);
          
          if (sportId) {
            currentUrl.searchParams.set('sport_id', sportId);
          } else {
            currentUrl.searchParams.delete('sport_id');
          }
          
          // Update URL and fetch new data
          window.history.pushState({}, '', currentUrl);
          
          // Show loading state
          var groups = document.querySelectorAll('.standings-group');
          groups.forEach(function(group) {
            group.style.opacity = '0.5';
            group.style.pointerEvents = 'none';
          });
          
          // Reload page content (you can replace this with AJAX if needed)
          setTimeout(function() {
            window.location.reload();
          }, 300);
        });
      }
      
      // Simple notification function
      function showNotification(title, message, type) {
        var notif = document.createElement('div');
        notif.style.cssText = 'position: fixed; top: 20px; right: 20px; z-index: 9999; ' +
          'background: white; padding: 1rem 1.5rem; border-radius: 12px; ' +
          'box-shadow: 0 8px 25px rgba(0,0,0,0.15); max-width: 300px; ' +
          'animation: slideInRight 0.3s ease-out;';
        
        var color = type === 'success' ? '#34C759' : '#0095FF';
        var icon = type === 'success' ? 'check-circle-fill' : 'exclamation-circle-fill';
        
        notif.innerHTML = '<div style="display: flex; align-items: start; gap: 0.75rem;">' +
          '<i class="bi bi-' + icon + '" style="font-size: 1.5rem; color: ' + color + ';"></i>' +
          '<div>' +
          '<strong style="color: #0B1F3F; display: block; margin-bottom: 0.25rem;">' + title + '</strong>' +
          '<p style="color: #5a6c7d; margin: 0; font-size: 0.9rem;">' + message + '</p>' +
          '</div>' +
          '</div>';
        
        document.body.appendChild(notif);
        
        setTimeout(function() {
          notif.style.animation = 'slideOutRight 0.3s ease-out';
          setTimeout(function() {
            document.body.removeChild(notif);
          }, 300);
        }, 3000);
      }
      
      // Add animation styles
      var style = document.createElement('style');
      style.textContent = '@keyframes slideInRight { from { opacity: 0; transform: translateX(100px); } to { opacity: 1; transform: translateX(0); } }' +
        '@keyframes slideOutRight { from { opacity: 1; transform: translateX(0); } to { opacity: 0; transform: translateX(100px); } }';
      document.head.appendChild(style);
      
      // Intersection Observer for animations
      if ('IntersectionObserver' in window) {
        var observer = new IntersectionObserver(function(entries) {
          entries.forEach(function(entry) {
            if (entry.isIntersecting) {
              entry.target.style.opacity = '1';
              entry.target.style.transform = 'translateY(0)';
            }
          });
        }, {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px'
        });
        
        // Observe all groups
        document.querySelectorAll('.standings-group').forEach(function(group) {
          observer.observe(group);
        });
      }
      
      // Add hover effects
      var rows = document.querySelectorAll('.standings-table tbody tr');
      rows.forEach(function(row) {
        row.addEventListener('mouseenter', function() {
          this.style.transition = 'all 0.3s ease';
        });
      });
      document.querySelectorAll('.action-buttons button').forEach(btn => {
        btn.addEventListener('click', () => {
          document.getElementById('standingId').value = btn.dataset.id;
          document.getElementById('gameWin').value = 0;
          document.getElementById('gameLoss').value = 0;

          new bootstrap.Modal(document.getElementById('scoreModal')).show();
        });
      });

      document.getElementById('saveScore').addEventListener('click', () => {
        const id = document.getElementById('standingId').value;
        const gw = Number(document.getElementById('gameWin').value);
        const gl = Number(document.getElementById('gameLoss').value);

        if (gw === gl) {
          alert('Game menang dan kalah tidak boleh sama');
          return;
        }

        const action = gw > gl ? 'win' : 'loss';
        fetch(
          `/subadmin/standings/${id}/submit?game_win=${gw}&game_loss=${gl}&result=${action}&sport_id=${window.CURRENT_SPORT_ID}`
        )
        .then(res => res.json())
        .then(() => {
          // versi simpel
          location.reload();

          // versi proper (advanced):
          // update row DOM + re-sort table tanpa reload
        });
      });
    })();