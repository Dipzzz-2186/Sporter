extends ../layout/main

block content
  style.
    /* Global Animations */
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    @keyframes slideInLeft {
      from { opacity: 0; transform: translateX(-30px); }
      to { opacity: 1; transform: translateX(0); }
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0) scale(1); }
      50% { transform: translateY(-20px) scale(1.05); }
    }
    
    @keyframes pulse {
      0%, 100% { box-shadow: 0 0 0 0 rgba(0, 149, 255, 0.4); }
      50% { box-shadow: 0 0 0 8px rgba(0, 149, 255, 0); }
    }
    
    /* Hero Section - Layout diperbaiki */
    .videos-hero {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
      position: relative;
      overflow: hidden;
      padding: 4.5rem 0 3rem;
      margin-bottom: 2.5rem;
    }
    
    .videos-hero::before {
      content: '';
      position: absolute;
      top: -40%;
      right: -15%;
      width: 700px;
      height: 700px;
      background: radial-gradient(circle, rgba(0, 149, 255, 0.15) 0%, transparent 70%);
      border-radius: 50%;
      animation: float 6s ease-in-out infinite;
    }
    
    .videos-hero::after {
      content: '';
      position: absolute;
      bottom: -30%;
      left: -5%;
      width: 500px;
      height: 500px;
      background: radial-gradient(circle, rgba(52, 199, 255, 0.1) 0%, transparent 70%);
      border-radius: 50%;
      animation: float 8s ease-in-out infinite reverse;
    }
    
    .videos-hero-content {
      position: relative;
      z-index: 2;
    }
    
    .videos-hero-badge {
      background: rgba(0, 149, 255, 0.15);
      color: #0095FF;
      border: 2px solid rgba(0, 149, 255, 0.3);
      padding: 0.75rem 1.5rem;
      border-radius: 50px;
      font-size: 0.95rem;
      font-weight: 600;
      backdrop-filter: blur(10px);
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 1.5rem;
      animation: pulse 2s infinite;
    }
    
    .videos-hero h1 {
      color: white;
      font-size: 3.2rem;
      line-height: 1.2;
      margin-bottom: 1rem;
      font-weight: 800;
    }
    
    .videos-hero .text-primary {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .videos-hero .lead {
      color: rgba(255, 255, 255, 0.85);
      font-size: 1.1rem;
      line-height: 1.7;
      max-width: 600px;
    }
    
    /* Filter Section - Layout lebih baik */
    .video-filter-section {
      background: white;
      padding: 2rem 0 2.5rem;
      border-bottom: 1px solid #f0f0f0;
    }
    
    .filter-container {
      background: linear-gradient(135deg, #f5f8fa 0%, #e9eef3 100%);
      border-radius: 20px;
      padding: 2rem;
      position: relative;
      overflow: hidden;
    }
    
    .filter-container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 3px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
    }
    
    .filter-header {
      margin-bottom: 1.5rem;
    }
    
    .filter-header h3 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.2rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin-bottom: 0.5rem;
    }
    
    .filter-header p {
      color: #5a6c7d;
      font-size: 1rem;
      margin: 0;
    }
    
    .filter-buttons-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 0.75rem;
    }
    
    .btn-filter {
      background: white;
      border: 2px solid #d0d0d0;
      border-radius: 12px;
      padding: 1rem 1.5rem;
      font-weight: 600;
      color: #5a6c7d;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .btn-filter span {
      white-space: nowrap;
    }

    .filter-buttons-grid[data-filter="type"] {
      grid-template-columns: repeat(auto-fit, minmax(190px, 1fr));
    }

    .btn-filter::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: 1;
    }
    
    .btn-filter span,
    .btn-filter i {
      position: relative;
      z-index: 2;
    }
    
    .btn-filter:hover,
    .btn-filter.active {
      border-color: transparent;
      color: white;
      transform: translateY(-3px);
      box-shadow: 0 8px 20px rgba(0, 149, 255, 0.25);
    }
    
    .btn-filter.active::before,
    .btn-filter:hover::before {
      opacity: 1;
    }
    
    /* Videos Section - Layout baru */
    .videos-section {
      padding: 3rem 0 4rem;
      background: white;
    }
    
    .videos-header {
      margin-bottom: 2.5rem;
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      padding-bottom: 1rem;
      border-bottom: 2px solid #f0f0f0;
    }
    
    .videos-header-left {
      flex: 1;
    }
    
    .videos-header-left h2 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.8rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin: 0 0 0.5rem 0;
      line-height: 1;
    }
    
    .videos-header-left p {
      color: #5a6c7d;
      font-size: 1.05rem;
      margin: 0;
    }
    
    .videos-header-right {
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    
    .video-counter {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      background: rgba(0, 149, 255, 0.1);
      padding: 0.75rem 1.25rem;
      border-radius: 50px;
      color: #0095FF;
      font-weight: 600;
      font-size: 0.95rem;
    }
    
    /* Video Cards Grid */
    .sporter-video-card {
      border-radius: 20px;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      border: 2px solid #e8edf2;
      overflow: hidden;
      position: relative;
      background: white;
      height: 100%;
      display: flex;
      flex-direction: column;
    }
    
    .sporter-video-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 5px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
      transform: scaleX(0);
      transition: transform 0.4s ease;
      z-index: 2;
    }
    
    .sporter-video-card:hover::before {
      transform: scaleX(1);
    }
    
    .sporter-video-card:hover {
      transform: translateY(-10px) scale(1.02);
      box-shadow: 0 25px 50px rgba(0, 149, 255, 0.15);
      border-color: transparent;
    }
    
    .video-card-media {
      position: relative;
      height: 200px;
      overflow: hidden;
      border-radius: 18px 18px 0 0;
    }
    
    .video-card-media .video-player {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    .video-card-media img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .sporter-video-card:hover .video-card-media img {
      transform: scale(1.08);
    }
    
    /* Video Play Overlay */
    .video-play-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.3);
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    
    .sporter-video-card:hover .video-play-overlay {
      opacity: 1;
    }
    
    .play-button {
      width: 60px;
      height: 60px;
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.5rem;
      transform: scale(0.8);
      transition: transform 0.3s ease;
    }
    
    .sporter-video-card:hover .play-button {
      transform: scale(1);
    }
    
    .video-duration {
      position: absolute;
      bottom: 15px;
      right: 15px;
      background: rgba(0, 0, 0, 0.8);
      color: white;
      padding: 0.4rem 0.8rem;
      border-radius: 15px;
      font-size: 0.8rem;
      font-weight: 600;
      backdrop-filter: blur(10px);
    }
    
    .video-card-content {
      padding: 1.75rem;
      flex: 1;
      display: flex;
      flex-direction: column;
    }
    
    .video-card-header {
      margin-bottom: 1rem;
    }
    
    .video-sport-badge {
      background: rgba(0, 149, 255, 0.1);
      color: #0080e0;
      padding: 0.5rem 1rem;
      border-radius: 50px;
      font-size: 0.85rem;
      font-weight: 700;
      border: 1.5px solid rgba(0, 149, 255, 0.2);
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .video-card-title {
      color: #0B1F3F;
      font-weight: 700;
      font-size: 1.25rem;
      line-height: 1.4;
      margin: 0.75rem 0;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    .video-card-meta {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.25rem;
      flex-wrap: wrap;
    }
    
    .video-meta-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: #5a6c7d;
      font-size: 0.9rem;
    }
    
    .video-meta-item i {
      color: #0095FF;
      font-size: 1rem;
    }
    
    .video-card-stats {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 0.75rem;
      margin-top: auto;
      padding-top: 1rem;
      border-top: 1px solid #f0f0f0;
    }
    
    .video-stat-item {
      text-align: center;
    }
    
    .video-stat-value {
      display: block;
      font-size: 1.1rem;
      font-weight: 700;
      color: #0B1F3F;
      line-height: 1;
      margin-bottom: 0.25rem;
    }
    
    .video-stat-label {
      display: block;
      font-size: 0.8rem;
      color: #5a6c7d;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    
    .video-card-actions {
      margin-top: 1.5rem;
    }
    
    .btn-watch-video {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      border: none;
      color: white;
      padding: 1rem 1.5rem;
      border-radius: 12px;
      font-weight: 600;
      font-size: 0.95rem;
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      z-index: 1;
    }
    
    .btn-watch-video::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, #0080e0 0%, #0095FF 100%);
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: -1;
    }
    
    .btn-watch-video:hover::before {
      opacity: 1;
    }
    
    .btn-watch-video:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 25px rgba(0, 149, 255, 0.3);
    }
    
    /* Featured Video Section */
    .featured-video-section {
      padding: 2rem 0 3rem;
      background: white;
      border-bottom: 1px solid #f0f0f0;
    }
    
    .featured-video-header {
      margin-bottom: 2rem;
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      padding-bottom: 1rem;
      border-bottom: 2px solid #f0f0f0;
    }
    
    .featured-video-header h3 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.4rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin: 0 0 0.25rem 0;
    }
    
    .featured-video-header p {
      color: #5a6c7d;
      font-size: 1.05rem;
      margin: 0;
    }
    
    .featured-badge {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      color: white !important;
      padding: 0.75rem 1.5rem;
      border-radius: 50px;
      font-weight: 700;
      font-size: 0.9rem;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      border: none;
    }
    
    .featured-video-card {
      background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
      border-radius: 25px;
      overflow: hidden;
      border: 2px solid #e8edf2;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    }
    
    .featured-video-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 20px 40px rgba(0, 149, 255, 0.15);
      border-color: #0095FF;
    }
    
    .featured-video-player {
      position: relative;
      height: 380px;
      overflow: hidden;
      border-radius: 23px 23px 0 0;
    }
    
    .featured-video-player iframe {
      width: 100%;
      height: 100%;
      border: none;
    }
    
    .featured-video-content {
      padding: 2rem;
    }
    
    .featured-video-title {
      font-size: 1.6rem;
      font-weight: 700;
      color: #0B1F3F;
      margin-bottom: 1rem;
    }
    
    .featured-video-description {
      color: #5a6c7d;
      font-size: 1.05rem;
      line-height: 1.7;
      margin-bottom: 1.5rem;
    }
    
    .featured-video-details {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }
    
    .featured-detail-item {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .featured-detail-label {
      color: #5a6c7d;
      font-size: 0.9rem;
      font-weight: 600;
    }
    
    .featured-detail-value {
      color: #0B1F3F;
      font-size: 1.1rem;
      font-weight: 700;
    }
    
    /* Stats Section - Layout lebih baik */
    .video-stats-section {
      background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
      padding: 4rem 0;
      border-radius: 25px;
      margin-top: 3rem;
    }
    
    .stats-header {
      text-align: center;
      margin-bottom: 3rem;
    }
    
    .stats-header h3 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.4rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin-bottom: 0.5rem;
    }
    
    .stats-header p {
      color: #5a6c7d;
      font-size: 1.05rem;
      max-width: 600px;
      margin: 0 auto;
    }
    
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.5rem;
    }
    
    .stats-card {
      background: white;
      border-radius: 20px;
      padding: 2rem 1.5rem;
      text-align: center;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      border: 2px solid #e8edf2;
      position: relative;
      overflow: hidden;
    }
    
    .stats-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
      transform: scaleX(0);
      transition: transform 0.3s ease;
    }
    
    .stats-card:hover::before {
      transform: scaleX(1);
    }
    
    .stats-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 40px rgba(0, 149, 255, 0.15);
      border-color: #0095FF;
    }
    
    .stats-icon-wrapper {
      width: 80px;
      height: 80px;
      background: linear-gradient(135deg, rgba(0, 149, 255, 0.1) 0%, rgba(52, 199, 255, 0.2) 100%);
      border-radius: 20px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1.5rem;
      transition: all 0.3s ease;
    }
    
    .stats-card:hover .stats-icon-wrapper {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      transform: scale(1.1);
    }
    
    .stats-icon-wrapper i {
      font-size: 2.2rem;
      color: #0095FF;
      transition: color 0.3s ease;
    }
    
    .stats-card:hover .stats-icon-wrapper i {
      color: white;
    }
    
    .stats-value {
      font-size: 2.5rem;
      font-weight: 800;
      color: #0B1F3F;
      line-height: 1;
      margin-bottom: 0.5rem;
      letter-spacing: -0.5px;
    }
    
    .stats-label {
      color: #5a6c7d;
      font-size: 1rem;
      font-weight: 600;
      margin: 0;
    }
    
    /* Empty State */
    .video-empty-state {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border: 2px dashed #d0d0d0;
      border-radius: 20px;
      padding: 4rem 2rem;
      text-align: center;
      max-width: 800px;
      margin: 2rem auto;
      position: relative;
      overflow: hidden;
    }
    
    .video-empty-state::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: linear-gradient(45deg, transparent 30%, rgba(0, 149, 255, 0.05) 50%, transparent 70%);
      animation: shimmer 3s infinite linear;
    }
    
    @keyframes shimmer {
      0% { transform: translateX(-100%); }
      100% { transform: translateX(100%); }
    }
    
    .video-empty-state-icon {
      width: 120px;
      height: 120px;
      background: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.75rem;
      position: relative;
      z-index: 2;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    }
    
    .video-empty-state-icon i {
      font-size: 3.5rem;
      color: #adb5bd;
      animation: float 3s infinite;
    }
    
    .video-empty-state h3 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.2rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin-bottom: 0.75rem;
      position: relative;
      z-index: 2;
    }
    
    .video-empty-state p {
      color: #5a6c7d;
      font-size: 1.05rem;
      line-height: 1.6;
      margin: 0;
      position: relative;
      z-index: 2;
    }
    
    /* Responsive */
    @media (max-width: 1199px) {
      .videos-hero h1 {
        font-size: 2.8rem;
      }
      
      .videos-header-left h2 {
        font-size: 2.4rem;
      }
      
      .featured-video-header h3 {
        font-size: 2rem;
      }
      
      .featured-video-player {
        height: 350px;
      }
    }
    
    @media (max-width: 991px) {
      .videos-hero {
        padding: 3.5rem 0 2.5rem;
      }
      
      .videos-hero h1 {
        font-size: 2.4rem;
      }
      
      .videos-hero .lead {
        font-size: 1rem;
      }
      
      .filter-buttons-grid {
        grid-template-columns: repeat(4, 1fr);
      }
      
      .videos-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
      }
      
      .videos-header-right {
        width: 100%;
        justify-content: space-between;
      }
      
      .featured-video-player {
        height: 300px;
      }
      
      .featured-video-content {
        padding: 1.75rem;
      }
      
      .stats-header h3 {
        font-size: 2rem;
      }
    }
    
    @media (max-width: 767px) {
      .videos-hero h1 {
        font-size: 2rem;
      }
      
      .filter-container {
        padding: 1.5rem;
      }
      
      .filter-buttons-grid {
        grid-template-columns: repeat(3, 1fr);
      }
      
      .videos-header-left h2 {
        font-size: 2rem;
      }
      
      .video-card-content {
        padding: 1.5rem;
      }
      
      .featured-video-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
      }
      
      .featured-video-header h3 {
        font-size: 1.8rem;
      }
      
      .featured-video-player {
        height: 250px;
      }
      
      .featured-video-title {
        font-size: 1.3rem;
      }
      
      .featured-video-details {
        grid-template-columns: 1fr;
      }
      
      .stats-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    
    @media (max-width: 575px) {
      .filter-buttons-grid {
        grid-template-columns: repeat(2, 1fr);
      }
      
      .video-card-meta {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
      }
      
      .stats-grid {
        grid-template-columns: 1fr;
      }
    }
    
    /* Animation delays */
