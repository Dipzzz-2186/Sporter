  //- Custom JavaScript
  script.
    (function() {
      // Helper function untuk icon olahraga - DIUPDATE untuk cabang olahraga baru
      function getSportIcon(sportName) {
        const icons = {
          'Golf': 'bi-flag-fill',
          'Run': 'bi-person-running',
          'Padel': 'bi-diamond-half',
          'Tenis': 'bi-circle-half',
          'Renang': 'bi-water',
          'Triathlon': 'bi-heart-pulse-fill',
          'Bulu Tangkis': 'bi-brightness-alt-high-fill',
        };
        
        // Cari icon berdasarkan kata kunci
        for (const [key, value] of Object.entries(icons)) {
          if (sportName.toLowerCase().includes(key.toLowerCase())) {
            return value;
          }
        }
        return 'bi-trophy-fill';
      }
      
      // Apply icons to existing badges
      document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.video-sport-badge i').forEach(function(icon) {
          const badge = icon.closest('.video-sport-badge');
          if (badge) {
            const sportName = badge.textContent.trim();
            const iconClass = getSportIcon(sportName);
            if (iconClass) {
              icon.className = 'bi ' + iconClass;
            }
          }
        });
        
        // Intersection Observer for animations
        if ('IntersectionObserver' in window) {
          const observer = new IntersectionObserver(function(entries) {
            entries.forEach(function(entry) {
              if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
              }
            });
          }, {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
          });
          
          // Observe all cards
          document.querySelectorAll('.sporter-video-card, .stats-card').forEach(function(card) {
            card.style.opacity = '0';
            card.style.transform = 'translateY(30px)';
            card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            observer.observe(card);
          });
        }
        
        // Video filtering system - DIUPDATE untuk cabang olahraga baru
        const filterButtons = document.querySelectorAll('.btn-filter');
        const videoCards = document.querySelectorAll('.sporter-video-card');
        const videoCountElement = document.getElementById('video-count');
        
        function updateVideoCount() {
          // Count visible columns (cards' column wrappers) so layout collapses correctly
          const visibleCols = document.querySelectorAll('.row.g-4 .col-md-6.col-lg-4:not([style*="display: none"])');
          
          if (videoCountElement) {
            const countSpan = videoCountElement.querySelector('span');
            if (countSpan) {
              countSpan.textContent = `${visibleCols.length} Video`;
            }
          }
          
          // Update stats cards
          animateCounter('.stats-card:nth-child(1) .stats-value', visibleCols.length);
          
          const totalDuration = visibleCols.length > 0 ? 
            Math.floor(visibleCols.length * 30) : 0;
          animateCounter('.stats-card:nth-child(2) .stats-value', totalDuration);
          
          const totalViews = visibleCols.length * 1250;
          animateCounter('.stats-card:nth-child(3) .stats-value', totalViews);
          
          const tournaments = Math.max(1, Math.floor(visibleCols.length / 3));
          animateCounter('.stats-card:nth-child(4) .stats-value', tournaments);
        }
        
        function animateCounter(selector, targetValue) {
          const element = document.querySelector(selector);
          if (!element) return;
          
          const currentValue = parseInt(element.textContent) || 0;
          const duration = 800;
          const steps = 40;
          const increment = (targetValue - currentValue) / steps;
          let currentStep = 0;
          
          const timer = setInterval(() => {
            currentStep++;
            const newValue = Math.floor(currentValue + (increment * currentStep));
            element.textContent = newValue;
            
            if (currentStep >= steps) {
              clearInterval(timer);
              element.textContent = targetValue;
            }
          }, duration / steps);
        }
        
        function applyFilter() {
          const activeSportBtn = document.querySelector('.btn-filter.active[data-sport]');
          const activeTypeBtn  = document.querySelector('.btn-filter.active[data-type]');

          const sport = activeSportBtn ? activeSportBtn.dataset.sport : 'all';
          const type  = activeTypeBtn  ? activeTypeBtn.dataset.type  : 'all';

          videoCards.forEach(card => {
            const col = card.closest('.col-md-6.col-lg-4');
            const sportBadge = card.querySelector('.video-sport-badge');
            const sportName = sportBadge ? sportBadge.textContent.toLowerCase() : '';
            const cardType = card.dataset.type;

            let showBySport = true;
            let showByType  = true;

            // === FILTER SPORT ===
            if (sport !== 'all') {
              showBySport = sportName.includes(sport);
            }

            // === FILTER TYPE ===
            if (type !== 'all') {
              showByType = cardType === type;
            }

            if (showBySport && showByType) {
              col.style.display = '';
              card.style.opacity = '1';
              card.style.transform = 'translateY(0)';
            } else {
              card.style.opacity = '0';
              card.style.transform = 'translateY(20px)';
              setTimeout(() => col.style.display = 'none', 300);
            }
          });

          setTimeout(updateVideoCount, 350);
        }
        filterButtons.forEach(button => {
          button.addEventListener('click', function () {
            const isType = this.dataset.type;
            const isSport = this.dataset.sport;

            if (isType) {
              document.querySelectorAll('[data-type]').forEach(b => b.classList.remove('active'));
            }
            if (isSport) {
              document.querySelectorAll('[data-sport]').forEach(b => b.classList.remove('active'));
            }

            this.classList.add('active');
            applyFilter();
          });
        });

        // Add smooth hover effects
        document.querySelectorAll('.btn-watch-video').forEach(button => {
          button.addEventListener('mouseenter', function() {
            const icon = this.querySelector('i');
            if (icon) {
              icon.style.transform = 'scale(1.2)';
              icon.style.transition = 'transform 0.3s ease';
            }
          });
          
          button.addEventListener('mouseleave', function() {
            const icon = this.querySelector('i');
            if (icon) {
              icon.style.transform = 'scale(1)';
            }
          });
        });
        
        // Simulate view count updates
        function simulateViewUpdates() {
          const visibleCards = document.querySelectorAll('.sporter-video-card:not([style*="display: none"])');
          visibleCards.forEach(card => {
            const viewElement = card.querySelector('.video-stat-item:nth-child(1) .video-stat-value');
            if (viewElement) {
              const current = parseInt(viewElement.textContent) || 100;
              const change = Math.floor(Math.random() * 10) + 1;
              const newCount = current + change;
              viewElement.textContent = newCount;
            }
            
            const likeElement = card.querySelector('.video-stat-item:nth-child(2) .video-stat-value');
            if (likeElement) {
              const current = parseInt(likeElement.textContent) || 50;
              const change = Math.floor(Math.random() * 5);
              const newCount = current + change;
              likeElement.textContent = newCount;
            }
          });
        }
        
        // Start simulation
        if (videoCards.length > 0) {
          setInterval(simulateViewUpdates, 10000);
        }
        
        // Initialize dengan filter aktif
        applyFilter();
      });
    })();