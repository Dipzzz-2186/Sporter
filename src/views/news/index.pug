  //- Custom JavaScript
  script.
    (function() {
      // Helper untuk icon olahraga
      function getSportIcon(sportName) {
        const icons = {
          'golf': 'bi-flag-fill',
          'run': 'bi-person-running',
          'tenis': 'bi-circle-half',
          'padel': 'bi-brightness-high-fill',
          'badminton': 'bi-shuttle',
          'renang': 'bi-water',
          'triathlon': 'bi-bicycle',
          'olahraga': 'bi-trophy-fill',
          'berita': 'bi-newspaper'
        };
        return icons[sportName] || 'bi-trophy-fill';
      }
      
      // Helper untuk menentukan apakah artikel sesuai dengan filter
      function articleMatchesFilter(articleSport, filterSport) {
        if (!articleSport) return false;
        
        const sportMap = {
          'golf': ['golf'],
          'run': ['run', 'lari', 'marathon', 'sprint'],
          'tenis': ['tenis', 'tennis'],
          'padel': ['padel', 'padle'],
          'badminton': ['badminton', 'bulu-tangkis'],
          'renang': ['renang', 'swimming'],
          'triathlon': ['triathlon', 'triatlon']
        };
        
        if (filterSport === 'all') return true;
        
        const articleSportLower = articleSport.toLowerCase();
        const mappedSports = sportMap[filterSport];
        
        if (!mappedSports) return articleSportLower.includes(filterSport);
        
        return mappedSports.some(sport => articleSportLower.includes(sport));
      }
      
      // News filtering system - UPDATED untuk semua artikel
      function initializeNewsFilter() {
        const filterButtons = document.querySelectorAll('.btn-news-filter');
        const allNewsItems = document.querySelectorAll('.news-item');
        const noResultsState = document.getElementById('no-results-state');
        const filterMessage = document.getElementById('filter-message');
        const totalArticlesElement = document.getElementById('total-articles');
        const resetFilterBtn = document.getElementById('reset-filter');
        
        function updateUI() {
          const activeButton = document.querySelector('.btn-news-filter.active');
          const activeSport = activeButton ? activeButton.getAttribute('data-sport') : 'all';
          
          let visibleCount = 0;
          
          // Filter semua artikel (termasuk hero section)
          allNewsItems.forEach(item => {
            const itemSport = item.getAttribute('data-sport');
            const shouldShow = articleMatchesFilter(itemSport, activeSport);
            
            if (shouldShow) {
              item.style.display = '';
              item.style.opacity = '1';
              item.style.transform = 'translateY(0)';
              visibleCount++;
            } else {
              item.style.opacity = '0';
              item.style.transform = 'translateY(20px)';
              setTimeout(() => {
                item.style.display = 'none';
              }, 300);
            }
          });
          
          // Tampilkan atau sembunyikan "No Results" state
          const heroSection = document.querySelector('.news-hero-section');
          const otherSection = document.querySelector('.news-other-section');
          const filterSection = document.querySelector('.news-filter-section');
          
          if (visibleCount === 0) {
            // Sembunyikan semua section kecuali filter
            if (heroSection) heroSection.style.display = 'none';
            if (otherSection) otherSection.style.display = 'none';
            noResultsState.style.display = 'block';
          } else {
            // Tampilkan section yang relevan
            if (heroSection) heroSection.style.display = '';
            if (otherSection) otherSection.style.display = '';
            noResultsState.style.display = 'none';
          }
          
          // Update counter
          if (totalArticlesElement) {
            totalArticlesElement.textContent = visibleCount;
          }
          
          // Update filter message
          if (filterMessage) {
            if (activeSport === 'all') {
              filterMessage.textContent = 'Temukan berita berdasarkan cabang olahraga favorit Anda';
            } else {
              const sportName = activeButton.querySelector('span').textContent;
              filterMessage.textContent = `Menampilkan ${visibleCount} berita ${sportName.toLowerCase()}`;
            }
          }
        }
        
        // Event listeners untuk filter buttons
        filterButtons.forEach(button => {
          button.addEventListener('click', function() {
            filterButtons.forEach(btn => btn.classList.remove('active'));
            this.classList.add('active');
            updateUI();
          });
        });
        
        // Reset filter button
        if (resetFilterBtn) {
          resetFilterBtn.addEventListener('click', function() {
            filterButtons.forEach(btn => btn.classList.remove('active'));
            document.querySelector('.btn-news-filter[data-sport="all"]').classList.add('active');
            updateUI();
          });
        }
        
        // Initialize
        updateUI();
      }
      
      // Apply sport icons to filter buttons
      function applyFilterIcons() {
        document.querySelectorAll('.btn-news-filter').forEach(function(button) {
          const sport = button.getAttribute('data-sport');
          if (sport && sport !== 'all') {
            const iconElement = button.querySelector('i');
            const iconClass = getSportIcon(sport);
            if (iconClass && iconElement) {
              iconElement.className = 'bi ' + iconClass;
            }
          }
        });
      }
      
      // Apply sport icons to news cards
      function applySportIconsToCards() {
        document.querySelectorAll('.news-card-sport i, .news-main-sport-badge i').forEach(function(icon) {
          const badge = icon.closest('.news-card-sport, .news-main-sport-badge');
          if (badge) {
            const sportText = badge.textContent.replace('Baca Selengkapnya', '').replace('i', '').trim().toLowerCase();
            
            // Map sport text to icon names
            const sportMap = {
              'golf': 'golf',
              'run': 'run',
              'lari': 'run',
              'marathon': 'run',
              'tenis': 'tenis',
              'tennis': 'tenis',
              'padel': 'padel',
              'badminton': 'badminton',
              'bulu tangkis': 'badminton',
              'renang': 'renang',
              'swimming': 'renang',
              'triathlon': 'triathlon',
              'triatlon': 'triathlon'
            };
            
            let sportKey = sportText;
            for (const [key, value] of Object.entries(sportMap)) {
              if (sportText.includes(key)) {
                sportKey = value;
                break;
              }
            }
            
            const iconClass = getSportIcon(sportKey);
            if (iconClass) {
              icon.className = 'bi ' + iconClass + ' me-1';
            }
          }
        });
      }
      
      // Lazy load images with Intersection Observer
      function initializeLazyLoading() {
        if ('IntersectionObserver' in window) {
          const imageObserver = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
              if (entry.isIntersecting) {
                const img = entry.target;
                if (img.dataset.src) {
                  img.src = img.dataset.src;
                  img.removeAttribute('data-src');
                }
                observer.unobserve(img);
              }
            });
          }, {
            rootMargin: '50px 0px',
            threshold: 0.1
          });
          
          document.querySelectorAll('img[loading="lazy"]').forEach(img => {
            if (img.src && !img.dataset.src) {
              img.dataset.src = img.src;
              img.src = 'data:image/svg+xml,%3Csvg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 9"%3E%3C/svg%3E';
              imageObserver.observe(img);
            }
          });
        }
      }
      
      // Card animation observer
      function initializeCardAnimations() {
        if ('IntersectionObserver' in window) {
          const cardObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
              if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0) scale(1)';
              }
            });
          }, {
            threshold: 0.1,
            rootMargin: '0px 0px -100px 0px'
          });
          
          document.querySelectorAll('.sporter-news-card, .news-side-mini-card').forEach(card => {
            cardObserver.observe(card);
          });
        }
      }
      
      // Initialize everything when DOM is loaded
      document.addEventListener('DOMContentLoaded', function() {
        // Apply icons
        applyFilterIcons();
        applySportIconsToCards();
        
        // Initialize features
        initializeNewsFilter();
        initializeLazyLoading();
        initializeCardAnimations();
        
        // Animation for main cards
        setTimeout(() => {
          const mainCard = document.querySelector('.news-main-card');
          if (mainCard) {
            mainCard.style.opacity = '1';
            mainCard.style.transform = 'translateX(0)';
          }
        }, 100);
        
        setTimeout(() => {
          const sideTopCard = document.querySelector('.news-side-top-card');
          if (sideTopCard) {
            sideTopCard.style.opacity = '1';
            sideTopCard.style.transform = 'scale(1)';
          }
        }, 200);
        
        // Add smooth hover effects
        document.querySelectorAll('.news-card-readmore, .news-main-readmore').forEach(link => {
          link.addEventListener('mouseenter', function() {
            const icon = this.querySelector('i');
            if (icon) icon.style.transform = 'translateX(5px)';
          });
          
          link.addEventListener('mouseleave', function() {
            const icon = this.querySelector('i');
            if (icon) icon.style.transform = 'translateX(0)';
          });
        });
        
        // Add filter button hover effects
        document.querySelectorAll('.btn-news-filter').forEach(button => {
          button.addEventListener('mouseenter', function() {
            if (!this.classList.contains('active')) {
              const icon = this.querySelector('i');
              if (icon) icon.style.transform = 'scale(1.2) rotate(5deg)';
            }
          });
          
          button.addEventListener('mouseleave', function() {
            const icon = this.querySelector('i');
            if (icon) icon.style.transform = 'scale(1) rotate(0)';
          });
        });
      });
    })();