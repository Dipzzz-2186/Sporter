extends ../layout/main

block content
  style.
    /* Global Styles */
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    
    @keyframes slideInLeft {
      from { opacity: 0; transform: translateX(-30px); }
      to { opacity: 1; transform: translateX(0); }
    }
    
    @keyframes slideInRight {
      from { opacity: 0; transform: translateX(30px); }
      to { opacity: 1; transform: translateX(0); }
    }
    
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }
    
    /* News Hero Section - Layout diperbaiki */
    .news-hero-section {
      background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
      padding: 3.5rem 0 2.5rem;
      position: relative;
      overflow: hidden;
    }
    
    .news-hero-section::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -20%;
      width: 600px;
      height: 600px;
      background: radial-gradient(circle, rgba(0, 149, 255, 0.1) 0%, transparent 70%);
      border-radius: 50%;
    }
    
    /* Main News Card - Layout lebih baik */
    .news-main-card {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
      border-radius: 24px;
      overflow: hidden;
      position: relative;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
      height: 100%;
      display: flex;
      flex-direction: column;
    }
    
    .news-main-card:hover {
      transform: translateY(-8px) scale(1.01);
      box-shadow: 0 25px 60px rgba(0, 149, 255, 0.3);
    }
    
    .news-main-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 5px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
      transform: scaleX(0);
      transition: transform 0.4s ease;
      z-index: 2;
    }
    
    .news-main-card:hover::before {
      transform: scaleX(1);
    }
    
    .news-main-image-wrapper {
      height: 350px;
      overflow: hidden;
      position: relative;
    }
    
    .news-main-image-wrapper::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 60%;
      background: linear-gradient(to top, rgba(11, 31, 63, 0.95), transparent);
    }
    
    .news-main-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .news-main-card:hover .news-main-image {
      transform: scale(1.08);
    }
    
    .news-main-content {
      padding: 2rem;
      flex: 1;
      display: flex;
      flex-direction: column;
      position: relative;
      z-index: 2;
    }
    
    .news-main-meta {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 1.25rem;
      flex-wrap: wrap;
      gap: 0.75rem;
    }
    
    .news-main-sport-badge {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      color: white !important;
      padding: 0.5rem 1.25rem;
      border-radius: 50px;
      font-weight: 700;
      font-size: 0.85rem;
      letter-spacing: 0.5px;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      border: none;
    }
    
    .news-main-date {
      color: rgba(255, 255, 255, 0.7);
      font-size: 0.9rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .news-main-title {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.4rem;
      color: white;
      line-height: 1.2;
      letter-spacing: 0.5px;
      margin-bottom: 1.25rem;
      flex: 1;
    }
    
    .news-main-excerpt {
      color: rgba(255, 255, 255, 0.85);
      font-size: 1.05rem;
      line-height: 1.7;
      margin-bottom: 1.5rem;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    .news-main-readmore {
      color: white;
      font-weight: 600;
      font-size: 0.95rem;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      transition: all 0.3s ease;
      align-self: flex-start;
      position: relative;
    }
    
    .news-main-readmore::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: 0;
      width: 0;
      height: 2px;
      background: white;
      transition: width 0.3s ease;
    }
    
    .news-main-card:hover .news-main-readmore::after {
      width: 100%;
    }
    
    /* Right Side Layout */
    .news-side-section {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      height: 100%;
    }
    
    /* Side Top Card - Layout lebih compact */
    .news-side-top-card {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      border-radius: 20px;
      overflow: hidden;
      position: relative;
      height: 280px;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 10px 30px rgba(0, 149, 255, 0.25);
    }
    
    .news-side-top-card:hover {
      transform: translateY(-5px) scale(1.02);
      box-shadow: 0 15px 40px rgba(0, 149, 255, 0.35);
    }
    
    .news-side-top-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
      opacity: 0.25;
    }
    
    .news-side-top-card:hover .news-side-top-image {
      transform: scale(1.08);
      opacity: 0.3;
    }
    
    .news-side-top-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 2rem;
      background: linear-gradient(to top, rgba(0, 0, 0, 0.85), transparent);
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    
    .news-side-top-badge {
      background: rgba(255, 255, 255, 0.9);
      color: #0095FF !important;
      padding: 0.4rem 1rem;
      border-radius: 50px;
      font-weight: 700;
      font-size: 0.8rem;
      align-self: flex-start;
      border: none;
    }
    
    .news-side-top-title {
      color: white;
      font-weight: 700;
      font-size: 1.4rem;
      line-height: 1.3;
      margin: 0;
    }
    
    .news-side-top-excerpt {
      color: rgba(255, 255, 255, 0.85);
      font-size: 0.95rem;
      line-height: 1.6;
      margin: 0;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    /* Side Mini Cards Grid */
    .news-side-mini-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
      flex: 1;
    }
    
    .news-side-mini-card {
      background: linear-gradient(135deg, #152844 0%, #1e3658 100%);
      border-radius: 16px;
      overflow: hidden;
      position: relative;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
      height: 180px;
    }
    
    .news-side-mini-card:hover {
      transform: translateY(-5px) scale(1.03);
      box-shadow: 0 10px 25px rgba(0, 149, 255, 0.25);
    }
    
    .news-side-mini-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
      opacity: 0.4;
    }
    
    .news-side-mini-card:hover .news-side-mini-image {
      transform: scale(1.08);
      opacity: 0.5;
    }
    
    .news-side-mini-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 1.25rem;
      background: linear-gradient(to top, rgba(0, 0, 0, 0.9), transparent);
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .news-side-mini-badge {
      background: rgba(0, 149, 255, 0.2);
      color: white !important;
      padding: 0.25rem 0.75rem;
      border-radius: 50px;
      font-size: 0.75rem;
      font-weight: 600;
      align-self: flex-start;
      border: 1px solid rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
    }
    
    .news-side-mini-title {
      color: white;
      font-weight: 600;
      font-size: 0.95rem;
      line-height: 1.3;
      margin: 0;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    /* ===== NEW: NEWS FILTER SECTION ===== */
    .news-filter-section {
      background: white;
      padding: 2rem 0;
      margin-bottom: 2rem;
      border-bottom: 1px solid #f0f0f0;
    }
    
    .news-filter-container {
      background: linear-gradient(135deg, #f5f8fa 0%, #e9eef3 100%);
      border-radius: 20px;
      padding: 2rem;
      position: relative;
      overflow: hidden;
    }
    
    .news-filter-container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 3px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
    }
    
    .news-filter-header {
      margin-bottom: 1.5rem;
    }
    
    .news-filter-header h4 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin-bottom: 0.5rem;
    }
    
    .news-filter-header p {
      color: #5a6c7d;
      font-size: 1rem;
      margin: 0;
    }
    
    .news-filter-buttons-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 0.75rem;
    }
    
    .btn-news-filter {
      background: white;
      border: 2px solid #d0d0d0;
      border-radius: 12px;
      padding: 1rem 1.5rem;
      font-weight: 600;
      color: #5a6c7d;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      text-align: center;
      position: relative;
      overflow: hidden;
      cursor: pointer;
    }
    
    .btn-news-filter::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: 1;
    }
    
    .btn-news-filter span,
    .btn-news-filter i {
      position: relative;
      z-index: 2;
    }
    
    .btn-news-filter:hover,
    .btn-news-filter.active {
      border-color: transparent;
      color: white;
      transform: translateY(-3px);
      box-shadow: 0 8px 20px rgba(0, 149, 255, 0.25);
    }
    
    .btn-news-filter.active::before,
    .btn-news-filter:hover::before {
      opacity: 1;
    }
    
    /* Other News Section - Layout lebih baik */
    .news-other-section {
      padding: 3.5rem 0 5rem;
      background: white;
      position: relative;
    }
    
    .section-header {
      margin-bottom: 2.5rem;
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      padding-bottom: 1rem;
      border-bottom: 2px solid #e8edf2;
    }
    
    .section-title-main {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }
    
    .section-title-main h2 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.8rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin: 0;
      line-height: 1;
    }
    
    .section-subtitle {
      color: #5a6c7d;
      font-size: 1.05rem;
      margin: 0;
    }
    
    .section-badge {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      color: white !important;
      padding: 0.75rem 1.5rem;
      border-radius: 50px;
      font-weight: 700;
      font-size: 0.9rem;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      border: none;
    }
    
    /* News Card Grid - Layout baru */
    .sporter-news-card {
      border-radius: 20px;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      border: 2px solid #e8edf2;
      overflow: hidden;
      position: relative;
      background: white;
      height: 100%;
      display: flex;
      flex-direction: column;
    }
    
    .sporter-news-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 5px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
      transform: scaleX(0);
      transition: transform 0.4s ease;
      z-index: 2;
    }
    
    .sporter-news-card:hover::before {
      transform: scaleX(1);
    }
    
    .sporter-news-card:hover {
      transform: translateY(-10px) scale(1.02);
      box-shadow: 0 20px 50px rgba(0, 149, 255, 0.15);
      border-color: transparent;
    }
    
    .news-card-image-wrapper {
      height: 200px;
      overflow: hidden;
      position: relative;
    }
    
    .news-card-image-wrapper::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 40%;
      background: linear-gradient(to top, rgba(0, 0, 0, 0.2), transparent);
    }
    
    .sporter-news-card img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .sporter-news-card:hover img {
      transform: scale(1.1);
    }
    
    .sporter-news-card .card-body {
      padding: 1.75rem;
      flex: 1;
      display: flex;
      flex-direction: column;
    }
    
    .news-card-meta {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 1rem;
      flex-wrap: wrap;
      gap: 0.5rem;
    }
    
    .news-card-sport {
      background: rgba(0, 149, 255, 0.1);
      color: #0080e0 !important;
      padding: 0.4rem 1rem;
      border-radius: 50px;
      font-weight: 700;
      font-size: 0.8rem;
      border: 1.5px solid rgba(0, 149, 255, 0.2);
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
    }
    
    .news-card-date {
      color: #5a6c7d;
      font-size: 0.85rem;
      display: flex;
      align-items: center;
      gap: 0.4rem;
    }
    
    .sporter-news-card h6 {
      color: #0B1F3F;
      font-weight: 700;
      font-size: 1.2rem;
      line-height: 1.4;
      margin-bottom: 1rem;
      flex: 1;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    .sporter-news-card p {
      color: #5a6c7d;
      font-size: 0.92rem;
      line-height: 1.6;
      margin-bottom: 1.5rem;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    .news-card-readmore {
      color: #0095FF;
      font-weight: 600;
      font-size: 0.9rem;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      transition: all 0.3s ease;
      align-self: flex-start;
      position: relative;
      margin-top: auto;
    }
    
    .news-card-readmore::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: 0;
      width: 0;
      height: 2px;
      background: #0095FF;
      transition: width 0.3s ease;
    }
    
    .sporter-news-card:hover .news-card-readmore {
      gap: 0.75rem;
    }
    
    .sporter-news-card:hover .news-card-readmore::after {
      width: 100%;
    }
    
    /* Empty State - Layout lebih baik */
    .empty-state {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border: 2px dashed #d0d0d0;
      border-radius: 20px;
      padding: 4rem 2rem;
      text-align: center;
      position: relative;
      overflow: hidden;
      max-width: 800px;
      margin: 0 auto;
    }
    
    .empty-state::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: linear-gradient(45deg, transparent 30%, rgba(0, 149, 255, 0.05) 50%, transparent 70%);
      animation: shimmer 3s infinite linear;
    }
    
    @keyframes shimmer {
      0% { transform: translateX(-100%); }
      100% { transform: translateX(100%); }
    }
    
    .empty-state-icon {
      width: 120px;
      height: 120px;
      background: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.75rem;
      position: relative;
      z-index: 2;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    }
    
    .empty-state-icon i {
      font-size: 3.5rem;
      color: #adb5bd;
    }
    
    .empty-state h3 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.2rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin-bottom: 0.75rem;
      position: relative;
      z-index: 2;
    }
    
    .empty-state p {
      color: #5a6c7d;
      font-size: 1.05rem;
      line-height: 1.6;
      position: relative;
      z-index: 2;
      margin: 0;
    }
    
    /* Animasi untuk cards */
    .news-main-card {
      animation: slideInLeft 0.6s ease-out forwards;
      opacity: 0;
    }
    
    .news-side-top-card {
      animation: fadeInScale 0.6s ease-out 0.2s forwards;
      opacity: 0;
    }
    
    @keyframes fadeInScale {
      from { opacity: 0; transform: scale(0.95); }
      to { opacity: 1; transform: scale(1); }
    }
    
    .news-side-mini-card:nth-child(1) {
      animation: fadeInScale 0.6s ease-out 0.3s forwards;
      opacity: 0;
    }
    
    .news-side-mini-card:nth-child(2) {
      animation: fadeInScale 0.6s ease-out 0.4s forwards;
      opacity: 0;
    }
    
    .sporter-news-card {
      animation: fadeInUp 0.6s ease-out forwards;
      opacity: 0;
    }
    
    /* Responsive */
    @media (max-width: 1199px) {
      .news-main-title {
        font-size: 2rem;
      }
      
      .news-side-top-title {
        font-size: 1.2rem;
      }
    }
    
    @media (max-width: 991px) {
      .news-hero-section {
        padding: 2.5rem 0;
      }
      
      .news-main-image-wrapper {
        height: 300px;
      }
      
      .news-main-title {
        font-size: 1.8rem;
      }
      
      .news-main-content {
        padding: 1.75rem;
      }
      
      .news-side-top-card {
        height: 250px;
      }
      
      .news-side-mini-grid {
        grid-template-columns: 1fr;
      }
      
      .news-side-mini-card {
        height: 160px;
      }
      
      .section-title-main h2 {
        font-size: 2.2rem;
      }
      
      .news-filter-buttons-grid {
        grid-template-columns: repeat(3, 1fr);
      }
      
      .news-card-image-wrapper {
        height: 180px;
      }
    }
    
    @media (max-width: 767px) {
      .news-hero-section {
        padding: 2rem 0;
      }
      
      .news-main-image-wrapper {
        height: 250px;
      }
      
      .news-main-title {
        font-size: 1.6rem;
      }
      
      .news-main-excerpt {
        font-size: 1rem;
      }
      
      .news-main-content {
        padding: 1.5rem;
      }
      
      .news-side-top-card {
        height: 220px;
      }
      
      .news-side-top-overlay {
        padding: 1.5rem;
      }
      
      .news-side-mini-card {
        height: 140px;
      }
      
      .news-filter-buttons-grid {
        grid-template-columns: repeat(2, 1fr);
      }
      
      .section-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
      }
      
      .section-title-main h2 {
        font-size: 1.9rem;
      }
      
      .news-card-image-wrapper {
        height: 160px;
      }
      
      .sporter-news-card .card-body {
        padding: 1.5rem;
      }
      
      .sporter-news-card h6 {
        font-size: 1.1rem;
      }
    }
    
    @media (max-width: 575px) {
      .news-main-meta {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
      }
      
      .news-card-meta {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
      }
      
      .news-side-mini-grid {
        grid-template-columns: 1fr;
      }
      
      .news-filter-buttons-grid {
        grid-template-columns: 1fr;
      }
      
      .news-stats-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    
    /* Animation delays untuk cards */
    .sporter-news-card:nth-child(1) { animation-delay: 0.1s; }
    .sporter-news-card:nth-child(2) { animation-delay: 0.2s; }
    .sporter-news-card:nth-child(3) { animation-delay: 0.3s; }
    .sporter-news-card:nth-child(4) { animation-delay: 0.4s; }
    .sporter-news-card:nth-child(5) { animation-delay: 0.5s; }
    .sporter-news-card:nth-child(6) { animation-delay: 0.6s; }
