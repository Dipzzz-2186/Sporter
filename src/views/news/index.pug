extends ../layout/main

block content
  style.
    /* Global Styles */
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    
    @keyframes slideInLeft {
      from { opacity: 0; transform: translateX(-30px); }
      to { opacity: 1; transform: translateX(0); }
    }
    
    @keyframes slideInRight {
      from { opacity: 0; transform: translateX(30px); }
      to { opacity: 1; transform: translateX(0); }
    }
    
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }
    
    /* ===== NEWS FILTER SECTION (DIPINDAHKAN KE ATAS HERO) ===== */
    .news-filter-section {
      background: linear-gradient(135deg, #f5f8fa 0%, #e9eef3 100%);
      padding: 3rem 0;
      position: relative;
      z-index: 10;
    }
    
    .news-filter-container {
      background: white;
      border-radius: 20px;
      padding: 2rem 2.5rem;
      position: relative;
      overflow: hidden;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
      border: 1px solid rgba(0, 149, 255, 0.1);
    }
    
    .news-filter-container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
    }
    
    .news-filter-header {
      margin-bottom: 1.75rem;
      text-align: center;
    }
    
    .news-filter-header h4 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.4rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin-bottom: 0.75rem;
      line-height: 1;
    }
    
    .news-filter-header p {
      color: #5a6c7d;
      font-size: 1.1rem;
      margin: 0;
      max-width: 600px;
      margin: 0 auto;
    }
    
    .news-filter-buttons-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
      gap: 1rem;
    }
    
    .btn-news-filter {
      background: white;
      border: 2px solid #e0e0e0;
      border-radius: 14px;
      padding: 1.25rem 1.5rem;
      font-weight: 700;
      color: #4a5568;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1rem;
      text-align: center;
      position: relative;
      overflow: hidden;
      cursor: pointer;
      font-size: 1rem;
      letter-spacing: 0.3px;
    }
    
    .btn-news-filter::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      opacity: 0;
      transition: opacity 0.4s ease;
      z-index: 1;
    }
    
    .btn-news-filter span,
    .btn-news-filter i {
      position: relative;
      z-index: 2;
      transition: all 0.3s ease;
    }
    
    .btn-news-filter:hover,
    .btn-news-filter.active {
      border-color: transparent;
      color: white;
      transform: translateY(-5px) scale(1.05);
      box-shadow: 0 15px 35px rgba(0, 149, 255, 0.3);
    }
    
    .btn-news-filter.active::before,
    .btn-news-filter:hover::before {
      opacity: 1;
    }
    
    .btn-news-filter:hover i {
      transform: scale(1.2) rotate(5deg);
    }
    
    .btn-news-filter.active i {
      transform: scale(1.1);
    }
    
    /* News Hero Section - Layout diperbaiki */
    .news-hero-section {
      background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
      padding: 3.5rem 0 4rem;
      position: relative;
      overflow: hidden;
    }
    
    .news-hero-section::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -20%;
      width: 600px;
      height: 600px;
      background: radial-gradient(circle, rgba(0, 149, 255, 0.1) 0%, transparent 70%);
      border-radius: 50%;
    }
    
    /* Main News Card - Layout lebih baik */
    .news-main-card {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
      border-radius: 24px;
      overflow: hidden;
      position: relative;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
      height: 100%;
      display: flex;
      flex-direction: column;
    }
    
    .news-main-card:hover {
      transform: translateY(-8px) scale(1.01);
      box-shadow: 0 25px 60px rgba(0, 149, 255, 0.3);
    }
    
    .news-main-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 5px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
      transform: scaleX(0);
      transition: transform 0.4s ease;
      z-index: 2;
    }
    
    .news-main-card:hover::before {
      transform: scaleX(1);
    }
    
    .news-main-image-wrapper {
      height: 380px;
      overflow: hidden;
      position: relative;
    }
    
    .news-main-image-wrapper::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 60%;
      background: linear-gradient(to top, rgba(11, 31, 63, 0.95), transparent);
    }
    
    .news-main-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .news-main-card:hover .news-main-image {
      transform: scale(1.08);
    }
    
    .news-main-content {
      padding: 2.5rem;
      flex: 1;
      display: flex;
      flex-direction: column;
      position: relative;
      z-index: 2;
    }
    
    .news-main-meta {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 1.5rem;
      flex-wrap: wrap;
      gap: 1rem;
    }
    
    .news-main-sport-badge {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      color: white !important;
      padding: 0.75rem 1.5rem;
      border-radius: 50px;
      font-weight: 700;
      font-size: 0.9rem;
      letter-spacing: 0.5px;
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      border: none;
      box-shadow: 0 5px 15px rgba(0, 149, 255, 0.3);
    }
    
    .news-main-date {
      color: rgba(255, 255, 255, 0.7);
      font-size: 0.95rem;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-weight: 500;
    }
    
    .news-main-title {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.8rem;
      color: white;
      line-height: 1.1;
      letter-spacing: 0.5px;
      margin-bottom: 1.5rem;
      flex: 1;
    }
    
    .news-main-excerpt {
      color: rgba(255, 255, 255, 0.85);
      font-size: 1.15rem;
      line-height: 1.8;
      margin-bottom: 2rem;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    .news-main-readmore {
      color: white;
      font-weight: 700;
      font-size: 1rem;
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      transition: all 0.3s ease;
      align-self: flex-start;
      position: relative;
      padding: 0.75rem 1.5rem;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 12px;
      border: 1px solid rgba(255, 255, 255, 0.2);
    }
    
    .news-main-readmore:hover {
      background: rgba(255, 255, 255, 0.2);
      gap: 1rem;
      transform: translateX(5px);
    }
    
    /* Right Side Layout */
    .news-side-section {
      display: flex;
      flex-direction: column;
      gap: 2rem;
      height: 100%;
    }
    
    /* Side Top Card - Layout lebih compact */
    .news-side-top-card {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      border-radius: 22px;
      overflow: hidden;
      position: relative;
      height: 320px;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 15px 40px rgba(0, 149, 255, 0.3);
    }
    
    .news-side-top-card:hover {
      transform: translateY(-8px) scale(1.03);
      box-shadow: 0 20px 50px rgba(0, 149, 255, 0.4);
    }
    
    .news-side-top-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
      opacity: 0.25;
    }
    
    .news-side-top-card:hover .news-side-top-image {
      transform: scale(1.08);
      opacity: 0.3;
    }
    
    .news-side-top-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 2.5rem;
      background: linear-gradient(to top, rgba(0, 0, 0, 0.95), transparent);
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    
    .news-side-top-badge {
      background: rgba(255, 255, 255, 0.95);
      color: #0095FF !important;
      padding: 0.6rem 1.25rem;
      border-radius: 50px;
      font-weight: 800;
      font-size: 0.85rem;
      align-self: flex-start;
      border: none;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }
    
    .news-side-top-title {
      color: white;
      font-weight: 800;
      font-size: 1.6rem;
      line-height: 1.2;
      margin: 0;
      text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    }
    
    .news-side-top-excerpt {
      color: rgba(255, 255, 255, 0.9);
      font-size: 1rem;
      line-height: 1.6;
      margin: 0;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    /* Side Mini Cards Grid */
    .news-side-mini-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1.25rem;
      flex: 1;
    }
    
    .news-side-mini-card {
      background: linear-gradient(135deg, #152844 0%, #1e3658 100%);
      border-radius: 18px;
      overflow: hidden;
      position: relative;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.25);
      height: 200px;
    }
    
    .news-side-mini-card:hover {
      transform: translateY(-8px) scale(1.05);
      box-shadow: 0 15px 40px rgba(0, 149, 255, 0.3);
    }
    
    .news-side-mini-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
      opacity: 0.4;
    }
    
    .news-side-mini-card:hover .news-side-mini-image {
      transform: scale(1.08);
      opacity: 0.5;
    }
    
    .news-side-mini-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 1.5rem;
      background: linear-gradient(to top, rgba(0, 0, 0, 0.95), transparent);
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    
    .news-side-mini-badge {
      background: rgba(0, 149, 255, 0.25);
      color: white !important;
      padding: 0.4rem 1rem;
      border-radius: 50px;
      font-size: 0.8rem;
      font-weight: 700;
      align-self: flex-start;
      border: 1px solid rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(10px);
    }
    
    .news-side-mini-title {
      color: white;
      font-weight: 700;
      font-size: 1.1rem;
      line-height: 1.3;
      margin: 0;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
    }
    
    /* Other News Section - Layout lebih baik */
    .news-other-section {
      padding: 4rem 0 6rem;
      background: linear-gradient(135deg, #f8fafc 0%, #edf2f7 100%);
      position: relative;
    }
    
    .section-header {
      margin-bottom: 3rem;
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      padding-bottom: 1.5rem;
      border-bottom: 2px solid #e2e8f0;
    }
    
    .section-title-main {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .section-title-main h2 {
      font-family: 'Bebas Neue', cursive;
      font-size: 3.2rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin: 0;
      line-height: 1;
    }
    
    .section-subtitle {
      color: #5a6c7d;
      font-size: 1.15rem;
      margin: 0;
      font-weight: 500;
    }
    
    .section-badge {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      color: white !important;
      padding: 1rem 2rem;
      border-radius: 50px;
      font-weight: 800;
      font-size: 1rem;
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      border: none;
      box-shadow: 0 8px 25px rgba(0, 149, 255, 0.25);
    }
    
    /* News Card Grid - Layout DIPERBAIKI */
    .sporter-news-card {
      border-radius: 22px;
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      border: 2px solid #e8edf2;
      overflow: hidden;
      position: relative;
      background: white;
      height: 100%;
      display: flex;
      flex-direction: column;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    }
    
    .sporter-news-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 5px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
      transform: scaleX(0);
      transition: transform 0.4s ease;
      z-index: 2;
    }
    
    .sporter-news-card:hover::before {
      transform: scaleX(1);
    }
    
    .sporter-news-card:hover {
      transform: translateY(-15px) scale(1.03);
      box-shadow: 0 25px 60px rgba(0, 149, 255, 0.2);
      border-color: transparent;
    }
    
    .news-card-image-wrapper {
      height: 240px;
      overflow: hidden;
      position: relative;
    }
    
    .news-card-image-wrapper::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 50%;
      background: linear-gradient(to top, rgba(0, 0, 0, 0.3), transparent);
    }
    
    .sporter-news-card img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .sporter-news-card:hover img {
      transform: scale(1.12);
    }
    
    .sporter-news-card .card-body {
      padding: 2rem;
      flex: 1;
      display: flex;
      flex-direction: column;
    }
    
    .news-card-meta {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 1.25rem;
      flex-wrap: wrap;
      gap: 0.75rem;
    }
    
    .news-card-sport {
      background: linear-gradient(135deg, rgba(0, 149, 255, 0.15) 0%, rgba(52, 199, 255, 0.1) 100%);
      color: #0080e0 !important;
      padding: 0.6rem 1.25rem;
      border-radius: 50px;
      font-weight: 800;
      font-size: 0.85rem;
      border: 2px solid rgba(0, 149, 255, 0.2);
      display: inline-flex;
      align-items: center;
      gap: 0.6rem;
      letter-spacing: 0.3px;
      box-shadow: 0 5px 15px rgba(0, 149, 255, 0.1);
    }
    
    .news-card-date {
      color: #718096;
      font-size: 0.9rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-weight: 600;
    }
    
    .sporter-news-card h6 {
      color: #0B1F3F;
      font-weight: 800;
      font-size: 1.4rem;
      line-height: 1.3;
      margin-bottom: 1.25rem;
      flex: 1;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
      letter-spacing: -0.2px;
    }
    
    .sporter-news-card p {
      color: #5a6c7d;
      font-size: 1rem;
      line-height: 1.7;
      margin-bottom: 1.75rem;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
      opacity: 0.9;
    }
    
    .news-card-readmore {
      color: #0095FF;
      font-weight: 700;
      font-size: 0.95rem;
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      transition: all 0.4s ease;
      align-self: flex-start;
      position: relative;
      margin-top: auto;
      padding: 0.75rem 1.5rem;
      background: rgba(0, 149, 255, 0.08);
      border-radius: 12px;
      border: 2px solid rgba(0, 149, 255, 0.15);
    }
    
    .news-card-readmore:hover {
      background: rgba(0, 149, 255, 0.15);
      color: #0077cc;
      gap: 1rem;
      transform: translateX(5px);
      border-color: rgba(0, 149, 255, 0.3);
    }
    
    /* Empty State - Layout lebih baik */
    .empty-state {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border: 2px dashed #d0d0d0;
      border-radius: 24px;
      padding: 5rem 3rem;
      text-align: center;
      position: relative;
      overflow: hidden;
      max-width: 800px;
      margin: 0 auto;
    }
    
    .empty-state::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: linear-gradient(45deg, transparent 30%, rgba(0, 149, 255, 0.05) 50%, transparent 70%);
      animation: shimmer 3s infinite linear;
    }
    
    @keyframes shimmer {
      0% { transform: translateX(-100%); }
      100% { transform: translateX(100%); }
    }
    
    .empty-state-icon {
      width: 140px;
      height: 140px;
      background: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 2rem;
      position: relative;
      z-index: 2;
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
    }
    
    .empty-state-icon i {
      font-size: 4rem;
      color: #adb5bd;
    }
    
    .empty-state h3 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.5rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin-bottom: 1rem;
      position: relative;
      z-index: 2;
    }
    
    .empty-state p {
      color: #5a6c7d;
      font-size: 1.15rem;
      line-height: 1.6;
      position: relative;
      z-index: 2;
      margin: 0;
    }
    
    /* Animasi untuk cards */
    .news-main-card {
      animation: slideInLeft 0.6s ease-out forwards;
      opacity: 0;
    }
    
    .news-side-top-card {
      animation: fadeInScale 0.6s ease-out 0.2s forwards;
      opacity: 0;
    }
    
    @keyframes fadeInScale {
      from { opacity: 0; transform: scale(0.95); }
      to { opacity: 1; transform: scale(1); }
    }
    
    .news-side-mini-card:nth-child(1) {
      animation: fadeInScale 0.6s ease-out 0.3s forwards;
      opacity: 0;
    }
    
    .news-side-mini-card:nth-child(2) {
      animation: fadeInScale 0.6s ease-out 0.4s forwards;
      opacity: 0;
    }
    
    .sporter-news-card {
      animation: fadeInUp 0.6s ease-out forwards;
      opacity: 0;
    }
    
    /* No Results State */
    .no-results-state {
      text-align: center;
      padding: 5rem 3rem;
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border-radius: 24px;
      margin: 3rem auto;
      max-width: 800px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.08);
    }
    
    .no-results-icon {
      font-size: 5rem;
      color: #adb5bd;
      margin-bottom: 2rem;
      opacity: 0.7;
    }
    
    .no-results-title {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.8rem;
      color: #0B1F3F;
      margin-bottom: 1.5rem;
    }
    
    .no-results-text {
      color: #5a6c7d;
      font-size: 1.2rem;
      margin-bottom: 2.5rem;
      line-height: 1.6;
    }
    
    .btn-reset-filter {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      color: white;
      border: none;
      padding: 1rem 2.5rem;
      border-radius: 50px;
      font-weight: 700;
      font-size: 1.05rem;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      box-shadow: 0 10px 25px rgba(0, 149, 255, 0.3);
    }
    
    .btn-reset-filter:hover {
      transform: translateY(-3px);
      box-shadow: 0 15px 35px rgba(0, 149, 255, 0.4);
      gap: 1rem;
    }
    
    /* Responsive */
    @media (max-width: 1199px) {
      .news-main-title {
        font-size: 2.4rem;
      }
      
      .news-side-top-title {
        font-size: 1.4rem;
      }
      
      .section-title-main h2 {
        font-size: 2.8rem;
      }
    }
    
    @media (max-width: 991px) {
      .news-hero-section {
        padding: 2.5rem 0;
      }
      
      .news-main-image-wrapper {
        height: 320px;
      }
      
      .news-main-title {
        font-size: 2rem;
      }
      
      .news-main-content {
        padding: 2rem;
      }
      
      .news-side-top-card {
