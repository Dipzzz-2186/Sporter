  //- Custom JavaScript
  script.
    (function() {
      // Helper untuk icon olahraga
      function getSportIcon(sportName) {
        const icons = {
          'golf': 'bi-flag-fill',
          'run': 'bi-person-running',
          'tenis': 'bi-circle-half',
          'padel': 'bi-brightness-high-fill',
          'badminton': 'bi-shuttle',
          'renang': 'bi-water',
          'triathlon': 'bi-bicycle',
          'olahraga': 'bi-trophy-fill',
          'berita': 'bi-newspaper'
        };
        return icons[sportName] || 'bi-trophy-fill';
      }
      
      // Apply sport icons to filter buttons
      function applyFilterIcons() {
        document.querySelectorAll('.btn-news-filter').forEach(function(button) {
          const sport = button.getAttribute('data-sport');
          if (sport && sport !== 'all') {
            const iconElement = button.querySelector('i');
            const iconClass = getSportIcon(sport);
            if (iconClass && iconElement) {
              iconElement.className = 'bi ' + iconClass;
            }
          }
        });
      }
      
      // News filtering system
      function initializeNewsFilter() {
        const filterButtons = document.querySelectorAll('.btn-news-filter');
        const newsItems = document.querySelectorAll('.news-item');
        const heroItems = [
          document.querySelector('.news-main-card')?.closest('.col-lg-7'),
          document.querySelector('.news-side-top-card')?.closest('.col-lg-5'),
          ...Array.from(document.querySelectorAll('.news-side-mini-card')).map(card => card.closest('.col-lg-5'))
        ].filter(Boolean);
        
        function updateStats(filteredCount) {
          // Update total news count
          const totalNewsElement = document.getElementById('total-news');
          if (totalNewsElement) {
            animateCounter(totalNewsElement, filteredCount);
          }
          
          // Update featured count
          const featuredElement = document.getElementById('featured-count');
          if (featuredElement) {
            const featuredCount = document.querySelector('.news-main-card') && 
                                 !document.querySelector('.news-main-card').closest('.col-lg-7').style.display.includes('none') ? 1 : 0;
            animateCounter(featuredElement, featuredCount);
          }
          
          // Update sports count
          const sportsElement = document.getElementById('sports-count');
          if (sportsElement) {
            const visibleSports = new Set();
            newsItems.forEach(item => {
              if (!item.style.display.includes('none')) {
                const sport = item.getAttribute('data-sport');
                if (sport) visibleSports.add(sport);
              }
            });
            animateCounter(sportsElement, Math.max(visibleSports.size, 1));
          }
        }
        
        function animateCounter(element, targetValue) {
          const currentValue = parseInt(element.textContent) || 0;
          if (currentValue === targetValue) return;
          
          const duration = 500;
          const steps = 20;
          const increment = (targetValue - currentValue) / steps;
          let currentStep = 0;
          
          const timer = setInterval(() => {
            currentStep++;
            const newValue = Math.floor(currentValue + (increment * currentStep));
            element.textContent = newValue;
            
            if (currentStep >= steps) {
              clearInterval(timer);
              element.textContent = targetValue;
            }
          }, duration / steps);
        }
        
        function applyFilter() {
          const activeButton = document.querySelector('.btn-news-filter.active');
          const filter = activeButton ? activeButton.getAttribute('data-filter') : 'all';
          const sport = activeButton ? activeButton.getAttribute('data-sport') : null;
          
          let visibleCount = 0;
          
          // Filter news items
          newsItems.forEach(function(item) {
            const itemSport = item.getAttribute('data-sport');
            const parentCol = item.closest('.col-md-6.col-lg-3');
            
            let shouldShow = true;
            
            if (sport && sport !== 'all') {
              if (sport === 'golf') {
                shouldShow = itemSport && (itemSport.includes('golf') || itemSport.includes('golf'));
              } else if (sport === 'run') {
                shouldShow = itemSport && (itemSport.includes('run') || itemSport.includes('lari') || 
                          itemSport.includes('marathon') || itemSport.includes('sprint'));
              } else if (sport === 'tenis') {
                shouldShow = itemSport && (itemSport.includes('tenis') || itemSport.includes('tennis'));
              } else if (sport === 'padel') {
                shouldShow = itemSport && (itemSport.includes('padel') || itemSport.includes('padle'));
              } else if (sport === 'badminton') {
                shouldShow = itemSport && (itemSport.includes('badminton') || itemSport.includes('bulu-tangkis'));
              } else if (sport === 'renang') {
                shouldShow = itemSport && (itemSport.includes('renang') || itemSport.includes('swimming'));
              } else if (sport === 'triathlon') {
                shouldShow = itemSport && (itemSport.includes('triathlon') || itemSport.includes('triatlon'));
              } else {
                shouldShow = itemSport && itemSport === sport;
              }
            }
            
            if (shouldShow) {
              parentCol.style.display = '';
              item.style.opacity = '1';
              item.style.transform = 'translateY(0)';
              visibleCount++;
            } else {
              item.style.opacity = '0';
              item.style.transform = 'translateY(20px)';
              setTimeout(() => {
                parentCol.style.display = 'none';
              }, 300);
            }
          });
          
          // Filter hero items (optional - you can choose to always show them or filter them too)
          heroItems.forEach(function(heroItem, index) {
            if (sport && sport !== 'all') {
              // For now, keep hero items visible for all sports
              heroItem.style.display = '';
              visibleCount++;
            } else {
              heroItem.style.display = '';
            }
          });
          
          // Update stats
          setTimeout(() => updateStats(visibleCount), 350);
          
          // Update section badge
          const sectionBadge = document.querySelector('.section-badge span');
          if (sectionBadge) {
            sectionBadge.textContent = `${visibleCount} Berita`;
          }
          
          // Update filter button text
          const activeFilterBtn = document.querySelector('.btn-news-filter.active');
          if (activeFilterBtn) {
            const sportName = activeFilterBtn.querySelector('span').textContent;
            const filterHeader = document.querySelector('.news-filter-header p');
            if (filterHeader) {
              if (sport === 'all') {
                filterHeader.textContent = 'Temukan berita berdasarkan cabang olahraga favorit Anda';
              } else {
                filterHeader.textContent = `Menampilkan berita ${sportName.toLowerCase()}`;
              }
            }
          }
        }
        
        // Event listeners untuk filter
        filterButtons.forEach(function(button) {
          button.addEventListener('click', function() {
            filterButtons.forEach(function(btn) {
              btn.classList.remove('active');
            });
            this.classList.add('active');
            applyFilter();
          });
        });
        
        // Initialize with default filter
        applyFilter();
      }
      
      // Apply sport icons to news cards
      function applySportIconsToCards() {
        document.querySelectorAll('.news-card-sport i, .news-main-sport-badge i').forEach(function(icon) {
          const badge = icon.closest('.news-card-sport, .news-main-sport-badge');
          if (badge) {
            const sportText = badge.textContent.replace('Baca Selengkapnya', '').replace('i', '').trim().toLowerCase();
            
            // Map sport text to icon names
            const sportMap = {
              'golf': 'golf',
              'run': 'run',
              'lari': 'run',
              'marathon': 'run',
              'tenis': 'tenis',
              'tennis': 'tenis',
              'padel': 'padel',
              'badminton': 'badminton',
              'bulu tangkis': 'badminton',
              'renang': 'renang',
              'swimming': 'renang',
              'triathlon': 'triathlon',
              'triatlon': 'triathlon'
            };
            
            let sportKey = sportText;
            for (const [key, value] of Object.entries(sportMap)) {
              if (sportText.includes(key)) {
                sportKey = value;
                break;
              }
            }
            
            const iconClass = getSportIcon(sportKey);
            if (iconClass) {
              icon.className = 'bi ' + iconClass + ' me-1';
            }
          }
        });
      }
      
      // Lazy load images with Intersection Observer
      function initializeLazyLoading() {
        if ('IntersectionObserver' in window) {
          const imageObserver = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
              if (entry.isIntersecting) {
                const img = entry.target;
                if (img.dataset.src) {
                  img.src = img.dataset.src;
                  img.removeAttribute('data-src');
                }
                observer.unobserve(img);
              }
            });
          }, {
            rootMargin: '50px 0px',
            threshold: 0.1
          });
          
          document.querySelectorAll('img[loading="lazy"]').forEach(img => {
            // Convert src to data-src for lazy loading
            if (img.src && !img.dataset.src) {
              img.dataset.src = img.src;
              img.src = 'data:image/svg+xml,%3Csvg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 9"%3E%3C/svg%3E';
              imageObserver.observe(img);
            }
          });
        }
      }
      
      // Card animation observer
      function initializeCardAnimations() {
        if ('IntersectionObserver' in window) {
          const cardObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
              if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0) scale(1)';
              }
            });
          }, {
            threshold: 0.1,
            rootMargin: '0px 0px -100px 0px'
          });
          
          // Observe news cards
          document.querySelectorAll('.sporter-news-card').forEach(card => {
            cardObserver.observe(card);
          });
          
          // Observe side cards
          document.querySelectorAll('.news-side-mini-card').forEach(card => {
            cardObserver.observe(card);
          });
        }
      }
      
      // Initialize everything when DOM is loaded
      document.addEventListener('DOMContentLoaded', function() {
        // Apply icons
        applyFilterIcons();
        applySportIconsToCards();
        
        // Initialize features
        initializeNewsFilter();
        initializeLazyLoading();
        initializeCardAnimations();
        
        // Main card animation
        const mainCard = document.querySelector('.news-main-card');
        if (mainCard) {
          setTimeout(() => {
            mainCard.style.opacity = '1';
            mainCard.style.transform = 'translateX(0)';
          }, 100);
        }
        
        // Side top card animation
        const sideTopCard = document.querySelector('.news-side-top-card');
        if (sideTopCard) {
          setTimeout(() => {
            sideTopCard.style.opacity = '1';
            sideTopCard.style.transform = 'scale(1)';
          }, 200);
        }
        
        // Side mini cards animation
        document.querySelectorAll('.news-side-mini-card').forEach((card, index) => {
          setTimeout(() => {
            card.style.opacity = '1';
            card.style.transform = 'scale(1)';
          }, 300 + (index * 100));
        });
        
        // Add smooth hover effects
        document.querySelectorAll('.news-card-readmore, .news-main-readmore').forEach(link => {
          link.addEventListener('mouseenter', function() {
            const icon = this.querySelector('i');
            if (icon) {
              icon.style.transform = 'translateX(3px)';
              icon.style.transition = 'transform 0.3s ease';
            }
          });
          
          link.addEventListener('mouseleave', function() {
            const icon = this.querySelector('i');
            if (icon) {
              icon.style.transform = 'translateX(0)';
            }
          });
        });
        
        // Add filter button hover effects
        document.querySelectorAll('.btn-news-filter').forEach(button => {
          button.addEventListener('mouseenter', function() {
            if (!this.classList.contains('active')) {
              const icon = this.querySelector('i');
              if (icon) {
                icon.style.transform = 'scale(1.2)';
                icon.style.transition = 'transform 0.3s ease';
              }
            }
          });
          
          button.addEventListener('mouseleave', function() {
            const icon = this.querySelector('i');
            if (icon) {
              icon.style.transform = 'scale(1)';
            }
          });
        });
        
        // Add reading time estimation
        document.querySelectorAll('.sporter-news-card').forEach(card => {
          const textContent = card.textContent || '';
          const wordCount = textContent.trim().split(/\s+/).length;
          const readTime = Math.ceil(wordCount / 200);
          
          if (readTime > 0) {
            const metaElement = card.querySelector('.news-card-meta');
            if (metaElement) {
              const readTimeElement = document.createElement('span');
              readTimeElement.className = 'news-card-date';
              readTimeElement.innerHTML = `<i class="bi bi-clock me-1"></i>${readTime} min baca`;
              metaElement.appendChild(readTimeElement);
            }
          }
        });
        
        // Add stats cards hover animation
        document.querySelectorAll('.news-stats-card').forEach(card => {
          card.addEventListener('mouseenter', function() {
            const valueElement = this.querySelector('.news-stats-value');
            if (valueElement) {
              valueElement.style.transform = 'scale(1.1)';
              valueElement.style.transition = 'transform 0.3s ease';
            }
          });
          
          card.addEventListener('mouseleave', function() {
            const valueElement = this.querySelector('.news-stats-value');
            if (valueElement) {
              valueElement.style.transform = 'scale(1)';
            }
          });
        });
        
        // Add filter animation when switching
        let isFiltering = false;
        document.querySelectorAll('.btn-news-filter').forEach(button => {
          button.addEventListener('click', function() {
            if (!isFiltering) {
              isFiltering = true;
              const newsGrid = document.getElementById('news-grid');
              if (newsGrid) {
                newsGrid.style.opacity = '0.5';
                newsGrid.style.transition = 'opacity 0.3s ease';
                
                setTimeout(() => {
                  newsGrid.style.opacity = '1';
                  isFiltering = false;
                }, 400);
              }
            }
          });
        });
      });
    })(); 