extends ../layout/main

block content
  style.
    .favorites-page {
      background: linear-gradient(135deg, #f5f8fa 0%, #e9eef3 100%);
      min-height: 100vh;
      padding: 2.5rem 0;
    }
    .page-header {
      margin-bottom: 2rem;
    }
    .page-title {
      font-family: 'Bebas Neue', cursive;
      font-size: 2rem;
      letter-spacing: 1px;
      color: #0B1F3F;
      margin-bottom: .5rem;
    }
    .page-subtitle {
      color: #5a6c7d;
      font-size: .9rem;
      margin: 0;
    }
    .empty-state {
      background: #fff;
      border: 1px solid #e8edf2;
      border-radius: 16px;
      padding: 3rem 2rem;
      text-align: center;
      box-shadow: 0 2px 8px rgba(0,0,0,.04);
    }
    .empty-icon {
      width: 64px;
      height: 64px;
      background: linear-gradient(135deg, #f0f8ff 0%, #e0f2ff 100%);
      border: 1px solid #d6edff;
      border-radius: 16px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1rem;
      font-size: 1.8rem;
      color: #0095FF;
    }
    .empty-text {
      color: #5a6c7d;
      margin-bottom: 1.5rem;
    }
    .btn-find {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      border: none;
      color: #fff;
      padding: .85rem 1.5rem;
      border-radius: 12px;
      font-weight: 600;
      font-size: .9rem;
      text-decoration: none;
      display: inline-block;
      transition: all .2s ease;
    }
    .btn-find:hover {
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba(0,149,255,.2);
      color: #fff;
    }
    .event-card {
      background: #fff;
      border: 1px solid #e8edf2;
      border-radius: 16px;
      box-shadow: 0 2px 8px rgba(0,0,0,.04);
      padding: 1.5rem;
      height: 100%;
      transition: all .2s ease;
    }
    .event-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 16px rgba(0,0,0,.08);
    }
    .event-title {
      font-weight: 700;
      color: #0B1F3F;
      font-size: 1.1rem;
      margin-bottom: .5rem;
      line-height: 1.3;
    }
    .event-sport {
      color: #5a6c7d;
      font-size: .85rem;
      display: flex;
      align-items: center;
      gap: .4rem;
    }
    .event-badge {
      background: #f0f4f8;
      color: #0B1F3F;
      border: 1px solid #e8edf2;
      padding: .25rem .65rem;
      border-radius: 8px;
      font-size: .75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: .3px;
    }
    .event-divider {
      border: none;
      border-top: 1px solid #f0f4f8;
      margin: 1rem 0;
    }
    .event-venue {
      color: #5a6c7d;
      font-size: .85rem;
      display: flex;
      align-items: center;
      gap: .4rem;
      margin-bottom: 1rem;
    }
    .btn-detail {
      background: #fff;
      border: 1px solid #e8edf2;
      color: #0095FF;
      padding: .65rem 1rem;
      border-radius: 10px;
      font-weight: 600;
      font-size: .85rem;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: .4rem;
      transition: all .2s ease;
    }
    .btn-detail:hover {
      background: #f0f8ff;
      border-color: #0095FF;
      color: #0095FF;
    }
    
    @media (max-width: 575px) {
      .favorites-page {
        padding: 1.5rem 0;
      }
      .page-title {
        font-size: 1.8rem;
      }
      .empty-state {
        padding: 2rem 1.5rem;
      }
      .event-card {
        padding: 1.25rem;
      }
    }

  .favorites-page
    .container
      .page-header
        h2.page-title Disimpan
        p.page-subtitle Event yang kamu simpan bakal muncul di sini.

      if !events || events.length === 0
        .empty-state
          .empty-icon
            i.bi.bi-bookmark
          p.empty-text Belum ada event yang kamu simpan.
          a.btn-find(href="/events")
            i.bi.bi-calendar-event.me-2
            | Cari Event
      else
        .row.g-3
          each e in events
            .col-md-6
              .event-card
                .d-flex.justify-content-between.align-items-start.gap-2.mb-2
                  div.flex-grow-1
                    h5.event-title= e.title
                    if e.sport_name
                      .event-sport
                        i.bi.bi-trophy
                        span= e.sport_name
                  if e.status
                    span.event-badge= e.status

                hr.event-divider

                if e.venue_name
                  .event-venue
                    i.bi.bi-geo-alt
                    span= e.venue_name

                a.btn-detail(href=`/events/${e.slug || e.id}`)
                  span Buka Detail
                  i.bi.bi-arrow-right