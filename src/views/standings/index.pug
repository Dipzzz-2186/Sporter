extends ../layout/main

block content
  style.
    /* Standings Page Styles */
    .standings-page {
      background: linear-gradient(135deg, #f5f8fa 0%, #e9eef3 100%);
      min-height: 100vh;
      padding: 3rem 0;
    }
    
    .standings-header {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
      border-radius: 20px;
      padding: 2.5rem;
      margin-bottom: 2rem;
      position: relative;
      overflow: hidden;
      animation: fadeInDown 0.6s ease-out;
    }
    
    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .standings-header::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -20%;
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, rgba(0, 149, 255, 0.15) 0%, transparent 70%);
      border-radius: 50%;
    }
    
    /* ===== HEADER CONTENT ===== */
    .header-content-wrapper {
      position: relative;
      z-index: 2;
    }
    
    .header-title-row {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 0.5rem;
    }
    
    .standings-header h3 {
      color: white;
      font-family: 'Bebas Neue', cursive;
      font-size: 2.5rem;
      letter-spacing: 1px;
      margin: 0;
      position: relative;
      z-index: 2;
      flex: 1;
    }
    
    .standings-header h3 i {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-right: 0.5rem;
    }
    
    /* ===== Back Button (FIXED POSITION - pojok kanan atas) ===== */
    .btn-back-modern {
      display: inline-flex;
      align-items: center;
      gap: 0.45rem;
      background: rgba(255,255,255,.15);
      color: #fff;
      border: 1px solid rgba(255,255,255,.35);
      border-radius: 12px;
      padding: 0.45rem 0.9rem;
      font-size: 0.85rem;
      font-weight: 600;
      transition: all 0.25s ease;
      text-decoration: none;
      position: absolute;
      top: 1.5rem;
      right: 1.5rem;
      z-index: 10;
    }

    .btn-back-modern:hover {
      background: rgba(255,255,255,.28);
      transform: translateX(-3px);
      color: #fff;
    }

    /* ===== Mode Switch ===== */
    .mode-switch-wrapper {
      margin-top: 1.25rem;
      display: flex;
      align-items: center;
      gap: 1rem;
      flex-wrap: wrap;
    }
    
    .mode-switch {
      display: inline-flex;
      background: rgba(255,255,255,.15);
      border-radius: 14px;
      padding: 0.25rem;
      gap: 0.25rem;
    }

    .mode-switch a {
      padding: 0.4rem 0.85rem;
      border-radius: 10px;
      font-size: 0.8rem;
      font-weight: 600;
      color: #fff;
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
      text-decoration: none;
      transition: 0.25s;
    }

    .mode-switch a.inactive {
      opacity: 0.6;
    }

    .mode-switch a.active {
      background: #fff;
      color: #0B1F3F;
      box-shadow: 0 4px 14px rgba(0,0,0,.18);
    }

    .mode-switch a.inactive:hover {
      background: rgba(255,255,255,.18);
      opacity: 1;
    }

    /* Guide Button */
    .btn-guide {
      display: inline-flex;
      align-items: center;
      gap: 0.35rem;
      background: rgba(255, 255, 255, 0.15);
      color: #fff;
      border: 1px solid rgba(255, 255, 255, 0.35);
      border-radius: 10px;
      font-size: 0.8rem;
      font-weight: 600;
      padding: 0.35rem 0.75rem;
      transition: all 0.25s ease;
    }

    .btn-guide i {
      font-size: 0.95rem;
    }

    .btn-guide:hover {
      background: rgba(255, 255, 255, 0.25);
      border-color: rgba(255, 255, 255, 0.6);
      color: #fff;
      transform: translateY(-1px);
    }

    .btn-guide:active {
      transform: translateY(0);
    }

    .btn-guide:focus {
      box-shadow: 0 0 0 0.15rem rgba(255, 255, 255, 0.25);
    }
    
    /* ===== FILTER SECTION ===== */
    .filter-section {
      background: white;
      border-radius: 15px;
      padding: 1.5rem;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
      margin-bottom: 2rem;
      animation: fadeInUp 0.6s ease-out 0.2s backwards;
    }
    
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .filter-section label {
      color: #0B1F3F;
      font-weight: 600;
      font-size: 0.95rem;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .filter-section label i {
      color: #0095FF;
    }
    
    .filter-section select {
      border-radius: 10px;
      border: 2px solid #e8edf2;
      padding: 0.75rem 1rem;
      font-size: 1rem;
      transition: all 0.3s ease;
    }
    
    .filter-section select:focus {
      border-color: #0095FF;
      box-shadow: 0 0 0 0.2rem rgba(0, 149, 255, 0.15);
    }
    
    /* ===== STANDINGS GROUP ===== */
    .standings-group {
      background: white;
      border-radius: 20px;
      padding: 2rem;
      margin-bottom: 2rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      animation: fadeInUp 0.6s ease-out backwards;
      border: 2px solid #e8edf2;
      transition: all 0.4s ease;
    }
    
    .standings-group:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 30px rgba(0, 149, 255, 0.12);
      border-color: #0095FF;
    }
    
    .group-title {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 2px solid #e8edf2;
    }
    
    .group-title-icon {
      width: 50px;
      height: 50px;
      background: linear-gradient(135deg, #f0f8ff 0%, #e0f2ff 100%);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 2px solid #d6edff;
    }
    
    .group-title-icon i {
      font-size: 1.5rem;
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .group-title h5 {
      color: #0B1F3F;
      font-weight: 700;
      font-size: 1.4rem;
      margin: 0;
    }
    
    /* ===== STANDINGS TABLE ===== */
    .standings-table {
      border-radius: 15px;
      overflow: hidden;
      border: 2px solid #f8f9fa;
    }
    
    .standings-table table {
      margin-bottom: 0;
    }
    
    .standings-table thead {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
    }
    
    .standings-table thead th {
      background: transparent !important;
      color: white !important;
      font-weight: 600;
      font-size: 0.85rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      padding: 1rem 0.75rem;
      border: none;
      white-space: nowrap;
    }
    
    .standings-table tbody tr {
      transition: all 0.3s ease;
      border-bottom: 1px solid #e8edf2;
    }
    
    .standings-table tbody tr:hover {
      background: linear-gradient(90deg, rgba(0, 149, 255, 0.05) 0%, rgba(52, 199, 255, 0.05) 100%);
      transform: scale(1.01);
    }
    
    .standings-table tbody td {
      padding: 1rem 0.75rem;
      vertical-align: middle;
      font-size: 0.95rem;
    }
    
    .team-name {
      font-weight: 700;
      color: #0B1F3F;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .team-name a {
      color: #0B1F3F;
      text-decoration: none;
      transition: color 0.2s ease;
    }
    
    .team-name a:hover {
      color: #0095FF;
    }
    
    .team-name i {
      color: #0095FF;
      font-size: 1rem;
    }
    
    .stat-cell {
      font-weight: 600;
      color: #495057;
    }
    
    .points-cell {
      font-weight: 700;
      font-size: 1.1rem;
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    /* ===== POSITION BADGES ===== */
    .position-badge {
      width: 30px;
      height: 30px;
      border-radius: 8px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      font-size: 0.85rem;
      margin-right: 0.5rem;
    }
    
    .position-1 {
      background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
      color: white;
      box-shadow: 0 2px 8px rgba(255, 215, 0, 0.4);
    }
    
    .position-2 {
      background: linear-gradient(135deg, #C0C0C0 0%, #A8A8A8 100%);
      color: white;
      box-shadow: 0 2px 8px rgba(192, 192, 192, 0.4);
    }
    
    .position-3 {
      background: linear-gradient(135deg, #CD7F32 0%, #B87333 100%);
      color: white;
      box-shadow: 0 2px 8px rgba(205, 127, 50, 0.4);
    }
    
    .position-other {
      background: #f8f9fa;
      color: #5a6c7d;
      border: 2px solid #e9ecef;
    }
    
    /* ===== STATS HIGHLIGHT ===== */
    .stat-positive {
      color: #34C759;
      font-weight: 600;
    }
    
    .stat-negative {
      color: #FF3B30;
      font-weight: 600;
    }
    
    /* ===== EMPTY STATE ===== */
    .empty-state {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border: 2px dashed #d0d0d0;
      border-radius: 20px;
      padding: 4rem 2rem;
      text-align: center;
      animation: fadeInUp 0.6s ease-out;
    }
    
    .empty-state-icon {
      width: 100px;
      height: 100px;
      background: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      animation: float 3s ease-in-out infinite;
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }
    
    .empty-state-icon i {
      font-size: 3rem;
      color: #adb5bd;
    }
    
    .empty-state h4 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2rem;
      color: #0B1F3F;
      letter-spacing: 1px;
      margin-bottom: 0.75rem;
    }
    
    .empty-state p {
      color: #5a6c7d;
      font-size: 1.05rem;
      margin: 0;
    }
    
    /* ===== RESPONSIVE ===== */
    @media (max-width: 991px) {
      .standings-header {
        padding: 2rem;
      }
      
      .standings-header h3 {
        font-size: 2rem;
      }
      
      .btn-back-modern {
        top: 1rem;
        right: 1rem;
      }
      
      .standings-group {
        padding: 1.5rem;
      }
      
      .standings-table {
        font-size: 0.85rem;
      }
      
      .standings-table thead th,
      .standings-table tbody td {
        padding: 0.75rem 0.5rem;
      }
    }
    
    @media (max-width: 767px) {
      .standings-page {
        padding: 2rem 0;
      }
      
      .standings-header {
        padding: 1.5rem;
      }
      
      .standings-header h3 {
        font-size: 1.5rem;
      }
      
      .btn-back-modern {
        position: static;
        margin-top: 1rem;
        display: inline-flex;
        top: auto;
        right: auto;
      }
      
      .header-title-row {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
      }
      
      .standings-group {
        padding: 1rem;
      }
      
      .group-title h5 {
        font-size: 1.2rem;
      }
      
      .standings-table {
        overflow-x: auto;
      }
      
      .standings-table table {
        min-width: 700px;
      }
    }
    
    /* Animation delays */
    .standings-group:nth-child(1) { animation-delay: 0.1s; }
    .standings-group:nth-child(2) { animation-delay: 0.2s; }
    .standings-group:nth-child(3) { animation-delay: 0.3s; }
    .standings-group:nth-child(4) { animation-delay: 0.4s; }

  .standings-page
    .container
      .standings-header
        //- BACK BUTTON DI POJOK KANAN ATAS (MIRIP SUBADMIN)
        - const sport = sports && query && query.sport_id ? sports.find(s => Number(s.id) === Number(query.sport_id)) : null;
        - const backUrl = sport ? ('/sports/' + encodeURIComponent(sport.name)) : '/sports/';
        
        a.btn-back-modern(href=backUrl)
          i.bi.bi-arrow-left.me-1
          | Kembali

        .header-content-wrapper
          .header-title-row
            h3
              i.bi.bi-trophy-fill
              | Klasemen

          //- Mode Switch (MIRIP SUBADMIN)
          .mode-switch-wrapper
            - const mode = (query && query.mode) ? String(query.mode) : 'team';
            - const sportParam = (query && query.sport_id) ? `sport_id=${query.sport_id}` : '';
            
            .mode-switch
              a(
                class=(mode === 'team' ? 'active' : 'inactive')
                href=`/standings?${sportParam}&mode=team`
              )
                i.bi.bi-people-fill
                | Tim
              
              a(
                class=(mode === 'individual' ? 'active' : 'inactive')
                href=`/standings?${sportParam}&mode=individual`
              )
                i.bi.bi-person-fill
                | Individual

      // === FILTER CABANG (HANYA JIKA LEBIH DARI 1) ===
      if sports && sports.length > 1
        .filter-section
          label.mb-2
            i.bi.bi-funnel-fill
            | Pilih Cabang Olahraga
          - const mode = (query && query.mode) ? String(query.mode) : 'team';

          select.form-select(
            name="sport_id"
            onchange=`location.href='?sport_id=' + this.value + '&mode=${mode}'`
          )
            option(value="") Semua Cabang
            each s in sports
              option(
                value=s.id
                selected=(query && Number(query.sport_id) === s.id)
              )= s.name

      if standings.length
        .standings-group
          .group-title
            .group-title-icon
              i.bi.bi-flag-fill
            h5= standings[0].sport_name
          .standings-table
            .table-responsive
              table.table.table-hover
                thead
                  tr
                    th No.
                    
                    - const isIndividualMode = (mode === 'individual');
                    - const isPadelIndividual = (isPadel && isIndividualMode);
                    
                    if isPadelIndividual
                      th Nama Athlete
                      th Pasangan
                      th.text-center MP
                      th.text-center W-L
                      th.text-center Titles
                      th.text-center Poin
                    else if isIndividualMode
                      th Nama Athlete
                      th.text-center PJ
                      th.text-center M
                      th.text-center S
                      th.text-center K
                      th.text-center GM
                      th.text-center GK
                      th.text-center SG
                      th.text-center Poin
                    else
                      th Nama Tim
                      th.text-center PJ
                      th.text-center M
                      th.text-center S
                      th.text-center K
                      th.text-center GM
                      th.text-center GK
                      th.text-center SG
                      th.text-center Poin

                tbody
                  each row, index in standings
                    tr
                      td
                        if index === 0
                          span.position-badge.position-1 1
                        else if index === 1
                          span.position-badge.position-2 2
                        else if index === 2
                          span.position-badge.position-3 3
                        else
                          span.position-badge.position-other= index + 1

                      if isPadelIndividual
                        //- PADEL INDIVIDUAL MODE
                        td
                          .team-name
                            i.bi.bi-person-badge
                            if row.slug
                              a(href='/athletes/' + row.slug)= row.athlete_name
                            else
                              = row.athlete_name
                        
                        td.stat-cell= row.paired_with_name || '-'
                        td.text-center.stat-cell= row.match_played
                        td.text-center.stat-cell #{row.match_won} - #{row.match_lost}
                        td.text-center.stat-cell= row.titles || 0
                        td.text-center.points-cell= row.points || 0

                      else if isIndividualMode
                        //- REGULAR INDIVIDUAL MODE
                        td
                          .team-name
                            i.bi.bi-person-fill-check
                            if row.slug
                              a(href='/athletes/' + row.slug)= row.athlete_name
                            else
                              = row.team_name || row.athlete_name
                        
                        td.text-center.stat-cell= row.played || 0
                        td.text-center.stat-cell= row.win || 0
                        td.text-center.stat-cell= row.draw || 0
                        td.text-center.stat-cell= row.loss || 0
                        td.text-center.stat-cell= row.game_win || 0
                        td.text-center.stat-cell= row.game_loss || 0
                        td.text-center.stat-cell
                          if (row.game_win - row.game_loss) >= 0
                            span.stat-positive +#{row.game_win - row.game_loss}
                          else
                            span.stat-negative #{row.game_win - row.game_loss}
                        td.text-center.points-cell= row.pts || 0

                      else
                        //- TEAM MODE
                        td
                          .team-name
                            i.bi.bi-people-fill
                            if row.team_id
                              a(href='/teams/' + row.team_id)= row.team_name
                            else
                              = row.team_name
                        
                        td.text-center.stat-cell= row.played || 0
                        td.text-center.stat-cell= row.win || 0
                        td.text-center.stat-cell= row.draw || 0
                        td.text-center.stat-cell= row.loss || 0
                        td.text-center.stat-cell= row.game_win || 0
                        td.text-center.stat-cell= row.game_loss || 0
                        td.text-center.stat-cell
                          if (row.game_win - row.game_loss) >= 0
                            span.stat-positive +#{row.game_win - row.game_loss}
                          else
                            span.stat-negative #{row.game_win - row.game_loss}
                        td.text-center.points-cell= row.pts || 0

      else
        .empty-state
          .empty-state-icon
            i.bi.bi-clipboard2-x
          h4 Belum Ada Klasemen
          p Belum ada data klasemen untuk cabang #{query && query.sport_id ? 'ini' : 'tersedia'}. Data akan muncul setelah pertandingan selesai.

  //- Custom JavaScript (Disederhanakan seperti subadmin)
  script.
    (function() {
      // Sport filter tanpa reload
      var sportFilter = document.querySelector('select[name="sport_id"]');
      if (sportFilter) {
        sportFilter.addEventListener('change', function(e) {
          var sportId = this.value;
          var currentMode = '!{mode || "team"}';
          var currentUrl = new URL(window.location.href);
          
          if (sportId) {
            currentUrl.searchParams.set('sport_id', sportId);
            currentUrl.searchParams.set('mode', currentMode);
          } else {
            currentUrl.searchParams.delete('sport_id');
          }
          
          // Show loading state
          var groups = document.querySelectorAll('.standings-group');
          groups.forEach(function(group) {
            group.style.opacity = '0.5';
            group.style.pointerEvents = 'none';
          });
          
          // Reload page
          setTimeout(function() {
            window.location.href = currentUrl.toString();
          }, 300);
        });
      }
      
      // Intersection Observer for animations
      if ('IntersectionObserver' in window) {
        var observer = new IntersectionObserver(function(entries) {
          entries.forEach(function(entry) {
            if (entry.isIntersecting) {
              entry.target.style.opacity = '1';
              entry.target.style.transform = 'translateY(0)';
            }
          });
        }, {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px'
        });
        
        // Observe all groups
        document.querySelectorAll('.standings-group').forEach(function(group) {
          observer.observe(group);
        });
      }
      
      // Add hover effects
      var rows = document.querySelectorAll('.standings-table tbody tr');
      rows.forEach(function(row) {
        row.addEventListener('mouseenter', function() {
          this.style.transition = 'all 0.3s ease';
        });
      });
    })();