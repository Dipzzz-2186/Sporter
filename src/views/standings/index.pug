extends ../layout/main

block content
  style.
    /* Standings Page Styles */
    .standings-page {
      background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
      min-height: 100vh;
      padding: 3rem 0;
    }
    
    .standings-header {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
      border-radius: 20px;
      padding: 2.5rem;
      margin-bottom: 2rem;
      position: relative;
      overflow: hidden;
      animation: fadeInDown 0.6s ease-out;
    }
    
    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .standings-header::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -20%;
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, rgba(0, 149, 255, 0.15) 0%, transparent 70%);
      border-radius: 50%;
      animation: float 8s ease-in-out infinite;
    }
    
    @keyframes float {
      0%, 100% { transform: translate(0, 0) scale(1); }
      50% { transform: translate(30px, -30px) scale(1.05); }
    }
    
    .standings-header h3 {
      color: white;
      font-family: 'Bebas Neue', cursive;
      font-size: 2.5rem;
      letter-spacing: 1px;
      margin: 0;
      position: relative;
      z-index: 2;
    }
    
    .standings-header h3 i {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-right: 0.5rem;
    }
    
    .filter-section {
      background: white;
      border-radius: 15px;
      padding: 1.5rem;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
      margin-bottom: 2rem;
      animation: fadeInUp 0.6s ease-out 0.2s backwards;
      transition: all 0.3s ease;
    }
    
    .filter-section:hover {
      box-shadow: 0 6px 20px rgba(0, 149, 255, 0.1);
    }
    
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .filter-section label {
      color: #0B1F3F;
      font-weight: 600;
      font-size: 0.95rem;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .filter-section label i {
      color: #0095FF;
    }
    
    .filter-section select {
      border-radius: 10px;
      border: 2px solid #f0f0f0;
      padding: 0.75rem 1rem;
      font-size: 1rem;
      transition: all 0.3s ease;
      background: white;
      cursor: pointer;
    }
    
    .filter-section select:hover {
      border-color: rgba(0, 149, 255, 0.3);
    }
    
    .filter-section select:focus {
      border-color: #0095FF;
      box-shadow: 0 0 0 0.2rem rgba(0, 149, 255, 0.15);
      outline: none;
    }
    
    .standings-group {
      background: white;
      border-radius: 20px;
      padding: 2rem;
      margin-bottom: 2rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      animation: fadeInUp 0.6s ease-out backwards;
      border: 2px solid #f0f0f0;
      transition: all 0.4s ease;
    }
    
    .standings-group:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 30px rgba(0, 149, 255, 0.12);
      border-color: #0095FF;
    }
    
    .group-title {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 2px solid #f0f0f0;
    }
    
    .group-title-icon {
      width: 50px;
      height: 50px;
      background: linear-gradient(135deg, #f0f8ff 0%, #e0f2ff 100%);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 2px solid #d6edff;
      transition: all 0.3s ease;
    }
    
    .standings-group:hover .group-title-icon {
      transform: rotate(10deg) scale(1.05);
    }
    
    .group-title-icon i {
      font-size: 1.5rem;
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .group-title h5 {
      color: #0B1F3F;
      font-weight: 700;
      font-size: 1.4rem;
      margin: 0;
    }
    
    .standings-table {
      border-radius: 15px;
      overflow: hidden;
      border: 2px solid #f8f9fa;
    }
    
    .standings-table table {
      margin-bottom: 0;
    }
    
    .standings-table thead {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
    }
    
    .standings-table thead th {
      background: transparent !important; /* ikut parent */
      color: white !important;
      font-weight: 600;
      font-size: 0.85rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      padding: 1rem 0.75rem;
      border: none;
      white-space: nowrap;
    }
    
    .standings-table tbody tr {
      transition: all 0.3s ease;
      border-bottom: 1px solid #f0f0f0;
    }
    
    .standings-table tbody tr:hover {
      background: linear-gradient(90deg, rgba(0, 149, 255, 0.05) 0%, rgba(52, 199, 255, 0.05) 100%);
      transform: scale(1.01);
    }
    
    .standings-table tbody tr:last-child {
      border-bottom: none;
    }
    
    .standings-table tbody td {
      padding: 1rem 0.75rem;
      vertical-align: middle;
      font-size: 0.95rem;
    }
    
    .team-name {
      font-weight: 700;
      color: #0B1F3F;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .team-name i {
      color: #0095FF;
      font-size: 1rem;
    }
    
    .stat-cell {
      font-weight: 600;
      color: #495057;
    }
    
    .points-cell {
      font-weight: 700;
      font-size: 1.1rem;
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .empty-state {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border: 2px dashed #d0d0d0;
      border-radius: 20px;
      padding: 4rem 2rem;
      text-align: center;
      animation: fadeInUp 0.6s ease-out;
    }
    
    .empty-state-icon {
      width: 100px;
      height: 100px;
      background: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      animation: floatEmpty 3s ease-in-out infinite;
    }
    
    @keyframes floatEmpty {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }
    
    .empty-state-icon i {
      font-size: 3rem;
      color: #adb5bd;
    }
    
    .empty-state h4 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2rem;
      color: #0B1F3F;
      letter-spacing: 1px;
      margin-bottom: 0.75rem;
    }
    
    .empty-state p {
      color: #5a6c7d;
      font-size: 1.05rem;
      margin: 0;
      line-height: 1.6;
    }
    
    /* Position badges */
    .position-badge {
      width: 32px;
      height: 32px;
      border-radius: 8px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      font-size: 0.85rem;
      margin-right: 0.5rem;
      transition: all 0.3s ease;
    }
    
    .standings-table tbody tr:hover .position-badge {
      transform: scale(1.1);
    }
    
    .position-1 {
      background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
      color: white;
      box-shadow: 0 3px 10px rgba(255, 215, 0, 0.4);
    }
    
    .position-2 {
      background: linear-gradient(135deg, #C0C0C0 0%, #A8A8A8 100%);
      color: white;
      box-shadow: 0 3px 10px rgba(192, 192, 192, 0.4);
    }
    
    .position-3 {
      background: linear-gradient(135deg, #CD7F32 0%, #B87333 100%);
      color: white;
      box-shadow: 0 3px 10px rgba(205, 127, 50, 0.4);
    }
    
    .position-other {
      background: #f8f9fa;
      color: #5a6c7d;
      border: 2px solid #e8edf2;
    }
    
    /* Loading overlay */
    .loading-overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(11, 31, 63, 0.8);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 9999;
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
    }
    
    .loading-overlay.active {
      opacity: 1;
      visibility: visible;
    }
    
    .loading-spinner {
      width: 60px;
      height: 60px;
      border: 4px solid rgba(255, 255, 255, 0.2);
      border-top-color: #0095FF;
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
    }
    
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
    
    /* Stats highlight */
    .stat-positive {
      color: #059669;
    }
    
    .stat-negative {
      color: #dc2626;
    }
    
    /* Responsive */
    @media (max-width: 991px) {
      .standings-page {
        padding: 2rem 0;
      }
      
      .standings-header {
        padding: 2rem;
      }
      
      .standings-header h3 {
        font-size: 2rem;
      }
      
      .standings-group {
        padding: 1.5rem;
      }
      
      .standings-table {
        font-size: 0.85rem;
      }
      
      .standings-table thead th,
      .standings-table tbody td {
        padding: 0.75rem 0.5rem;
      }
    }
    
    @media (max-width: 767px) {
      .standings-page {
        padding: 1.5rem 0;
      }
      
      .standings-header {
        padding: 1.5rem;
        border-radius: 15px;
      }
      
      .standings-header h3 {
        font-size: 1.75rem;
      }
      
      .filter-section {
        padding: 1rem;
      }
      
      .standings-group {
        padding: 1rem;
        border-radius: 15px;
      }
      
      .group-title {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.75rem;
      }
      
      .group-title h5 {
        font-size: 1.2rem;
      }
      
      .standings-table {
        overflow-x: auto;
      }
      
      .standings-table table {
        min-width: 700px;
      }
      
      .empty-state {
        padding: 3rem 1.5rem;
      }
      
      .empty-state h4 {
        font-size: 1.5rem;
      }
    }
    
    /* Animation delays */
    .standings-group:nth-child(1) { animation-delay: 0.1s; }
    .standings-group:nth-child(2) { animation-delay: 0.2s; }
    .standings-group:nth-child(3) { animation-delay: 0.3s; }
    .standings-group:nth-child(4) { animation-delay: 0.4s; }

  .standings-page
    .container

      // ===== HEADER =====
      .standings-header
        h3
          i.bi.bi-trophy-fill
          | Klasemen

      // ===== FILTER =====
      .filter-section
      label.mb-2
        i.bi.bi-funnel-fill
        | Pilih Cabang Olahraga

      select#sportFilter.form-select(name="sport_id")
        option(value="") Semua Cabang
        each s in sports
          option(
            value=s.id
            selected=(query && Number(query.sport_id) === s.id)
          )= s.name

      // ===== MODE TOGGLE (DI LUAR SELECT!) =====
      - const currentMode = (mode || 'team');
      - const sportId = (query && query.sport_id) ? query.sport_id : '';
      - const padelIndividual = (isPadel && currentMode === 'individual');

      .d-flex.flex-wrap.gap-2.mt-3
        a.btn.btn-sm(
          href='/subadmin/standings?sport_id=' + sportId + '&mode=team'
          class=(currentMode === 'team' ? 'btn-primary' : 'btn-outline-primary')
        )
          i.bi.bi-people-fill.me-1
          | Klasemen Tim

        a.btn.btn-sm(
          href='/subadmin/standings?sport_id=' + sportId + '&mode=individual'
          class=(currentMode === 'individual' ? 'btn-primary' : 'btn-outline-primary')
        )
          i.bi.bi-person-badge.me-1
          | Klasemen Individual

      // ===== TABLE =====
      if standings && standings.length
        .standings-group
          .group-title
            .group-title-icon
              i.bi.bi-flag-fill
            h5= standings[0].sport_name

          .standings-table
            .table-responsive
              table.table.table-hover
                thead 
                  tr
                    th No.
                    if padelIndividual
                      th Nama Athlete
                      th Pasangan
                      th.text-center MP
                      th.text-center W-L
                      th.text-center Titles
                    else
                      th Nama Tim
                      th.text-center PJ
                      th.text-center M
                      th.text-center S
                      th.text-center K
                      th.text-center GM
                      th.text-center GK
                      th.text-center SG
                      th.text-center Poin

                tbody
                  each row, index in standings
                    tr
                      // NO
                      td
                        - const posClass = (index === 0) ? 'position-1' : (index === 1) ? 'position-2' : (index === 2) ? 'position-3' : 'position-other';
                        span.position-badge(class=posClass)= index + 1

                      if padelIndividual
                        td
                          .team-name
                            i.bi.bi-person-badge
                            a.text-decoration-none.fw-bold(href='/athletes/' + row.slug)= row.athlete_name

                        td= row.paired_with_name || '-'
                        td.text-center= row.match_played
                        td.text-center #{row.match_won} - #{row.match_lost}
                        td.text-center= row.titles
                        td.text-center.points-cell= row.points
                      else
                        td
                          .team-name
                            i.bi.bi-people-fill
                            a.text-decoration-none.fw-bold(href='/teams/' + row.team_id)= row.team_name

                        td.text-center= row.played
                        td.text-center= row.win
                        td.text-center= row.draw
                        td.text-center= row.loss
                        td.text-center= row.game_win
                        td.text-center= row.game_loss
                        td.text-center.points-cell= row.pts

      else
        .empty-state
          .empty-state-icon
            i.bi.bi-clipboard2-x
          h4 Belum Ada Klasemen
          p Belum ada data klasemen untuk cabang ini.


  // Loading overlay
  #loadingOverlay.loading-overlay
    .loading-spinner

  //- Custom JavaScript
  script.
    (function() {
      var sportFilter = document.getElementById('sportFilter');
      var loadingOverlay = document.getElementById('loadingOverlay');
      
      if (!sportFilter) return;

      sportFilter.addEventListener('change', function() {
        var sportId = this.value;
        var currentUrl = new URL(window.location.href);

        if (sportId) currentUrl.searchParams.set('sport_id', sportId);
        else currentUrl.searchParams.delete('sport_id');
        // keep mode (team/athlete) when switching sports
        var mode = currentUrl.searchParams.get('mode') || 'team';
        currentUrl.searchParams.set('mode', mode);

        
        // Show loading overlay
        if (loadingOverlay) {
          loadingOverlay.classList.add('active');
        }
        
        // Add fade out effect to groups
        var groups = document.querySelectorAll('.standings-group');
        groups.forEach(function(group) {
          group.style.opacity = '0';
          group.style.transform = 'translateY(20px)';
        });
        
        // Navigate after animation
        setTimeout(function() {
          window.location.href = currentUrl.toString();
        }, 300);
      });
      
      // Intersection Observer for animations
      if ('IntersectionObserver' in window) {
        var observer = new IntersectionObserver(function(entries) {
          entries.forEach(function(entry) {
            if (entry.isIntersecting) {
              entry.target.style.opacity = '1';
              entry.target.style.transform = 'translateY(0)';
            }
          });
        }, {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px'
        });
        
        // Observe all groups
        document.querySelectorAll('.standings-group').forEach(function(group) {
          observer.observe(group);
        });
      }
      
      // Add hover effects
      var rows = document.querySelectorAll('.standings-table tbody tr');
      rows.forEach(function(row) {
        row.addEventListener('mouseenter', function() {
          this.style.transition = 'all 0.3s ease';
        });
      });
      
      // Smooth scroll to top when filter changes
      window.addEventListener('load', function() {
        if (window.location.search.includes('sport_id')) {
          window.scrollTo({ top: 0, behavior: 'smooth' });
        }
      });
    })();