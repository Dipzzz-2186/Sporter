extends layout/main

block content
  style.
    /* Hero Section - Mobile Optimized */
    .sporter-hero {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
      position: relative;
      overflow: hidden;
      padding: 2.5rem 0 2rem;
      animation: fadeIn 0.8s ease-out;
      margin-bottom: 1.5rem;
    }
    
    @media (min-width: 768px) {
      .sporter-hero {
        padding: 4rem 0 3.5rem;
        margin-bottom: 2rem;
      }
    }
    
    @media (min-width: 992px) {
      .sporter-hero {
        padding: 6rem 0 5rem;
      }
    }
    
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .sporter-hero::before,
    .sporter-hero::after {
      content: '';
      position: absolute;
      border-radius: 50%;
      animation: float 8s ease-in-out infinite;
    }
    
    .sporter-hero::before {
      top: -30%;
      right: -25%;
      width: 300px;
      height: 300px;
      background: radial-gradient(circle, rgba(0, 149, 255, 0.12) 0%, transparent 70%);
    }
    
    .sporter-hero::after {
      bottom: -20%;
      left: -15%;
      width: 200px;
      height: 200px;
      background: radial-gradient(circle, rgba(52, 199, 255, 0.08) 0%, transparent 70%);
      animation: float 10s ease-in-out infinite reverse;
    }
    
    @media (min-width: 768px) {
      .sporter-hero::before {
        top: -40%;
        right: -15%;
        width: 500px;
        height: 500px;
      }
      
      .sporter-hero::after {
        bottom: -30%;
        left: -8%;
        width: 400px;
        height: 400px;
      }
    }
    
    @keyframes float {
      0%, 100% { transform: translate(0, 0) scale(1) rotate(0deg); }
      33% { transform: translate(20px, -15px) scale(1.05) rotate(2deg); }
      66% { transform: translate(-15px, 10px) scale(1.02) rotate(-1deg); }
    }
    
    .hero-content {
      position: relative;
      z-index: 2;
      animation: slideInLeft 0.8s ease-out;
      text-align: center;
    }
    
    @media (min-width: 768px) {
      .hero-content {
        text-align: left;
      }
    }
    
    @keyframes slideInLeft {
      from { opacity: 0; transform: translateX(-30px); }
      to { opacity: 1; transform: translateX(0); }
    }
    
    .hero-badge {
      background: rgba(0, 149, 255, 0.15) !important;
      color: #0095FF !important;
      border: 2px solid rgba(0, 149, 255, 0.3);
      padding: 0.5rem 1rem;
      font-size: 0.85rem;
      font-weight: 600;
      border-radius: 20px;
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
      backdrop-filter: blur(10px);
      animation: pulse 2s infinite;
      margin-bottom: 1.5rem;
    }
    
    @media (min-width: 768px) {
      .hero-badge {
        padding: 0.6rem 1.5rem;
        font-size: 0.95rem;
        margin-bottom: 2rem;
      }
    }
    
    @keyframes pulse {
      0%, 100% { 
        box-shadow: 0 0 0 0 rgba(0, 149, 255, 0.4); 
      }
      50% { 
        box-shadow: 0 0 0 6px rgba(0, 149, 255, 0); 
      }
    }
    
    .sporter-hero h1 {
      color: white;
      font-size: 1.8rem;
      line-height: 1.15;
      margin: 1rem 0;
      font-weight: 800;
      animation: fadeInUp 0.8s ease-out 0.2s backwards;
    }
    
    @media (min-width: 576px) {
      .sporter-hero h1 {
        font-size: 2.2rem;
      }
    }
    
    @media (min-width: 768px) {
      .sporter-hero h1 {
        font-size: 2.6rem;
        margin: 1.5rem 0;
      }
    }
    
    @media (min-width: 992px) {
      .sporter-hero h1 {
        font-size: 3.2rem;
      }
    }
    
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .sporter-hero .text-danger {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      display: inline-block;
      position: relative;
    }
    
    .sporter-hero .lead {
      color: rgba(255, 255, 255, 0.85) !important;
      font-size: 1rem;
      line-height: 1.6;
      margin-bottom: 2rem;
      animation: fadeInUp 0.8s ease-out 0.4s backwards;
      max-width: 100%;
      padding: 0 0.5rem;
    }
    
    @media (min-width: 768px) {
      .sporter-hero .lead {
        font-size: 1.1rem;
        line-height: 1.8;
        max-width: 90%;
        padding: 0;
      }
    }
    
    .hero-buttons {
      animation: fadeInUp 0.8s ease-out 0.6s backwards;
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
      align-items: stretch;
      margin-bottom: 2rem;
    }
    
    @media (min-width: 576px) {
      .hero-buttons {
        flex-direction: row;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
      }
    }
    
    @media (min-width: 768px) {
      .hero-buttons {
        justify-content: flex-start;
      }
    }
    
    .sporter-hero .btn {
      border-radius: 12px;
      padding: 0.85rem 1.5rem;
      font-weight: 600;
      font-size: 0.95rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      width: 100%;
      white-space: nowrap;
    }
    
    @media (min-width: 576px) {
      .sporter-hero .btn {
        width: auto;
      }
    }
    
    .sporter-hero .btn-danger {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      border: none;
      box-shadow: 0 6px 20px rgba(0, 149, 255, 0.4);
    }
    
    .sporter-hero .btn-outline-danger {
      background: rgba(255, 255, 255, 0.08);
      border: 2px solid rgba(255, 255, 255, 0.25);
      color: white;
      backdrop-filter: blur(10px);
    }
    
    .sporter-hero-illustration {
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.08) 0%, rgba(255, 255, 255, 0.03) 100%);
      border-radius: 20px;
      padding: 2rem 1.5rem;
      backdrop-filter: blur(20px);
      border: 2px solid rgba(255, 255, 255, 0.12);
      position: relative;
      z-index: 2;
      animation: fadeInScale 0.8s ease-out 0.4s backwards;
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
      height: auto;
      text-align: center;
    }
    
    @media (min-width: 768px) {
      .sporter-hero-illustration {
        padding: 2.5rem 2rem;
        border-radius: 25px;
      }
    }
    
    @keyframes fadeInScale {
      from { opacity: 0; transform: scale(0.95) translateY(20px); }
      to { opacity: 1; transform: scale(1) translateY(0); }
    }
    
    .sporter-hero-illustration i {
      font-size: 4rem !important;
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      animation: bounce 3s infinite;
      margin-bottom: 1rem;
    }
    
    @media (min-width: 768px) {
      .sporter-hero-illustration i {
        font-size: 6rem !important;
        margin-bottom: 1.5rem;
      }
    }
    
    @keyframes bounce {
      0%, 100% { transform: translateY(0) scale(1); }
      50% { transform: translateY(-10px) scale(1.05); }
    }
    
    .sporter-hero-illustration p {
      color: rgba(255, 255, 255, 0.7);
      font-size: 0.95rem;
      text-align: center;
      margin: 0;
      line-height: 1.5;
    }
    
    @media (min-width: 768px) {
      .sporter-hero-illustration p {
        font-size: 1.05rem;
        line-height: 1.6;
      }
    }
    
    /* Stats Section - Mobile Optimized */
    .stats-section {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
      padding: 2.5rem 0;
      position: relative;
      overflow: hidden;
    }
    
    @media (min-width: 768px) {
      .stats-section {
        padding: 3rem 0;
      }
    }
    
    .stat-item {
      text-align: center;
      animation: fadeInUp 0.6s ease-out backwards;
      position: relative;
      z-index: 2;
      margin-bottom: 2rem;
    }
    
    .stat-icon {
      width: 60px;
      height: 60px;
      background: rgba(0, 149, 255, 0.15);
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1rem;
      border: 2px solid rgba(0, 149, 255, 0.3);
    }
    
    @media (min-width: 768px) {
      .stat-icon {
        width: 70px;
        height: 70px;
        border-radius: 20px;
        margin-bottom: 1.5rem;
      }
    }
    
    .stat-icon i {
      font-size: 1.8rem;
      color: #0095FF;
    }
    
    @media (min-width: 768px) {
      .stat-icon i {
        font-size: 2.2rem;
      }
    }
    
    .stat-number {
      font-size: 2rem;
      font-weight: 800;
      color: white;
      margin-bottom: 0.25rem;
      line-height: 1;
      font-family: 'Bebas Neue', cursive;
      letter-spacing: 1px;
    }
    
    @media (min-width: 768px) {
      .stat-number {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
      }
    }
    
    .stat-label {
      color: rgba(255, 255, 255, 0.8);
      font-size: 0.9rem;
      font-weight: 500;
    }
    
    /* Feature Section - Mobile Optimized */
    #features {
      background: linear-gradient(135deg, #f8fafc 0%, #edf2f7 100%);
      padding: 3rem 0;
      position: relative;
    }
    
    @media (min-width: 768px) {
      #features {
        padding: 4rem 0;
      }
    }
    
    .section-title {
      animation: fadeInUp 0.6s ease-out;
      text-align: center;
      margin-bottom: 2.5rem;
      padding: 0 1rem;
    }
    
    @media (min-width: 768px) {
      .section-title {
        margin-bottom: 4rem;
        padding: 0;
      }
    }
    
    .section-title h2 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2rem;
      color: #0B1F3F;
      letter-spacing: 1px;
      margin-bottom: 0.75rem;
      position: relative;
      display: inline-block;
    }
    
    @media (min-width: 768px) {
      .section-title h2 {
        font-size: 2.8rem;
        letter-spacing: 1.5px;
      }
    }
    
    .section-title p {
      color: #5a6c7d;
      font-size: 1rem;
      max-width: 100%;
      margin: 0 auto;
      line-height: 1.6;
    }
    
    @media (min-width: 768px) {
      .section-title p {
        font-size: 1.1rem;
        max-width: 700px;
        line-height: 1.7;
      }
    }
    
    .sporter-feature-card {
      border-radius: 18px;
      transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
      height: 100%;
      background: white;
      border: 2px solid #e8edf2;
      animation: fadeInUp 0.6s ease-out backwards;
      position: relative;
      overflow: hidden;
      margin-bottom: 1.5rem;
    }
    
    @media (min-width: 768px) {
      .sporter-feature-card {
        border-radius: 22px;
        margin-bottom: 0;
      }
    }
    
    .sporter-feature-card .card-body {
      padding: 2rem 1.5rem;
      text-align: center;
      position: relative;
      z-index: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      height: 100%;
    }
    
    @media (min-width: 768px) {
      .sporter-feature-card .card-body {
        padding: 2.5rem 2rem;
      }
    }
    
    .feature-icon-wrapper {
      width: 70px;
      height: 70px;
      background: linear-gradient(135deg, #f0f8ff 0%, #e0f2ff 100%);
      border-radius: 18px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1.5rem;
      transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
      border: 2px solid #d6edff;
    }
    
    @media (min-width: 768px) {
      .feature-icon-wrapper {
        width: 90px;
        height: 90px;
        border-radius: 22px;
        margin-bottom: 2rem;
      }
    }
    
    .feature-icon-wrapper i {
      font-size: 2rem;
      color: #0095FF;
      transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    }
    
    @media (min-width: 768px) {
      .feature-icon-wrapper i {
        font-size: 2.8rem;
      }
    }
    
    .sporter-feature-card h5 {
      color: #0B1F3F;
      font-size: 1.2rem;
      margin-bottom: 1rem;
      font-weight: 700;
      min-height: 2.8rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    @media (min-width: 768px) {
      .sporter-feature-card h5 {
        font-size: 1.4rem;
        min-height: 3.5rem;
        margin-bottom: 1.2rem;
      }
    }
    
    .sporter-feature-card p {
      color: #5a6c7d;
      line-height: 1.5;
      font-size: 0.9rem;
      margin: 0;
      flex-grow: 1;
    }
    
    @media (min-width: 768px) {
      .sporter-feature-card p {
        font-size: 0.98rem;
        line-height: 1.7;
      }
    }
    
    /* Event Section - Mobile Optimized */
    .events-section {
      padding: 3rem 0;
      background: white;
      position: relative;
    }
    
    @media (min-width: 768px) {
      .events-section {
        padding: 4rem 0;
      }
    }
    
    .section-header {
      margin-bottom: 2.5rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
      animation: fadeInUp 0.6s ease-out;
      padding: 0 1rem;
    }
    
    @media (min-width: 768px) {
      .section-header {
        flex-direction: row;
        justify-content: space-between;
        align-items: flex-end;
        gap: 2rem;
        margin-bottom: 4rem;
        padding: 0;
      }
    }
    
    .section-header h2 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2rem;
      color: #0B1F3F;
      letter-spacing: 1px;
      margin-bottom: 0.5rem;
      position: relative;
      padding-bottom: 0.75rem;
    }
    
    @media (min-width: 768px) {
      .section-header h2 {
        font-size: 2.8rem;
        letter-spacing: 1.5px;
        padding-bottom: 1rem;
      }
    }
    
    .section-header p {
      color: #5a6c7d;
      font-size: 1rem;
      margin: 0;
      max-width: 100%;
    }
    
    @media (min-width: 768px) {
      .section-header p {
        font-size: 1.1rem;
        max-width: 600px;
      }
    }
    
    .section-header .btn {
      white-space: nowrap;
      padding: 0.75rem 1.5rem;
      border-radius: 12px;
      font-weight: 600;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      border: 2px solid #e8edf2;
      color: #5a6c7d;
      align-self: flex-start;
      width: 100%;
    }
    
    @media (min-width: 576px) {
      .section-header .btn {
        width: auto;
      }
    }
    
    @media (min-width: 768px) {
      .section-header .btn {
        align-self: auto;
      }
    }
    
    /* Event Card Styling - Tombol Saja */
    .sporter-event-card {
      border-radius: 18px;
      transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
      border: 2px solid #e8edf2;
      overflow: hidden;
      position: relative;
      animation: fadeInUp 0.6s ease-out backwards;
      background: white;
      height: 100%;
      display: flex;
      flex-direction: column;
      margin-bottom: 1.5rem;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    }
    
    @media (min-width: 768px) {
      .sporter-event-card {
        border-radius: 22px;
        margin-bottom: 0;
      }
    }
    
    .sporter-event-card:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow: 0 15px 35px rgba(0, 149, 255, 0.15);
      border-color: #0095FF;
    }
    
    @media (max-width: 768px) {
      .sporter-event-card:hover {
        transform: none;
      }
    }
    
    .sporter-event-card .card-body {
      padding: 1.5rem;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
    }
    
    @media (min-width: 768px) {
      .sporter-event-card .card-body {
        padding: 1.8rem;
      }
    }
    
    /* Judul event */
    .event-title {
      color: #0B1F3F;
      font-weight: 700;
      font-size: 1.2rem;
      line-height: 1.3;
      margin-bottom: 1rem;
      min-height: 2.8rem;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    @media (min-width: 768px) {
      .event-title {
        font-size: 1.3rem;
        min-height: 3.2rem;
      }
    }
    
    /* Badge 67vent */
    .event-type-badge {
      margin-bottom: 1rem;
    }
    
    .event-type-badge .badge {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%) !important;
      border: none;
      padding: 0.5rem 1rem;
      font-size: 0.85rem;
      font-weight: 600;
    }
    
    .event-type-badge .badge i {
      font-size: 0.9rem;
    }
    
    /* Event Description */
    .event-description {
      color: #5a6c7d;
      font-size: 0.9rem;
      line-height: 1.5;
      margin-bottom: 1.5rem;
      flex-grow: 1;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    @media (min-width: 768px) {
      .event-description {
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 2rem;
      }
    }
    
    /* Tombol khusus untuk desain gambar */
    .event-actions {
      margin-top: auto;
    }
    
    .event-actions .row {
      width: 100%;
      margin: 0;
    }
    
    .event-actions .btn {
      border-radius: 8px;
      font-weight: 600;
      font-size: 0.9rem;
      padding: 0.7rem 0.5rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.4rem;
      width: 100%;
      white-space: nowrap;
      height: 42px;
      border-width: 2px;
    }
    
    @media (min-width: 768px) {
      .event-actions .btn {
        padding: 0.7rem 1rem;
        height: 44px;
      }
    }
    
    /* Tombol Detail - Outline */
    .event-actions .btn-outline-danger {
      border-color: #e8edf2;
      color: #5a6c7d;
      background: transparent;
    }
    
    .event-actions .btn-outline-danger:hover {
      background: linear-gradient(135deg, #f8f9fa 0%, #f0f7ff 100%);
      border-color: #0095FF;
      color: #0095FF;
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(0, 149, 255, 0.1);
    }
    
    /* Tombol Tiket - Solid */
    .event-actions .btn-danger {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      border: none;
      box-shadow: 0 4px 15px rgba(0, 149, 255, 0.3);
      color: white;
    }
    
    .event-actions .btn-danger:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(0, 149, 255, 0.4);
    }
    
    /* Empty State - Mobile Optimized */
    .empty-state {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border: 2px dashed #d0d0d0;
      border-radius: 20px;
      padding: 3rem 1.5rem;
      text-align: center;
      animation: fadeInUp 0.8s ease-out;
      position: relative;
      overflow: hidden;
      margin: 0 1rem;
    }
    
    @media (min-width: 768px) {
      .empty-state {
        padding: 5rem 3rem;
        border-radius: 25px;
        margin: 0;
      }
    }
    
    .empty-state-icon {
      width: 90px;
      height: 90px;
      background: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      animation: float 4s ease-in-out infinite;
      position: relative;
      z-index: 1;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }
    
    @media (min-width: 768px) {
      .empty-state-icon {
        width: 120px;
        height: 120px;
        margin-bottom: 2rem;
      }
    }
    
    .empty-state-icon i {
      font-size: 2.5rem;
      background: linear-gradient(135deg, #adb5bd 0%, #868e96 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    @media (min-width: 768px) {
      .empty-state-icon i {
        font-size: 3.5rem;
      }
    }
    
    .empty-state h3 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2rem;
      color: #0B1F3F;
      letter-spacing: 1px;
      margin-bottom: 1rem;
      position: relative;
      z-index: 1;
    }
    
    @media (min-width: 768px) {
      .empty-state h3 {
        font-size: 2.5rem;
        letter-spacing: 1.2px;
      }
    }
    
    .empty-state p {
      color: #5a6c7d;
      font-size: 1rem;
      margin: 0 auto 2rem;
      max-width: 100%;
