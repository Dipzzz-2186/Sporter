  //- Mobile-Friendly JavaScript
  script.
    (function() {
      'use strict';
      
      // Detect touch device
      const isTouchDevice = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
      
      // Smooth scroll for anchor links (touch-friendly)
      document.querySelectorAll('a[href^="#"]').forEach(function(anchor) {
        anchor.addEventListener('click', function(e) {
          var href = this.getAttribute('href');
          if (href !== '#' && href !== '#!') {
            e.preventDefault();
            var target = document.querySelector(href);
            if (target) {
              var offset = 60; // Smaller offset for mobile
              if (window.innerWidth >= 768) {
                offset = 80;
              }
              
              var targetPosition = target.getBoundingClientRect().top + window.pageYOffset - offset;
              
              window.scrollTo({
                top: targetPosition,
                behavior: 'smooth'
              });
              
              // Add focus for accessibility
              if (target.hasAttribute('tabindex')) {
                target.focus();
              }
            }
          }
        });
      });
      
      // Touch-friendly card interactions
      if (isTouchDevice) {
        const cards = document.querySelectorAll('.sporter-feature-card, .sporter-event-card');
        
        cards.forEach(function(card) {
          // Remove hover effects on touch devices
          card.classList.add('touch-device');
          
          // Add active state on touch
          card.addEventListener('touchstart', function() {
            this.classList.add('active');
          }, { passive: true });
          
          card.addEventListener('touchend', function() {
            this.classList.remove('active');
          }, { passive: true });
          
          card.addEventListener('touchcancel', function() {
            this.classList.remove('active');
          }, { passive: true });
        });
        
        // Better button feedback on mobile
        const buttons = document.querySelectorAll('.btn');
        buttons.forEach(function(btn) {
          btn.addEventListener('touchstart', function() {
            this.classList.add('touch-active');
          }, { passive: true });
          
          btn.addEventListener('touchend', function() {
            setTimeout(() => {
              this.classList.remove('touch-active');
            }, 150);
          }, { passive: true });
        });
      }
      
      // Intersection Observer with mobile optimizations
      if ('IntersectionObserver' in window) {
        var observerOptions = {
          threshold: 0.05, // Lower threshold for mobile
          rootMargin: '50px 0px' // Load slightly earlier
        };
        
        var cardObserver = new IntersectionObserver(function(entries) {
          entries.forEach(function(entry) {
            if (entry.isIntersecting) {
              entry.target.style.opacity = '1';
              entry.target.style.transform = 'translateY(0) scale(1)';
            }
          });
        }, observerOptions);
        
        var statObserver = new IntersectionObserver(function(entries) {
          entries.forEach(function(entry) {
            if (entry.isIntersecting) {
              var statNumber = entry.target.querySelector('.stat-number');
              if (statNumber && !statNumber.classList.contains('animated')) {
                animateCounter(statNumber);
                statNumber.classList.add('animated');
              }
            }
          });
        }, { threshold: 0.3 }); // Lower threshold for stats on mobile
        
        // Observe all cards and stats
        document.querySelectorAll('.sporter-feature-card, .sporter-event-card').forEach(function(card) {
          card.style.opacity = '0';
          card.style.transform = 'translateY(20px) scale(0.98)';
          card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
          cardObserver.observe(card);
        });
        
        document.querySelectorAll('.stat-item').forEach(function(stat) {
          statObserver.observe(stat);
        });
      }
      
      // Counter animation for stats (optimized for mobile)
      function animateCounter(element) {
        var finalText = element.textContent;
        var finalValue = parseInt(finalText.replace('+', '')) || 0;
        var duration = 1500; // Faster on mobile
        if (window.innerWidth < 768) {
          duration = 1000;
        }
        
        var startValue = 0;
        var startTime = null;
        
        function animate(currentTime) {
          if (!startTime) startTime = currentTime;
          var progress = currentTime - startTime;
          var percentage = Math.min(progress / duration, 1);
          
          // Easing function for smoother animation
          var easeOutQuad = function(t) {
            return t * (2 - t);
          };
          
          var currentValue = Math.floor(easeOutQuad(percentage) * finalValue);
          element.textContent = currentValue + (finalText.includes('+') ? '+' : '');
          
          if (percentage < 1) {
            requestAnimationFrame(animate);
          }
        }
        
        requestAnimationFrame(animate);
      }
      
      // Mobile menu improvements (if any menu exists)
      const navbarToggler = document.querySelector('.navbar-toggler');
      if (navbarToggler) {
        navbarToggler.addEventListener('click', function() {
          document.body.classList.toggle('navbar-open');
        });
      }
      
      // Prevent zoom on double tap (iOS)
      let lastTouchEnd = 0;
      document.addEventListener('touchend', function(event) {
        const now = (new Date()).getTime();
        if (now - lastTouchEnd <= 300) {
          event.preventDefault();
        }
        lastTouchEnd = now;
      }, false);
      
      // Handle viewport changes
      function handleResize() {
        const heroContent = document.querySelector('.hero-content');
        const heroIllustration = document.querySelector('.sporter-hero-illustration');
        
