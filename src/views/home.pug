extends layout/main

block content
  style.
    /* Hero Section Improvements */
    .sporter-hero {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
      position: relative;
      overflow: hidden;
      padding: 6rem 0 5rem;
      animation: fadeIn 0.8s ease-out;
      margin-bottom: 2rem;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .sporter-hero::before {
      content: '';
      position: absolute;
      top: -40%;
      right: -15%;
      width: 700px;
      height: 700px;
      background: radial-gradient(circle, rgba(0, 149, 255, 0.12) 0%, transparent 70%);
      border-radius: 50%;
      animation: float 8s ease-in-out infinite;
    }
    
    .sporter-hero::after {
      content: '';
      position: absolute;
      bottom: -30%;
      left: -8%;
      width: 500px;
      height: 500px;
      background: radial-gradient(circle, rgba(52, 199, 255, 0.08) 0%, transparent 70%);
      border-radius: 50%;
      animation: float 10s ease-in-out infinite reverse;
    }
    
    @keyframes float {
      0%, 100% { transform: translate(0, 0) scale(1) rotate(0deg); }
      33% { transform: translate(30px, -20px) scale(1.05) rotate(2deg); }
      66% { transform: translate(-20px, 15px) scale(1.02) rotate(-1deg); }
    }
    
    .hero-content {
      position: relative;
      z-index: 2;
      animation: slideInLeft 0.8s ease-out;
      padding-right: 1rem;
    }
    
    @keyframes slideInLeft {
      from { opacity: 0; transform: translateX(-40px); }
      to { opacity: 1; transform: translateX(0); }
    }
    
    .hero-badge {
      background: rgba(0, 149, 255, 0.15) !important;
      color: #0095FF !important;
      border: 2px solid rgba(0, 149, 255, 0.3);
      padding: 0.6rem 1.5rem;
      font-size: 0.95rem;
      font-weight: 600;
      backdrop-filter: blur(10px);
      animation: pulse 2s infinite;
      border-radius: 25px;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    @keyframes pulse {
      0%, 100% { 
        box-shadow: 0 0 0 0 rgba(0, 149, 255, 0.4), 
                    0 4px 12px rgba(0, 149, 255, 0.1); 
      }
      50% { 
        box-shadow: 0 0 0 8px rgba(0, 149, 255, 0), 
                    0 6px 16px rgba(0, 149, 255, 0.15); 
      }
    }
    
    .sporter-hero h1 {
      color: white;
      font-size: 3.2rem;
      line-height: 1.15;
      margin: 1.5rem 0;
      font-weight: 800;
      animation: fadeInUp 0.8s ease-out 0.2s backwards;
    }
    
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(25px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .sporter-hero .text-danger {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      display: inline-block;
      position: relative;
    }
    
    .sporter-hero .text-danger::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: 0;
      width: 100%;
      height: 2px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
      border-radius: 2px;
    }
    
    .sporter-hero .lead {
      color: rgba(255, 255, 255, 0.85) !important;
      font-size: 1.15rem;
      line-height: 1.8;
      margin-bottom: 2rem;
      animation: fadeInUp 0.8s ease-out 0.4s backwards;
      max-width: 90%;
    }
    
    .hero-buttons {
      animation: fadeInUp 0.8s ease-out 0.6s backwards;
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      align-items: center;
    }
    
    .sporter-hero .btn {
      border-radius: 14px;
      padding: 0.95rem 2rem;
      font-weight: 600;
      font-size: 1rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      position: relative;
      overflow: hidden;
    }
    
    .sporter-hero .btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, transparent 100%);
      transform: translateX(-100%);
      transition: transform 0.6s ease;
    }
    
    .sporter-hero .btn:hover::before {
      transform: translateX(100%);
    }
    
    .sporter-hero .btn-danger {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      border: none;
      box-shadow: 0 8px 25px rgba(0, 149, 255, 0.4);
    }
    
    .sporter-hero .btn-danger:hover {
      transform: translateY(-5px) scale(1.05);
      box-shadow: 0 15px 35px rgba(0, 149, 255, 0.5);
    }
    
    .sporter-hero .btn-outline-danger {
      background: rgba(255, 255, 255, 0.08);
      border: 2px solid rgba(255, 255, 255, 0.25);
      color: white;
      backdrop-filter: blur(10px);
    }
    
    .sporter-hero .btn-outline-danger:hover {
      background: rgba(255, 255, 255, 0.15);
      border-color: rgba(255, 255, 255, 0.4);
      color: white;
      transform: translateY(-5px) scale(1.05);
    }
    
    /* Hero Illustration Improvements */
    .sporter-hero-illustration {
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.08) 0%, rgba(255, 255, 255, 0.03) 100%);
      border-radius: 30px;
      padding: 3rem 2rem;
      backdrop-filter: blur(20px);
      border: 2px solid rgba(255, 255, 255, 0.12);
      position: relative;
      z-index: 2;
      animation: fadeInScale 0.8s ease-out 0.4s backwards;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      overflow: hidden;
    }
    
    @keyframes fadeInScale {
      from { opacity: 0; transform: scale(0.9) translateY(20px); }
      to { opacity: 1; transform: scale(1) translateY(0); }
    }
    
    .sporter-hero-illustration::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
      animation: slideRight 3s ease-in-out infinite;
    }
    
    @keyframes slideRight {
      0%, 100% { transform: translateX(-100%); }
      50% { transform: translateX(100%); }
    }
    
    .sporter-hero-illustration i {
      font-size: 8rem !important;
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      animation: bounce 3s infinite;
      margin-bottom: 1.5rem;
      filter: drop-shadow(0 10px 20px rgba(0, 149, 255, 0.3));
    }
    
    @keyframes bounce {
      0%, 100% { transform: translateY(0) scale(1); }
      25% { transform: translateY(-15px) scale(1.05); }
      50% { transform: translateY(5px) scale(0.98); }
      75% { transform: translateY(-8px) scale(1.02); }
    }
    
    .sporter-hero-illustration p {
      color: rgba(255, 255, 255, 0.7);
      font-size: 1.05rem;
      text-align: center;
      max-width: 80%;
      margin: 0 auto;
      line-height: 1.6;
    }
    
    /* Feature Section Improvements */
    #features {
      background: linear-gradient(135deg, #f8fafc 0%, #edf2f7 100%);
      padding: 5rem 0;
      position: relative;
    }
    
    #features::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 2px;
      background: linear-gradient(90deg, transparent, #0095FF, transparent);
    }
    
    .section-title {
      animation: fadeInUp 0.6s ease-out;
      text-align: center;
      margin-bottom: 4rem;
    }
    
    .section-title h2 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.8rem;
      color: #0B1F3F;
      letter-spacing: 1.5px;
      margin-bottom: 0.75rem;
      position: relative;
      display: inline-block;
    }
    
    .section-title h2::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 60px;
      height: 3px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
      border-radius: 3px;
    }
    
    .section-title .text-danger {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      position: relative;
    }
    
    .section-title p {
      color: #5a6c7d;
      font-size: 1.1rem;
      max-width: 700px;
      margin: 0 auto;
      line-height: 1.7;
    }
    
    .sporter-feature-card {
      border-radius: 22px;
      transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
      height: 100%;
      background: white;
      border: 2px solid #e8edf2;
      animation: fadeInUp 0.6s ease-out backwards;
      position: relative;
      overflow: hidden;
    }
    
    .sporter-feature-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 100%;
      background: linear-gradient(135deg, rgba(0, 149, 255, 0.03) 0%, transparent 100%);
      z-index: 0;
    }
    
    .sporter-feature-card:hover {
      transform: translateY(-20px) scale(1.03);
      box-shadow: 0 25px 50px rgba(0, 149, 255, 0.2);
      border-color: #0095FF;
    }
    
    .sporter-feature-card .card-body {
      padding: 2.8rem 2rem;
      text-align: center;
      position: relative;
      z-index: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      height: 100%;
    }
    
    .feature-icon-wrapper {
      width: 90px;
      height: 90px;
      background: linear-gradient(135deg, #f0f8ff 0%, #e0f2ff 100%);
      border-radius: 22px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 2rem;
      transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
      border: 2px solid #d6edff;
      position: relative;
      overflow: hidden;
    }
    
    .feature-icon-wrapper::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.4) 0%, transparent 100%);
      transform: translateX(-100%);
      transition: transform 0.6s ease;
    }
    
    .sporter-feature-card:hover .feature-icon-wrapper::before {
      transform: translateX(100%);
    }
    
    .sporter-feature-card:hover .feature-icon-wrapper {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      transform: rotate(12deg) scale(1.15);
      border-color: #0095FF;
      box-shadow: 0 10px 25px rgba(0, 149, 255, 0.3);
    }
    
    .feature-icon-wrapper i {
      font-size: 2.8rem;
      color: #0095FF;
      transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
      position: relative;
      z-index: 1;
    }
    
    .sporter-feature-card:hover .feature-icon-wrapper i {
      color: white;
      transform: scale(1.1);
    }
    
    .sporter-feature-card h5 {
      color: #0B1F3F;
      font-size: 1.4rem;
      margin-bottom: 1.2rem;
      font-weight: 700;
      min-height: 3.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .sporter-feature-card p {
      color: #5a6c7d;
      line-height: 1.7;
      font-size: 0.98rem;
      margin: 0;
      flex-grow: 1;
    }
    
    /* Event Section Improvements */
    .events-section {
      padding: 5rem 0;
      background: white;
      position: relative;
    }
    
    .events-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 1px;
      background: linear-gradient(90deg, transparent, rgba(0, 149, 255, 0.2), transparent);
    }
    
    .section-header {
      margin-bottom: 4rem;
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      flex-wrap: wrap;
      gap: 2rem;
      animation: fadeInUp 0.6s ease-out;
    }
    
    .section-header h2 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.8rem;
      color: #0B1F3F;
      letter-spacing: 1.5px;
      margin-bottom: 0.5rem;
      position: relative;
      padding-bottom: 1rem;
    }
    
    .section-header h2::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 80px;
      height: 3px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
      border-radius: 3px;
    }
    
    .section-header p {
      color: #5a6c7d;
      font-size: 1.1rem;
      margin: 0;
      max-width: 600px;
    }
    
    .section-header .btn {
      white-space: nowrap;
      padding: 0.8rem 2rem;
      border-radius: 12px;
      font-weight: 600;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      border: 2px solid #e8edf2;
      color: #5a6c7d;
    }
    
    .section-header .btn:hover {
      border-color: #0095FF;
      color: #0095FF;
      transform: translateY(-3px) scale(1.05);
      box-shadow: 0 8px 20px rgba(0, 149, 255, 0.15);
    }
    
    .sporter-event-card {
      border-radius: 22px;
      transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
      border: 2px solid #e8edf2;
      overflow: hidden;
      position: relative;
      animation: fadeInUp 0.6s ease-out backwards;
      background: white;
      height: 100%;
      display: flex;
      flex-direction: column;
    }
    
    .sporter-event-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 6px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
      transform: scaleX(0);
      transition: transform 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
      transform-origin: left;
    }
    
    .sporter-event-card:hover::before {
      transform: scaleX(1);
    }
    
    .sporter-event-card:hover {
      transform: translateY(-15px) scale(1.03);
      box-shadow: 0 25px 50px rgba(0, 149, 255, 0.15);
      border-color: #0095FF;
    }
    
    .sporter-event-card .card-body {
      padding: 2.5rem 2rem;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
    }
    
    .event-badge {
      background: rgba(0, 149, 255, 0.1) !important;
      color: #0095FF !important;
      padding: 0.6rem 1.2rem;
      border-radius: 25px;
      font-size: 0.9rem;
      font-weight: 600;
      border: 1px solid rgba(0, 149, 255, 0.2);
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      width: fit-content;
      margin-bottom: 1.5rem;
      backdrop-filter: blur(10px);
    }
    
    .sporter-event-card h5 {
      color: #0B1F3F;
      font-weight: 700;
      font-size: 1.35rem;
      line-height: 1.4;
      margin-bottom: 1.2rem;
      min-height: 4rem;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    .event-location {
      color: #5a6c7d;
      font-size: 0.95rem;
      display: flex;
      align-items: center;
      gap: 0.6rem;
      margin-bottom: 1rem;
    }
    
    .event-location i {
      color: #0095FF;
      font-size: 1.1rem;
      flex-shrink: 0;
    }
    
    .event-description {
      color: #5a6c7d;
      font-size: 0.95rem;
      line-height: 1.7;
      margin-bottom: 2rem;
      flex-grow: 1;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    .event-actions {
      display: flex;
      gap: 0.75rem;
      margin-top: auto;
    }
    
    .sporter-event-card .btn {
      border-radius: 12px;
      font-weight: 600;
      font-size: 0.95rem;
      padding: 0.7rem 1.4rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      flex: 1;
    }
    
    .sporter-event-card .btn-outline-danger {
      border: 2px solid #e8edf2;
      color: #5a6c7d;
    }
    
    .sporter-event-card .btn-outline-danger:hover {
      background: linear-gradient(135deg, #f8f9fa 0%, #f0f7ff 100%);
      border-color: #0095FF;
      color: #0095FF;
      transform: translateY(-3px);
      box-shadow: 0 5px 15px rgba(0, 149, 255, 0.1);
    }
    
    .sporter-event-card .btn-danger {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      border: none;
      box-shadow: 0 4px 15px rgba(0, 149, 255, 0.3);
    }
    
    .sporter-event-card .btn-danger:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(0, 149, 255, 0.4);
    }
    
    /* Empty State Improvements */
    .empty-state {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border: 2px dashed #d0d0d0;
      border-radius: 25px;
      padding: 5rem 3rem;
      text-align: center;
      animation: fadeInUp 0.8s ease-out;
      position: relative;
      overflow: hidden;
    }
    
    .empty-state::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.3) 50%, transparent 70%);
      animation: shimmer 3s infinite;
    }
    
    @keyframes shimmer {
      0% { transform: translateX(-100%); }
      100% { transform: translateX(100%); }
    }
    
    .empty-state-icon {
      width: 120px;
      height: 120px;
      background: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 2rem;
      animation: float 4s ease-in-out infinite;
      position: relative;
      z-index: 1;
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    }
    
    .empty-state-icon i {
      font-size: 3.5rem;
      background: linear-gradient(135deg, #adb5bd 0%, #868e96 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .empty-state h3 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.5rem;
      color: #0B1F3F;
      letter-spacing: 1.2px;
      margin-bottom: 1rem;
      position: relative;
      z-index: 1;
    }
    
    .empty-state p {
      color: #5a6c7d;
      font-size: 1.1rem;
      margin: 0 auto 2rem;
      max-width: 500px;
      line-height: 1.7;
      position: relative;
      z-index: 1;
    }
    
    /* Stats Counter Section */
    .stats-section {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
      padding: 4rem 0;
      position: relative;
      overflow: hidden;
    }
    
    .stats-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 2px;
      background: linear-gradient(90deg, transparent, #0095FF, transparent);
    }
    
    .stat-item {
      text-align: center;
      animation: fadeInUp 0.6s ease-out backwards;
      position: relative;
      z-index: 2;
    }
    
    .stat-icon {
      width: 70px;
      height: 70px;
      background: rgba(0, 149, 255, 0.15);
      border-radius: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      border: 2px solid rgba(0, 149, 255, 0.3);
    }
    
    .stat-icon i {
      font-size: 2.2rem;
      color: #0095FF;
    }
    
    .stat-number {
      font-size: 3rem;
      font-weight: 800;
      color: white;
      margin-bottom: 0.5rem;
      line-height: 1;
      font-family: 'Bebas Neue', cursive;
      letter-spacing: 1px;
    }
    
    .stat-label {
      color: rgba(255, 255, 255, 0.8);
      font-size: 1rem;
      font-weight: 500;
    }
    
    /* CTA Section */
    .cta-section {
      background: linear-gradient(135deg, #f8fafc 0%, #edf2f7 100%);
      padding: 5rem 0;
      text-align: center;
      position: relative;
    }
    
    .cta-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 2px;
      background: linear-gradient(90deg, transparent, rgba(0, 149, 255, 0.3), transparent);
    }
    
    .cta-title {
      font-family: 'Bebas Neue', cursive;
      font-size: 3rem;
      color: #0B1F3F;
      letter-spacing: 1.5px;
      margin-bottom: 1.5rem;
    }
    
    .cta-description {
      color: #5a6c7d;
      font-size: 1.1rem;
      max-width: 600px;
      margin: 0 auto 3rem;
      line-height: 1.7;
    }
    
    /* Responsive Improvements */
    @media (max-width: 1200px) {
      .sporter-hero h1 {
        font-size: 2.8rem;
      }
      
      .section-title h2,
      .section-header h2 {
        font-size: 2.5rem;
      }
    }
    
    @media (max-width: 991px) {
      .sporter-hero {
        padding: 4rem 0;
      }
      
      .sporter-hero h1 {
        font-size: 2.4rem;
      }
      
      .sporter-hero .lead {
        font-size: 1.05rem;
        max-width: 100%;
