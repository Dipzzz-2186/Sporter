  script.
    (function() {
      // Smooth scroll for anchor links
      document.querySelectorAll('a[href^="#"]').forEach(function(anchor) {
        anchor.addEventListener('click', function(e) {
          var href = this.getAttribute('href');
          if (href !== '#' && href !== '#!') {
            e.preventDefault();
            var target = document.querySelector(href);
            if (target) {
              var offset = 80;
              var targetPosition = target.getBoundingClientRect().top + window.pageYOffset - offset;
              
              window.scrollTo({
                top: targetPosition,
                behavior: 'smooth'
              });
            }
          }
        });
      });
      
      // Intersection Observer for animations
      if ('IntersectionObserver' in window) {
        var observerOptions = {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px'
        };
        
        var cardObserver = new IntersectionObserver(function(entries) {
          entries.forEach(function(entry) {
            if (entry.isIntersecting) {
              entry.target.style.opacity = '1';
              entry.target.style.transform = 'translateY(0) scale(1)';
            }
          });
        }, observerOptions);
        
        var statObserver = new IntersectionObserver(function(entries) {
          entries.forEach(function(entry) {
            if (entry.isIntersecting) {
              var statNumber = entry.target.querySelector('.stat-number');
              if (statNumber && !statNumber.classList.contains('animated')) {
                animateCounter(statNumber);
                statNumber.classList.add('animated');
              }
            }
          });
        }, { threshold: 0.5 });
        
        // Observe all cards and stats
        document.querySelectorAll('.sporter-feature-card, .sporter-event-card').forEach(function(card) {
          cardObserver.observe(card);
        });
        
        document.querySelectorAll('.stat-item').forEach(function(stat) {
          statObserver.observe(stat);
        });
      }
      
      // Counter animation for stats
      function animateCounter(element) {
        var finalValue = parseInt(element.textContent.replace('+', ''));
        var duration = 2000;
        var startValue = 0;
        var startTime = null;
        
        function animate(currentTime) {
          if (!startTime) startTime = currentTime;
          var progress = currentTime - startTime;
          var percentage = Math.min(progress / duration, 1);
          
          var currentValue = Math.floor(percentage * finalValue);
          element.textContent = currentValue + (element.textContent.includes('+') ? '+' : '');
          
          if (percentage < 1) {
            requestAnimationFrame(animate);
          }
        }
        
        requestAnimationFrame(animate);
      }
      
      // Add hover effects with sound (optional)
      var featureCards = document.querySelectorAll('.sporter-feature-card');
      var eventCards = document.querySelectorAll('.sporter-event-card');
      
      function addCardHoverEffect(cards) {
        cards.forEach(function(card) {
          card.addEventListener('mouseenter', function() {
            this.style.transition = 'all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1)';
            this.style.zIndex = '10';
          });
          
          card.addEventListener('mouseleave', function() {
            this.style.zIndex = '1';
          });
        });
      }
      
      addCardHoverEffect(featureCards);
      addCardHoverEffect(eventCards);
      
      // Parallax effect for hero
      window.addEventListener('scroll', function() {
        var scrolled = window.pageYOffset || document.documentElement.scrollTop;
        var hero = document.querySelector('.sporter-hero');
        var heroIllustration = document.querySelector('.sporter-hero-illustration');
        
        if (hero && scrolled < 800) {
          var parallaxValue = scrolled * 0.3;
          hero.style.transform = 'translateY(' + parallaxValue + 'px)';
          
          if (heroIllustration) {
            var illustrationValue = scrolled * 0.1;
            heroIllustration.style.transform = 'translateY(' + illustrationValue + 'px)';
          }
        }
      });
      
      // Initialize counters if they're already in view
      if ('IntersectionObserver' in window) {
        document.querySelectorAll('.stat-item').forEach(function(stat) {
          var rect = stat.getBoundingClientRect();
          if (rect.top < window.innerHeight && rect.bottom >= 0) {
            var statNumber = stat.querySelector('.stat-number');
            if (statNumber && !statNumber.classList.contains('animated')) {
              animateCounter(statNumber);
              statNumber.classList.add('animated');
            }
          }
        });
      }
    })();