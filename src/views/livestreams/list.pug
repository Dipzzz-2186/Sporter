  //- Custom JavaScript
  script.
    (function() {
      // Helper function untuk icon olahraga
      function getSportIcon(sportName) {
        const icons = {
          'Padel': 'bi-brightness-high-fill',
          'Bulu Tangkis': 'bi-brightness-alt-high-fill',
          'Golf': 'bi-flag-fill',
          'Run': 'bi-person-running',
          'Triathlon': 'bi-bicycle',
          'Tenis': 'bi-circle-half',
          'Renang': 'bi-water',
        };
        return icons[sportName] || 'bi-trophy-fill';
      }
      
      // Apply icons to existing badges
      document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.stream-sport-badge').forEach(badge => {
          const textEl = badge.querySelector('.stream-sport-text');
          const iconEl = badge.querySelector('i');

          if (!textEl || !iconEl) return;

          const sportName = textEl.textContent.trim();
          const iconClass = getSportIcon(sportName);

          iconEl.className = 'bi ' + iconClass;
        });
        
        // Intersection Observer for animations
        if ('IntersectionObserver' in window) {
          const observer = new IntersectionObserver(function(entries) {
            entries.forEach(function(entry) {
              if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
              }
            });
          }, {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
          });
          
          // Observe all cards
          document.querySelectorAll('.sporter-stream-card, .stats-card, .stream-detail-card').forEach(function(card) {
            card.style.opacity = '0';
            card.style.transform = 'translateY(30px)';
            card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            observer.observe(card);
          });
        }
        
        // Stream filtering system
        const filterButtons = document.querySelectorAll('.btn-stream-filter');
        const streamCards = document.querySelectorAll('.sporter-stream-card');
        const liveCountElement = document.getElementById('live-count');
        
        function updateStreamCount() {
          const visibleCards = document.querySelectorAll('.sporter-stream-card:not([style*="display: none"])');
          const liveCards = Array.from(visibleCards).filter(card => card.classList.contains('live-now'));
          
          if (liveCountElement) {
            const countSpan = liveCountElement.querySelector('span');
            if (countSpan) {
              countSpan.textContent = `${liveCards.length} Sedang Tayang`;
            }
          }
          
          // Update stats cards
          animateCounter('.stats-card:nth-child(1) .stats-value', liveCards.length);
          animateCounter('.stats-card:nth-child(2) .stats-value', visibleCards.length);
          animateCounter('.stats-card:nth-child(3) .stats-value', visibleCards.length * 1250);
          
          const sports = new Set();
          visibleCards.forEach(card => {
            const sportBadge = card.querySelector('.stream-sport-badge');
            if (sportBadge) {
              sports.add(sportBadge.textContent.trim());
            }
          });
          animateCounter('.stats-card:nth-child(4) .stats-value', Math.max(1, sports.size));
        }
        
        function animateCounter(selector, targetValue) {
          const element = document.querySelector(selector);
          if (!element) return;
          
          const currentValue = parseInt(element.textContent) || 0;
          const duration = 800;
          const steps = 40;
          const increment = (targetValue - currentValue) / steps;
          let currentStep = 0;
          
          const timer = setInterval(() => {
            currentStep++;
            const newValue = Math.floor(currentValue + (increment * currentStep));
            element.textContent = newValue;
            
            if (currentStep >= steps) {
              clearInterval(timer);
              element.textContent = targetValue;
            }
          }, duration / steps);
        }
        
        function applyFilter() {
          const activeButton = document.querySelector('.btn-stream-filter.active');
          const filter = activeButton ? activeButton.getAttribute('data-filter') : 'all';
          const sport = activeButton ? activeButton.getAttribute('data-sport') : null;
          
          streamCards.forEach(function(card) {
            const col = card.closest('.col-md-6.col-lg-4');
            const isLive = card.classList.contains('live-now');
            const sportBadge = card.querySelector('.stream-sport-badge');
            const sportName = sportBadge ? sportBadge.textContent.toLowerCase() : '';
            
            let visibleByStatus = true;
            let visibleBySport = true;
            
            // Filter by status
            if (filter === 'live') {
              visibleByStatus = isLive;
            } else if (filter === 'upcoming') {
              visibleByStatus = !isLive;
            }
            
            // Filter by sport
            if (sport === 'football') {
              visibleBySport = sportName.includes('sepak') || sportName.includes('bola') || 
                              sportName.includes('football') || sportName.includes('soccer');
            } else if (sport === 'basketball') {
              visibleBySport = sportName.includes('basket');
            } else if (sport === 'badminton') {
              visibleBySport = sportName.includes('bulu') || sportName.includes('badminton');
            } else if (sport === 'golf') {
              visibleBySport = sportName.includes('golf');
            } else if (sport === 'run') {
              visibleBySport = sportName.includes('run') || sportName.includes('run') || 
                              sportName.includes('marathon') || sportName.includes('sprint');
            } else if (sport === 'padel') {
              visibleBySport = sportName.includes('padel');
            } else if (sport === 'tennis') {
              visibleBySport = sportName.includes('tenis');
            } else if (sport === 'swimming') {
              visibleBySport = sportName.includes('renang') || sportName.includes('swimming');
            } else if (sport === 'triathlon') {
              visibleBySport = sportName.includes('triathlon') || sportName.includes('triatlon');
            }
            
            if (visibleByStatus && visibleBySport) {
              if (col) col.style.display = '';
              card.style.opacity = '1';
              card.style.transform = 'translateY(0)';
            } else {
              card.style.opacity = '0';
              card.style.transform = 'translateY(20px)';
              setTimeout(() => {
                if (col) col.style.display = 'none';
              }, 300);
            }
          });
          
          setTimeout(updateStreamCount, 350);
        }
        
        // Event listeners untuk filter
        filterButtons.forEach(function(button) {
          button.addEventListener('click', function() {
            filterButtons.forEach(function(btn) {
              btn.classList.remove('active');
            });
            this.classList.add('active');
            applyFilter();
          });
        });
        
        // Add smooth hover effects
        document.querySelectorAll('.btn-watch-stream').forEach(button => {
          button.addEventListener('mouseenter', function() {
            const icon = this.querySelector('i');
            if (icon) {
              icon.style.transform = 'scale(1.2)';
              icon.style.transition = 'transform 0.3s ease';
            }
          });
          
          button.addEventListener('mouseleave', function() {
            const icon = this.querySelector('i');
            if (icon) {
              icon.style.transform = 'scale(1)';
            }
          });
        });
        
        // Simulate real-time updates for live streams
        function simulateLiveUpdates() {
          const liveCards = document.querySelectorAll('.sporter-stream-card.live-now');
          liveCards.forEach(card => {
            const viewerElement = card.querySelector('.viewer-count-badge');
            if (viewerElement) {
              const current = parseInt(viewerElement.textContent) || 100;
              const change = Math.floor(Math.random() * 20) - 10;
              const newCount = Math.max(50, current + change);
              viewerElement.innerHTML = `<i class="bi bi-eye me-1"></i>${newCount}`;
            }
            
            // Update stats
            const statElements = card.querySelectorAll('.stream-stat-value');
            if (statElements.length >= 3) {
              // Viewers
              const viewers = parseInt(statElements[0].textContent) || 100;
              statElements[0].textContent = Math.max(50, viewers + Math.floor(Math.random() * 10) - 5);
              
              // Chat
              const chat = parseInt(statElements[1].textContent) || 50;
              statElements[1].textContent = Math.max(10, chat + Math.floor(Math.random() * 5) - 2);
              
              // Likes
              const likes = parseInt(statElements[2].textContent) || 10;
              statElements[2].textContent = Math.max(5, likes + Math.floor(Math.random() * 3) - 1);
            }
          });
          
          // Update featured stream stats
          const featuredStats = document.querySelectorAll('.stream-detail-value');
          if (featuredStats.length >= 3) {
            featuredStats[0].textContent = parseInt(featuredStats[0].textContent) + Math.floor(Math.random() * 50) - 25;
            featuredStats[1].textContent = parseInt(featuredStats[1].textContent) + Math.floor(Math.random() * 20) - 10;
            featuredStats[2].textContent = parseInt(featuredStats[2].textContent) + Math.floor(Math.random() * 10) - 5;
          }
        }
        
        // Start simulation if there are live streams
        if (document.querySelectorAll('.sporter-stream-card.live-now').length > 0) {
          setInterval(simulateLiveUpdates, 5000);
        }
        
        // Initialize dengan filter aktif
        applyFilter();
      });
    })();