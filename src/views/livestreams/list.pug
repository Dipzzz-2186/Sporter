extends ../layout/main

block content
  style.
    /* Global Animations */
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    @keyframes slideInLeft {
      from { opacity: 0; transform: translateX(-30px); }
      to { opacity: 1; transform: translateX(0); }
    }
    
    @keyframes pulseLive {
      0%, 100% { box-shadow: 0 0 0 0 rgba(255, 0, 0, 0.4); }
      50% { box-shadow: 0 0 0 8px rgba(255, 0, 0, 0); }
    }
    
    @keyframes blink {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.3; }
    }
    
    /* Hero Section - Layout diperbaiki */
    .livestream-hero {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
      position: relative;
      overflow: hidden;
      padding: 4.5rem 0 3rem;
      margin-bottom: 2.5rem;
    }
    
    .livestream-hero::before {
      content: '';
      position: absolute;
      top: -40%;
      right: -15%;
      width: 700px;
      height: 700px;
      background: radial-gradient(circle, rgba(0, 149, 255, 0.15) 0%, transparent 70%);
      border-radius: 50%;
      animation: float 6s ease-in-out infinite;
    }
    
    .livestream-hero::after {
      content: '';
      position: absolute;
      bottom: -30%;
      left: -5%;
      width: 500px;
      height: 500px;
      background: radial-gradient(circle, rgba(52, 199, 255, 0.1) 0%, transparent 70%);
      border-radius: 50%;
      animation: float 8s ease-in-out infinite reverse;
    }
    
    @keyframes float {
      0%, 100% { transform: translate(0, 0) scale(1); }
      50% { transform: translate(30px, -30px) scale(1.05); }
    }
    
    .livestream-hero-content {
      position: relative;
      z-index: 2;
    }
    
    .livestream-hero-badge {
      background: rgba(0, 149, 255, 0.15);
      color: #0095FF;
      border: 2px solid rgba(0, 149, 255, 0.3);
      padding: 0.75rem 1.5rem;
      border-radius: 50px;
      font-size: 0.95rem;
      font-weight: 600;
      backdrop-filter: blur(10px);
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 1.5rem;
      animation: pulseLive 2s infinite;
    }
    
    .livestream-hero h1 {
      color: white;
      font-size: 3.2rem;
      line-height: 1.2;
      margin-bottom: 1rem;
      font-weight: 800;
    }
    
    .livestream-hero .text-primary {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .livestream-hero .lead {
      color: rgba(255, 255, 255, 0.85);
      font-size: 1.1rem;
      line-height: 1.7;
      max-width: 600px;
    }
    
    /* Featured Stream - Layout lebih baik */
    .featured-stream-section {
      padding: 2rem 0 3rem;
      background: white;
      position: relative;
    }
    
    .section-header-main {
      margin-bottom: 2.5rem;
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      padding-bottom: 1rem;
      border-bottom: 2px solid #f0f0f0;
    }
    
    .section-title-main h3 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.4rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin: 0 0 0.25rem 0;
      line-height: 1;
    }
    
    .section-subtitle {
      color: #5a6c7d;
      font-size: 1.05rem;
      margin: 0;
    }
    
    .featured-live-indicator {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: rgba(220, 53, 69, 0.1);
      padding: 0.75rem 1.5rem;
      border-radius: 50px;
      color: #dc3545;
      font-weight: 700;
      font-size: 0.95rem;
      animation: pulseLive 2s infinite;
    }
    
    .live-dot {
      width: 12px;
      height: 12px;
      background: #dc3545;
      border-radius: 50%;
      animation: blink 1s infinite;
    }
    
    .featured-stream-card {
      background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
      border-radius: 25px;
      overflow: hidden;
      border: 2px solid #e8edf2;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    }
    
    .featured-stream-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 20px 40px rgba(0, 149, 255, 0.15);
      border-color: #0095FF;
    }
    
    .featured-stream-media {
      position: relative;
      height: 380px;
      overflow: hidden;
      border-radius: 23px 23px 0 0;
    }
    
    .featured-stream-media img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .featured-stream-card:hover .featured-stream-media img {
      transform: scale(1.05);
    }
    
    .featured-stream-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 2rem;
      background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
      color: white;
    }
    
    .featured-stream-title {
      font-size: 1.6rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      color: white;
    }
    
    .featured-stream-meta {
      display: flex;
      align-items: center;
      gap: 1rem;
      flex-wrap: wrap;
    }
    
    .featured-stream-info {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.9rem;
      color: rgba(255, 255, 255, 0.9);
    }
    
    .featured-stream-content {
      padding: 2rem;
    }
    
    .featured-stream-details {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }
    
    .stream-detail-card {
      background: white;
      border-radius: 15px;
      padding: 1.5rem;
      border: 2px solid #f0f0f0;
      transition: all 0.3s ease;
    }
    
    .stream-detail-card:hover {
      border-color: #0095FF;
      transform: translateY(-3px);
    }
    
    .stream-detail-header {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 1rem;
    }
    
    .stream-detail-icon {
      width: 50px;
      height: 50px;
      background: linear-gradient(135deg, rgba(0, 149, 255, 0.1) 0%, rgba(52, 199, 255, 0.2) 100%);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .stream-detail-icon i {
      font-size: 1.5rem;
      color: #0095FF;
    }
    
    .stream-detail-title {
      font-weight: 600;
      color: #0B1F3F;
      margin: 0;
      font-size: 1.1rem;
    }
    
    .stream-detail-value {
      font-size: 1.5rem;
      font-weight: 700;
      color: #0B1F3F;
      margin-bottom: 0.25rem;
    }
    
    .stream-detail-label {
      color: #5a6c7d;
      font-size: 0.9rem;
      margin: 0;
    }
    
    /* Filter Section - Layout lebih compact */
    .stream-filter-section {
      background: white;
      padding: 2rem 0;
      margin-bottom: 2rem;
      border-bottom: 1px solid #f0f0f0;
    }
    
    .stream-filter-container {
      background: linear-gradient(135deg, #f5f8fa 0%, #e9eef3 100%);
      border-radius: 20px;
      padding: 2rem;
      position: relative;
      overflow: hidden;
    }
    
    .stream-filter-container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 3px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
    }
    
    .filter-header {
      margin-bottom: 1.5rem;
    }
    
    .filter-header h4 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin-bottom: 0.5rem;
    }
    
    .filter-header p {
      color: #5a6c7d;
      font-size: 1rem;
      margin: 0;
    }
    
    .filter-buttons-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 0.75rem;
    }
    
    .btn-stream-filter {
      background: white;
      border: 2px solid #d0d0d0;
      border-radius: 12px;
      padding: 1rem 1.5rem;
      font-weight: 600;
      color: #5a6c7d;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      text-align: center;
      position: relative;
      overflow: hidden;
    }
    
    .btn-stream-filter::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: 1;
    }
    
    .btn-stream-filter span,
    .btn-stream-filter i {
      position: relative;
      z-index: 2;
    }
    
    .btn-stream-filter:hover,
    .btn-stream-filter.active {
      border-color: transparent;
      color: white;
      transform: translateY(-3px);
      box-shadow: 0 8px 20px rgba(0, 149, 255, 0.25);
    }
    
    .btn-stream-filter.active::before,
    .btn-stream-filter:hover::before {
      opacity: 1;
    }
    
    /* Stream Cards Section - Layout baru */
    .streams-section {
      padding: 2rem 0 4rem;
      background: white;
    }
    
    .streams-grid-header {
      margin-bottom: 2.5rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 1rem;
    }
    
    .streams-header-left {
      flex: 1;
    }
    
    .streams-header-left h3 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.4rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin: 0 0 0.5rem 0;
    }
    
    .streams-header-left p {
      color: #5a6c7d;
      font-size: 1rem;
      margin: 0;
    }
    
    .streams-header-right {
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    
    .live-counter {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      background: rgba(220, 53, 69, 0.1);
      padding: 0.75rem 1.25rem;
      border-radius: 50px;
      color: #dc3545;
      font-weight: 600;
      font-size: 0.95rem;
    }
    
    /* Stream Cards Grid */
    .sporter-stream-card {
      border-radius: 20px;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      border: 2px solid #e8edf2;
      overflow: hidden;
      position: relative;
      background: white;
      height: 100%;
      display: flex;
      flex-direction: column;
    }
    
    .sporter-stream-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 5px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
      transform: scaleX(0);
      transition: transform 0.4s ease;
      z-index: 2;
    }
    
    .sporter-stream-card.live-now::before {
      background: linear-gradient(90deg, #dc3545 0%, #ff6b6b 100%);
      transform: scaleX(1);
    }
    
    .sporter-stream-card.upcoming::before {
      background: linear-gradient(90deg, #10B981 0%, #34D399 100%);
    }
    
    .sporter-stream-card:hover::before {
      transform: scaleX(1);
    }
    
    .sporter-stream-card:hover {
      transform: translateY(-10px) scale(1.02);
      box-shadow: 0 25px 50px rgba(0, 149, 255, 0.15);
      border-color: transparent;
    }
    
    .stream-card-media {
      position: relative;
      height: 200px;
      overflow: hidden;
    }
    
    .stream-card-media img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .sporter-stream-card:hover .stream-card-media img {
      transform: scale(1.08);
    }
    
    .stream-card-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      padding: 1.25rem;
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
    }
    
    .stream-status-badge {
      background: linear-gradient(135deg, #dc3545 0%, #ff6b6b 100%);
      color: white;
      padding: 0.5rem 1.25rem;
      border-radius: 50px;
      font-size: 0.85rem;
      font-weight: 700;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      animation: pulseLive 2s infinite;
    }
    
    .stream-status-badge.upcoming {
      background: linear-gradient(135deg, #10B981 0%, #34D399 100%);
      animation: none;
    }
    
    .viewer-count-badge {
      background: rgba(0, 0, 0, 0.8);
      color: white;
      padding: 0.4rem 1rem;
      border-radius: 50px;
      font-size: 0.85rem;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
      backdrop-filter: blur(10px);
    }
    
    .stream-card-content {
      padding: 1.75rem;
      flex: 1;
      display: flex;
      flex-direction: column;
    }
    
    .stream-card-header {
      margin-bottom: 1rem;
    }
    
    .stream-sport-badge {
      background: rgba(0, 149, 255, 0.1);
      color: #0080e0;
      padding: 0.5rem 1rem;
      border-radius: 50px;
      font-size: 0.85rem;
      font-weight: 700;
      border: 1.5px solid rgba(0, 149, 255, 0.2);
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .stream-card-title {
      color: #0B1F3F;
      font-weight: 700;
      font-size: 1.25rem;
      line-height: 1.4;
      margin: 0.75rem 0;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    .stream-card-meta {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.25rem;
      flex-wrap: wrap;
    }
    
    .stream-meta-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: #5a6c7d;
      font-size: 0.9rem;
    }
    
    .stream-meta-item i {
      color: #0095FF;
      font-size: 1rem;
    }
    
    .stream-card-stats {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 0.75rem;
      margin-top: auto;
      padding-top: 1rem;
      border-top: 1px solid #f0f0f0;
    }
    
    .stream-stat-item {
      text-align: center;
    }
    
    .stream-stat-value {
      display: block;
      font-size: 1.1rem;
      font-weight: 700;
      color: #0B1F3F;
      line-height: 1;
      margin-bottom: 0.25rem;
    }
    
    .stream-stat-label {
      display: block;
      font-size: 0.8rem;
      color: #5a6c7d;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    
    .stream-card-actions {
      margin-top: 1.5rem;
    }
    
    .btn-watch-stream {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      border: none;
      color: white;
      padding: 1rem 1.5rem;
      border-radius: 12px;
      font-weight: 600;
      font-size: 0.95rem;
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      z-index: 1;
    }
    
    .btn-watch-stream::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, #0080e0 0%, #0095FF 100%);
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: -1;
    }
    
    .btn-watch-stream:hover::before {
      opacity: 1;
    }
    
    .btn-watch-stream:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 25px rgba(0, 149, 255, 0.3);
    }
    
    /* Stats Section - Layout lebih baik */
    .stream-stats-section {
      background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
      padding: 4rem 0;
      border-radius: 25px;
      margin-top: 3rem;
    }
    
    .stats-header {
      text-align: center;
      margin-bottom: 3rem;
    }
    
    .stats-header h3 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.4rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin-bottom: 0.5rem;
    }
    
    .stats-header p {
      color: #5a6c7d;
      font-size: 1.05rem;
      max-width: 600px;
      margin: 0 auto;
    }
    
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.5rem;
    }
    
    .stats-card {
      background: white;
      border-radius: 20px;
      padding: 2rem 1.5rem;
      text-align: center;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      border: 2px solid #e8edf2;
      position: relative;
      overflow: hidden;
    }
    
    .stats-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
      transform: scaleX(0);
      transition: transform 0.3s ease;
    }
    
    .stats-card:hover::before {
      transform: scaleX(1);
    }
    
    .stats-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 40px rgba(0, 149, 255, 0.15);
      border-color: #0095FF;
    }
    
    .stats-icon-wrapper {
      width: 80px;
      height: 80px;
      background: linear-gradient(135deg, rgba(0, 149, 255, 0.1) 0%, rgba(52, 199, 255, 0.2) 100%);
      border-radius: 20px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1.5rem;
      transition: all 0.3s ease;
    }
    
    .stats-card:hover .stats-icon-wrapper {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      transform: scale(1.1);
    }
    
    .stats-icon-wrapper i {
      font-size: 2.2rem;
      color: #0095FF;
      transition: color 0.3s ease;
    }
    
    .stats-card:hover .stats-icon-wrapper i {
      color: white;
    }
    
    .stats-value {
      font-size: 2.5rem;
      font-weight: 800;
      color: #0B1F3F;
      line-height: 1;
      margin-bottom: 0.5rem;
      letter-spacing: -0.5px;
    }
    
    .stats-label {
      color: #5a6c7d;
      font-size: 1rem;
      font-weight: 600;
      margin: 0;
    }
    
    /* Empty State */
    .stream-empty-state {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border: 2px dashed #d0d0d0;
      border-radius: 20px;
      padding: 4rem 2rem;
      text-align: center;
      max-width: 800px;
      margin: 2rem auto;
      position: relative;
      overflow: hidden;
    }
    
    .stream-empty-state::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: linear-gradient(45deg, transparent 30%, rgba(0, 149, 255, 0.05) 50%, transparent 70%);
      animation: shimmer 3s infinite linear;
    }
    
    @keyframes shimmer {
      0% { transform: translateX(-100%); }
      100% { transform: translateX(100%); }
    }
    
    .stream-empty-state-icon {
      width: 120px;
      height: 120px;
      background: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.75rem;
      position: relative;
      z-index: 2;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    }
    
    .stream-empty-state-icon i {
      font-size: 3.5rem;
      color: #adb5bd;
      animation: float 3s infinite;
    }
    
    .stream-empty-state h3 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.2rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin-bottom: 0.75rem;
      position: relative;
      z-index: 2;
    }
    
    .stream-empty-state p {
      color: #5a6c7d;
      font-size: 1.05rem;
      line-height: 1.6;
      margin: 0;
      position: relative;
      z-index: 2;
    }
    
    /* Responsive */
    @media (max-width: 1199px) {
      .livestream-hero h1 {
        font-size: 2.8rem;
      }
      
      .section-title-main h3 {
        font-size: 2rem;
      }
      
      .featured-stream-media {
        height: 350px;
      }
    }
    
    @media (max-width: 991px) {
      .livestream-hero {
        padding: 3.5rem 0 2.5rem;
      }
      
      .livestream-hero h1 {
        font-size: 2.4rem;
      }
      
      .livestream-hero .lead {
        font-size: 1rem;
      }
      
      .featured-stream-media {
        height: 300px;
      }
      
      .featured-stream-details {
        grid-template-columns: 1fr;
      }
      
      .filter-buttons-grid {
        grid-template-columns: repeat(2, 1fr);
      }
      
      .streams-header-left h3 {
        font-size: 2rem;
      }
      
      .stats-header h3 {
