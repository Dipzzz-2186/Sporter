            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(
                href="#"
                data-bs-toggle="dropdown"
                class=(
                  currentPath.startsWith('/events') || currentPath.startsWith('/news')
                  ? 'active'
                  : ''
                )
              )
                i.bi.bi-journal-text.me-2
                | Konten

