    // Bootstrap JS Bundle (includes Popper)
    script(src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js")

    // Custom JS - JALANKAN SETELAH BOOTSTRAP READY
    script.
      // Tunggu sampai DOM dan Bootstrap ready
      window.addEventListener('load', function() {
        console.log('✅ Window Loaded');
        console.log('✅ Bootstrap version:', typeof bootstrap !== 'undefined' ? bootstrap.Dropdown.VERSION : 'NOT LOADED');

        // Jika Bootstrap tidak loaded, coba load ulang atau alert user
        if (typeof bootstrap === 'undefined') {
          console.error('❌ Bootstrap JS gagal dimuat!');
          // Fallback: reload page sekali
          if (!sessionStorage.getItem('bootstrapRetry')) {
            sessionStorage.setItem('bootstrapRetry', '1');
            location.reload();
          }
          return;
        }

        // Scroll to Top Button
        var scrollBtn = document.getElementById('scrollTopBtn');
        if (scrollBtn) {
          window.addEventListener('scroll', function() {
            if (window.scrollY > 300) {
              scrollBtn.classList.add('visible');
            } else {
              scrollBtn.classList.remove('visible');
            }
          });

          scrollBtn.addEventListener('click', function() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
          });
        }

        // Navbar background on scroll
        var navbar = document.querySelector('.sport-navbar');
        if (navbar) {
          window.addEventListener('scroll', function() {
            if (window.scrollY > 50) {
              navbar.style.boxShadow = '0 8px 30px rgba(0, 0, 0, 0.25)';
            } else {
              navbar.style.boxShadow = '0 4px 20px rgba(0, 0, 0, 0.15)';
            }
          });
        }

        // Auto-close mobile menu when clicking nav link
        var navbarCollapse = document.getElementById('navMain');
        var navLinks = document.querySelectorAll('.nav-link:not(.dropdown-toggle)');
        
        if (navbarCollapse) {
          navLinks.forEach(function(link) {
            link.addEventListener('click', function() {
              if (window.innerWidth < 992) {
                var bsCollapse = bootstrap.Collapse.getInstance(navbarCollapse);
                if (bsCollapse) {
                  bsCollapse.hide();
                }
              }
            });
          });
        }

        // Manual init dropdown sebagai backup
        var userDropdown = document.getElementById('userDropdown');
        if (userDropdown) {
          try {
            new bootstrap.Dropdown(userDropdown);
            console.log('✅ Dropdown initialized successfully');
          } catch (e) {
            console.error('❌ Dropdown init error:', e);
          }
        }
      });

