extends ../layout/main

block content
  style.
    .profile-page {
      background: linear-gradient(135deg, #f5f8fa 0%, #e9eef3 100%);
      min-height: 100vh;
      padding: 2.5rem 0;
    }
    .cardx {
      background: #fff;
      border: 1px solid #e8edf2;
      border-radius: 16px;
      box-shadow: 0 2px 8px rgba(0,0,0,.04);
      padding: 2rem;
    }
    .titlex {
      font-family: 'Bebas Neue', cursive;
      font-size: 1.9rem;
      letter-spacing: 1px;
      color: #0B1F3F;
      margin-bottom: .5rem;
    }
    .subtitlex {
      color: #5a6c7d;
      font-size: .9rem;
      margin-bottom: 2rem;
    }
    .form-label {
      font-weight: 600;
      color: #0B1F3F;
      font-size: .85rem;
      margin-bottom: .5rem;
    }
    .form-control {
      border: 1px solid #e8edf2;
      border-radius: 10px;
      padding: .75rem 1rem;
      font-size: .9rem;
      transition: all .2s ease;
    }
    .form-control:focus {
      border-color: #0095FF;
      box-shadow: 0 0 0 3px rgba(0,149,255,.1);
    }
    .btnx {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      border: none;
      color: #fff;
      padding: .85rem 1.2rem;
      border-radius: 12px;
      font-weight: 600;
      font-size: .9rem;
      width: 100%;
      transition: all .2s ease;
    }
    .btnx:hover { 
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba(0,149,255,.2);
    }
    .btn-back {
      background: #fff;
      border: 1px solid #e8edf2;
      color: #5a6c7d;
      padding: .75rem 1.2rem;
      border-radius: 12px;
      font-weight: 600;
      font-size: .9rem;
      width: 100%;
      text-decoration: none;
      display: inline-block;
      text-align: center;
      transition: all .2s ease;
    }
    .btn-back:hover {
      border-color: #0B1F3F;
      color: #0B1F3F;
    }
    hr {
      border: none;
      border-top: 1px solid #f0f4f8;
      margin: 1.5rem 0;
    }
    .alert {
      border-radius: 12px;
      border: none;
      padding: .9rem 1.1rem;
      margin-bottom: 1.5rem;
      font-weight: 500;
      font-size: .9rem;
    }
    .alert-danger {
      background: #fff5f5;
      color: #c53030;
      border-left: 3px solid #fc8181;
    }
    .alert-success {
      background: #f0fff4;
      color: #276749;
      border-left: 3px solid #68d391;
    }
    
    @media (max-width: 575px) {
      .profile-page {
        padding: 1.5rem 0;
      }
      .cardx {
        padding: 1.5rem;
      }
      .titlex {
        font-size: 1.7rem;
      }
    }

  .profile-page
    .container
      .row.justify-content-center
        .col-lg-6
          if messages && messages.error && messages.error.length
            .alert.alert-danger= messages.error[0]
          if messages && messages.success && messages.success.length
            .alert.alert-success= messages.success[0]

          .cardx
            h1.titlex Ganti Password
            p.subtitlex Pastikan password baru kamu kuat dan gampang diingat.

            form(method="POST" action="/profile/password")
              .mb-3
                label.form-label Password Saat Ini
                input.form-control(type="password" name="current_password" required placeholder="Masukkan password lama")

              .mb-1
                label.form-label Password Baru
                input.form-control(type="password" name="new_password" required minlength="6" placeholder="Minimal 6 karakter")

              .mb-4
                label.form-label Konfirmasi Password Baru
                input.form-control(type="password" name="confirm_password" required minlength="6" placeholder="Ketik ulang password baru")

              button.btnx(type="submit")
                i.bi.bi-check2-circle.me-2
                | Simpan Password

            hr
            a.btn-back(href="/profile")
              i.bi.bi-arrow-left.me-2
              | Kembali ke Profile