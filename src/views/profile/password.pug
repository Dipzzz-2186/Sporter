extends ../layout/main

block content
  style.
    .profile-page {
      background: linear-gradient(135deg, #f5f8fa 0%, #e9eef3 100%);
      min-height: 100vh;
      padding: 2.5rem 0;
    }
    .cardx {
      background: #fff;
      border: 2px solid #e8edf2;
      border-radius: 20px;
      box-shadow: 0 10px 25px rgba(0,0,0,.06);
      padding: 2rem;
    }
    .titlex {
      font-family: 'Bebas Neue', cursive;
      font-size: 2rem;
      letter-spacing: 1px;
      color: #0B1F3F;
      margin-bottom: 1rem;
    }
    .btnx {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      border: none;
      color: #fff;
      padding: .85rem 1.2rem;
      border-radius: 12px;
      font-weight: 700;
      width: 100%;
    }
    .btnx:hover { opacity: .95; }

  .profile-page
    .container
      .row.justify-content-center
        .col-lg-6
          if messages && messages.error && messages.error.length
            .alert.alert-danger= messages.error[0]
          if messages && messages.success && messages.success.length
            .alert.alert-success= messages.success[0]

          .cardx
            h1.titlex Ganti Password
            p.text-muted.mb-4 Pastikan password baru kamu kuat dan gampang diingat.

            form(method="POST" action="/profile/password")
              .mb-3
                label.form-label Password Saat Ini
                input.form-control(type="password" name="current_password" required)

              .mb-3
                label.form-label Password Baru
                input.form-control(type="password" name="new_password" required minlength="6")

              .mb-4
                label.form-label Konfirmasi Password Baru
                input.form-control(type="password" name="confirm_password" required minlength="6")

              button.btnx(type="submit")
                i.bi.bi-check2-circle.me-2
                | Simpan Password

            hr.mt-4
            a.btn.btn-outline-secondary.w-100(href="/profile")
              i.bi.bi-arrow-left.me-2
              | Kembali ke Profile
