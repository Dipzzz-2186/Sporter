extends ../layout/main

block content
  .container
    .row
      .col-md-6
        if product.image_url
          img.img-fluid(src=product.image_url)
      .col-md-6
        h3= product.name
        p.text-muted Seller: #{product.seller_name}
        h4 Rp #{Number(product.price).toLocaleString('id-ID')}
        p Stok: #{product.stock}

        if !currentUser
          a.btn.btn-warning(
            href=`/login?next=/store/${product.id}`
          ) Login untuk membeli
        else if currentUser.role !== 'user'
          .alert.alert-info Hanya user yang bisa membeli produk
        else
          form(method="post" action="/cart/add")
            input(type="hidden" name="merchandise_id" value=product.id)
            input.form-control.mb-2(type="number" name="qty" min="1" max=product.stock value="1")
            button.btn.btn-primary(type="submit") Tambah ke Keranjang
