  script.
    // Quantity Controls
    const quantityInput = document.getElementById('quantityInput');
    const cartQuantity = document.getElementById('cartQuantity');
    const maxStock = #{product.stock || 0};
    
    function increaseQuantity() {
      let current = parseInt(quantityInput.value) || 1;
      if (current < maxStock) {
        quantityInput.value = current + 1;
        cartQuantity.value = current + 1;
        updateAddToCartButton();
      }
    }
    
    function decreaseQuantity() {
      let current = parseInt(quantityInput.value) || 1;
      if (current > 1) {
        quantityInput.value = current - 1;
        cartQuantity.value = current - 1;
        updateAddToCartButton();
      }
    }
    
    function validateQuantity() {
      let value = parseInt(quantityInput.value) || 1;
      if (value < 1) value = 1;
      if (value > maxStock) value = maxStock;
      quantityInput.value = value;
      cartQuantity.value = value;
      updateAddToCartButton();
    }
    
    function updateAddToCartButton() {
      const addToCartBtn = document.getElementById('addToCartBtn');
      const quantity = parseInt(quantityInput.value) || 1;
      
      if (maxStock === 0) {
        addToCartBtn.innerHTML = '<i class="bi bi-x-circle"></i> Stok Habis';
        addToCartBtn.disabled = true;
      } else if (quantity > maxStock) {
        addToCartBtn.innerHTML = '<i class="bi bi-exclamation-triangle"></i> Melebihi Stok';
        addToCartBtn.disabled = true;
      } else {
        addToCartBtn.innerHTML = '<i class="bi bi-cart-plus"></i> Tambah ke Keranjang';
        addToCartBtn.disabled = false;
      }
    }
    
    // Tab Navigation
    const tabButtons = document.querySelectorAll('.tab-btn');
    const tabPanes = document.querySelectorAll('.tab-pane');
    
    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        const tabId = button.getAttribute('data-tab');
        
        // Update active button
        tabButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        
        // Show active tab
        tabPanes.forEach(pane => {
          pane.classList.remove('active');
          if (pane.id === tabId) {
            pane.classList.add('active');
          }
        });
      });
    });
    
    // Add to Cart Form Submission
    const addToCartForm = document.getElementById('addToCartForm');
    if (addToCartForm) {
      addToCartForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const submitBtn = document.getElementById('addToCartBtn');
        const originalText = submitBtn.innerHTML;
        const quantity = parseInt(cartQuantity.value) || 1;
        
        // Show loading
        submitBtn.innerHTML = '<div class="loading-spinner"></div> Menambahkan...';
        submitBtn.disabled = true;
        
        // Simulate API call
        setTimeout(() => {
          // In real app, this would be the fetch call
          // fetch('/cart/add', {
          //   method: 'POST',
          //   body: new FormData(this)
          // })
          
          // Show success message
          submitBtn.innerHTML = '<i class="bi bi-check-circle"></i> Berhasil Ditambahkan!';
          submitBtn.style.background = 'var(--gradient-success)';
          
          // Show notification
          showNotification('Produk berhasil ditambahkan ke keranjang!');
          
          // Reset button after 2 seconds
          setTimeout(() => {
            submitBtn.innerHTML = originalText;
            submitBtn.style.background = '';
            submitBtn.disabled = false;
          }, 2000);
          
        }, 1000);
      });
    }
    
    // Buy Now Function
    function buyNow() {
      const quantity = parseInt(quantityInput.value) || 1;
      
      if (maxStock === 0) {
        alert('Maaf, stok produk habis.');
        return;
      }
      
      if (quantity > maxStock) {
        alert(`Maaf, stok hanya tersisa ${maxStock} unit.`);
        return;
      }
      
      // Redirect to checkout with this product
      window.location.href = `/checkout?merchandise_id=${product.id}&qty=${quantity}`;
    }
    
    // Wishlist Toggle
    function toggleWishlist() {
      const wishlistBtn = document.getElementById('wishlistBtn');
      const isActive = wishlistBtn.classList.contains('wishlist-active');
      
      if (isActive) {
        wishlistBtn.classList.remove('wishlist-active');
        wishlistBtn.innerHTML = '<i class="bi bi-heart"></i> Tambah ke Wishlist';
        showNotification('Produk dihapus dari wishlist');
      } else {
        wishlistBtn.classList.add('wishlist-active');
        wishlistBtn.innerHTML = '<i class="bi bi-heart-fill"></i> Dalam Wishlist';
        showNotification('Produk ditambahkan ke wishlist');
      }
    }
    
    // Notification System
    function showNotification(message) {
      // Create notification element
      const notification = document.createElement('div');
      notification.className = 'notification';
      notification.innerHTML = `
        <div style="position: fixed; top: 20px; right: 20px; background: var(--gradient-success); color: white; padding: 1rem 1.5rem; border-radius: 12px; box-shadow: var(--shadow-lg); z-index: 9999; animation: slideInRight 0.3s ease-out;">
          <i class="bi bi-check-circle me-2"></i>
          ${message}
        </div>
      `;
      
      document.body.appendChild(notification);
      
      // Remove after 3 seconds
      setTimeout(() => {
        notification.style.animation = 'slideOutRight 0.3s ease-out';
        setTimeout(() => {
          notification.remove();
        }, 300);
      }, 3000);
      
      // Add animation styles
      const style = document.createElement('style');
      style.textContent = `
        @keyframes slideInRight {
          from { transform: translateX(100%); opacity: 0; }
          to { transform: translateX(0); opacity: 1; }
        }
        @keyframes slideOutRight {
          from { transform: translateX(0); opacity: 1; }
          to { transform: translateX(100%); opacity: 0; }
        }
      `;
      document.head.appendChild(style);
    }
    
    // Initialize
    document.addEventListener('DOMContentLoaded', function() {
      updateAddToCartButton();
      
      // Add keyboard shortcuts
      document.addEventListener('keydown', function(e) {
        // + key to increase quantity
        if (e.key === '+' || e.key === '=') {
          e.preventDefault();
          increaseQuantity();
        }
        
        // - key to decrease quantity
        if (e.key === '-' || e.key === '_') {
          e.preventDefault();
          decreaseQuantity();
        }
        
        // B key for Buy Now
        if ((e.ctrlKey || e.metaKey) && e.key === 'b') {
          e.preventDefault();
          buyNow();
        }
        
        // A key for Add to Cart
        if ((e.ctrlKey || e.metaKey) && e.key === 'a') {
          e.preventDefault();
          document.getElementById('addToCartForm').dispatchEvent(new Event('submit'));
        }
      });
    });