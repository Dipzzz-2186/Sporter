  script.
    (function(){
      // Animate stats counting
      document.querySelectorAll('.stat-number').forEach(function(el){
        var target = parseInt(el.textContent) || 0;
        if(target <= 0) return;
        el.textContent = '0';
        var step = Math.max(1, Math.floor(target / 20));
        var cur = 0;
        var t = setInterval(function(){
          cur += step;
          if(cur >= target){ 
            el.textContent = target; 
            clearInterval(t); 
          } else {
            el.textContent = cur;
          }
        }, 40);
      });

      // Add glow effect to role badge
      const roleBadge = document.querySelector('.admin-role-badge');
      if (roleBadge) {
        roleBadge.addEventListener('mouseenter', () => {
          roleBadge.style.boxShadow = '0 8px 32px rgba(0, 149, 255, 0.3)';
        });
        
        roleBadge.addEventListener('mouseleave', () => {
          roleBadge.style.boxShadow = '0 8px 32px rgba(0, 0, 0, 0.2)';
        });
      }

      // Add card hover animations
      const cards = document.querySelectorAll('.admin-content-card');
      cards.forEach((card, index) => {
        card.style.animationDelay = `${index * 0.1}s`;
        
        // Add ripple effect on click
        card.addEventListener('click', function(e) {
          if(e.target.tagName === 'A' || e.target.closest('a')) return;
          
          const ripple = document.createElement('div');
          const rect = this.getBoundingClientRect();
          const x = e.clientX - rect.left;
          const y = e.clientY - rect.top;
          
          ripple.style.cssText = `
            position: absolute;
            width: 20px;
            height: 20px;
            background: rgba(0, 149, 255, 0.3);
            border-radius: 50%;
            transform: translate(-50%, -50%);
            animation: ripple 0.6s linear;
            pointer-events: none;
            top: ${y}px;
            left: ${x}px;
            z-index: 1;
          `;
          
          this.appendChild(ripple);
          setTimeout(() => ripple.remove(), 600);
        });
      });

      // Add CSS for ripple animation
      const style = document.createElement('style');
      style.textContent = `
        @keyframes ripple {
          to {
            transform: translate(-50%, -50%) scale(15);
            opacity: 0;
          }
        }
      `;
      document.head.appendChild(style);

      // Auto-dismiss alerts
      const alerts = document.querySelectorAll('.alert');
      alerts.forEach(alert => {
        setTimeout(() => {
          alert.style.opacity = '0';
          alert.style.transform = 'translateY(-10px)';
          setTimeout(() => {
            if (alert.parentNode) {
              alert.parentNode.removeChild(alert);
            }
          }, 300);
        }, 5000);
      });

      // Add table row animations
      const tableRows = document.querySelectorAll('.admin-table tbody tr');
      tableRows.forEach((row, index) => {
        row.style.opacity = '0';
        row.style.transform = 'translateX(-10px)';
        row.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
        
        setTimeout(() => {
          row.style.opacity = '1';
          row.style.transform = 'translateX(0)';
        }, index * 50);
      });

    })();