extends ../layout/main

block content
  style.
    /* Events Page Styles */
    .events-page {
      background: linear-gradient(135deg, #f5f8fa 0%, #e9eef3 100%);
      min-height: 100vh;
      padding: 2rem 0;
    }
    
    /* Header Section */
    .events-header {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
      border-radius: 24px;
      padding: 2rem;
      margin-bottom: 2rem;
      color: white;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
      animation: fadeInDown 0.6s ease-out;
      position: relative;
      overflow: hidden;
    }
    
    .events-header::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -10%;
      width: 300px;
      height: 300px;
      background: radial-gradient(circle, rgba(0, 149, 255, 0.15) 0%, transparent 70%);
      border-radius: 50%;
    }
    
    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .events-header h1 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.5rem;
      letter-spacing: 1px;
      margin-bottom: 0.5rem;
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }
    
    .events-header p {
      color: rgba(255, 255, 255, 0.7);
      font-size: 1rem;
      margin: 0;
    }
    
    /* Action Button */
    .btn-add-event {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      border: none;
      color: white;
      padding: 0.9rem 1.8rem;
      border-radius: 12px;
      font-weight: 600;
      font-size: 1rem;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(0, 149, 255, 0.3);
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      text-decoration: none;
      animation: fadeInUp 0.6s ease-out 0.4s backwards;
    }
    
    .btn-add-event:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(0, 149, 255, 0.4);
      color: white;
    }
    
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    /* Alerts */
    .alert {
      border-radius: 12px;
      border: none;
      padding: 1rem 1.25rem;
      margin-bottom: 1.5rem;
      animation: slideInDown 0.4s ease-out;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }
    
    @keyframes slideInDown {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .alert-success {
      background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
      color: #065f46;
      border-left: 4px solid #059669;
    }
    
    .alert-danger {
      background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
      color: #991b1b;
      border-left: 4px solid #dc2626;
    }
    
    .alert i {
      font-size: 1.2rem;
    }
    
    /* Events Card Container */
    .events-card-container {
      background: white;
      border-radius: 24px;
      border: 2px solid #e8edf2;
      padding: 2.5rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      animation: fadeInUp 0.6s ease-out 0.2s backwards;
      margin-bottom: 2rem;
    }
    
    /* Events Table */
    .events-table {
      border-radius: 12px;
      overflow: hidden;
      border: 2px solid #f8f9fa;
    }
    
    .events-table thead {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
    }
    
    .events-table thead th {
      color: white;
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
      font-weight: 600;
      font-size: 0.85rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      padding: 1.2rem 1rem;
      border: none;
      white-space: nowrap;
    }
    
    .events-table tbody tr {
      transition: all 0.3s ease;
      border-bottom: 1px solid #e8edf2;
    }
    
    .events-table tbody tr:hover {
      background: linear-gradient(90deg, rgba(0, 149, 255, 0.05) 0%, rgba(52, 199, 255, 0.05) 100%);
      transform: scale(1.01);
    }
    
    .events-table tbody td {
      padding: 1.2rem 1rem;
      vertical-align: middle;
      font-size: 0.95rem;
    }
    
    /* Event Row Styling */
    .event-row-title {
      font-weight: 700;
      color: #0B1F3F;
      font-size: 1.05rem;
      line-height: 1.4;
      margin-bottom: 0.4rem;
    }
    
    .event-row-slug {
      color: #5a6c7d;
      font-size: 0.85rem;
      line-height: 1.3;
    }
    
    .event-row-info {
      color: #0B1F3F;
      font-weight: 500;
      font-size: 0.95rem;
    }
    
    /* Badges */
    .events-table .badge {
      font-size: 0.75rem;
      font-weight: 600;
      padding: 0.35rem 0.75rem;
      border-radius: 8px;
      display: inline-block;
    }
    
    .badge.bg-success-subtle {
      background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%) !important;
      color: #059669 !important;
      border: 1px solid #a7f3d0;
    }
    
    .badge.bg-primary-subtle {
      background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%) !important;
      color: #0095FF !important;
      border: 1px solid #bfdbfe;
    }
    
    .badge.bg-secondary-subtle {
      background: linear-gradient(135deg, #e5e7eb 0%, #d1d5db 100%) !important;
      color: #5a6c7d !important;
      border: 1px solid #d1d5db;
    }
    
    /* Action Buttons */
    .action-buttons {
      display: flex;
      gap: 0.5rem;
      justify-content: flex-end;
    }
    
    .action-buttons .btn {
      border-radius: 10px;
      font-weight: 600;
      font-size: 0.85rem;
      padding: 0.5rem 1rem;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
      border: 2px solid;
    }
    
    .action-buttons .btn-outline-secondary {
      border-color: #e8edf2;
      color: #5a6c7d;
      background: white;
    }
    
    .action-buttons .btn-outline-secondary:hover {
      background: #f8f9fa;
      border-color: #0095FF;
      color: #0095FF;
      transform: translateY(-2px);
    }
    
    .action-buttons .btn-outline-primary {
      border-color: #0095FF;
      color: #0095FF;
      background: white;
    }
    
    .action-buttons .btn-outline-primary:hover {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(0, 149, 255, 0.3);
    }
    
    .action-buttons .btn-outline-danger {
      border-color: #dc2626;
      color: #dc2626;
      background: white;
    }
    
    .action-buttons .btn-outline-danger:hover {
      background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
    }
    
    /* Empty State */
    .empty-state {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border: 2px dashed #e8edf2;
      border-radius: 24px;
      padding: 4rem 2rem;
      text-align: center;
      animation: fadeInUp 0.6s ease-out;
      margin-top: 2rem;
    }
    
    .empty-state-icon {
      width: 120px;
      height: 120px;
      background: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 2rem;
      animation: float 3s ease-in-out infinite;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-15px); }
    }
    
    .empty-state-icon i {
      font-size: 4rem;
      color: #0095FF;
    }
    
    .empty-state h4 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.5rem;
      color: #0B1F3F;
      letter-spacing: 1px;
      margin-bottom: 1rem;
    }
    
    .empty-state p {
      color: #5a6c7d;
      font-size: 1.15rem;
      margin: 0 auto 2rem;
      max-width: 500px;
      line-height: 1.6;
    }
    
    /* Responsive */
    @media (max-width: 991px) {
      .events-header {
        padding: 1.5rem;
      }
      
      .events-header h1 {
        font-size: 2rem;
      }
      
      .events-card-container {
        padding: 1.5rem;
      }
      
      .events-table thead th,
      .events-table tbody td {
        padding: 1rem 0.75rem;
      }
      
      .action-buttons {
        flex-direction: column;
      }
      
      .action-buttons .btn {
        width: 100%;
      }
    }
    
    @media (max-width: 767px) {
      .events-page {
        padding: 1.5rem 0;
      }
      
      .events-header {
        padding: 1.25rem;
        border-radius: 16px;
      }
      
      .events-header h1 {
        font-size: 1.75rem;
      }
      
      .events-card-container {
        padding: 1rem;
        border-radius: 16px;
      }
      
      .events-table {
        font-size: 0.85rem;
      }
      
      .empty-state {
        padding: 3rem 1.5rem;
      }
      
      .empty-state-icon {
        width: 100px;
        height: 100px;
      }
      
      .empty-state-icon i {
        font-size: 3rem;
      }
      
      .empty-state h4 {
        font-size: 2rem;
      }
    }
    
    /* Animation delays for table rows */
    .events-table tbody tr:nth-child(1) { animation-delay: 0.1s; }
    .events-table tbody tr:nth-child(2) { animation-delay: 0.2s; }
    .events-table tbody tr:nth-child(3) { animation-delay: 0.3s; }
    .events-table tbody tr:nth-child(4) { animation-delay: 0.4s; }
    .events-table tbody tr:nth-child(5) { animation-delay: 0.5s; }

  .events-page
    .container
      // Header Section
      .events-header
        .row.align-items-center
          .col-md-8
            h1
              i.bi.bi-calendar-event.me-2
              | Kelola Event
            p
              | Manage semua event olahraga yang tampil di SPORTER.
          .col-md-4.text-md-end
            a.btn-add-event(href="/admin/events/create")
              i.bi.bi-plus-circle
              span Tambah Event

      // Flash Messages
      if flash && flash.success && flash.success.length
        .alert.alert-success(role="alert")
          i.bi.bi-check-circle-fill.me-2
          each msg in flash.success
            div= msg
      
      if flash && flash.error && flash.error.length
        .alert.alert-danger(role="alert")
          i.bi.bi-exclamation-triangle-fill.me-2
          each msg in flash.error
            div= msg

      // Events List
      if events && events.length
        .events-card-container
          .table-responsive
            table.table.table-hover.mb-0.events-table
              thead
                tr
                  th ID
                  th Judul
                  th Cabang
                  th Venue
                  th Tanggal
                  th Status
                  th.text-end Aksi
              tbody
                each e in events
                  tr
                    td
                      span.badge.bg-light.text-dark= e.id
                    td
                      .event-row-title= e.title
                      if e.slug
                        .event-row-slug= e.slug
                    td
                      .event-row-info= e.sport_name || '-'
                    td
                      .event-row-info= e.venue_name || '-'
                    td
                      if e.start_date
                        - const start = new Date(e.start_date).toLocaleDateString('id-ID');
                        if e.end_date
                          - const end = new Date(e.end_date).toLocaleDateString('id-ID');
                          .event-row-info #{start} - #{end}
                        else
                          .event-row-info #{start}
                      else
                        span.text-muted -
                    td
                      if e.status === 'upcoming'
                        span.badge.bg-success-subtle.text-success Akan Datang
                      else if e.status === 'ongoing'
                        span.badge.bg-primary-subtle.text-primary Berlangsung
                      else
                        span.badge.bg-secondary-subtle.text-secondary Selesai
                    td.text-end
                      .action-buttons
                        a.btn.btn-sm.btn-outline-secondary(href=`/events/${e.slug || e.id}` target="_self" title="Lihat di Frontend")
                          i.bi.bi-box-arrow-up-right
                          span.d-none.d-sm-inline.ms-1 Lihat
                        a.btn.btn-sm.btn-outline-primary(href=`/admin/events/${e.id}/edit` title="Edit Event")
                          i.bi.bi-pencil
                          span.d-none.d-sm-inline.ms-1 Edit
                        form.d-inline(method="post" action=`/admin/events/${e.id}/delete` onsubmit="return confirm('Yakin hapus event ini?');")
                          button.btn.btn-sm.btn-outline-danger(type="submit" title="Hapus Event")
                            i.bi.bi-trash
                            span.d-none.d-sm-inline.ms-1 Hapus
      else
        .empty-state
          .empty-state-icon
            i.bi.bi-calendar-x
          h4 Belum ada event
          p.text-muted
            | Tambahkan event pertama untuk mulai mengisi kalender SPORTER.
            br
            | Event akan membantu pengguna mengetahui kegiatan olahraga terbaru.
          a.btn-add-event.mt-3(href="/admin/events/create")
            i.bi.bi-plus-circle
            span Tambah Event Pertama

  // Custom JavaScript
  script.
    (function(){
      // Auto-dismiss alerts with animation
      var alerts = document.querySelectorAll('.alert');
      alerts.forEach(function(alert){
        setTimeout(function(){
          alert.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
          alert.style.opacity = '0';
          alert.style.transform = 'translateY(-12px)';
          setTimeout(() => alert.remove(), 450);
        }, 4500);
      });

      // Progressive enhancement for delete forms
      document.querySelectorAll('form[action*="/delete"]').forEach(function(form){
        form.addEventListener('submit', function(e){
          if (!confirm('⚠️ Yakin ingin menghapus event ini? Tindakan ini tidak bisa dibatalkan.')) {
            e.preventDefault();
            return false;
          }
          var btn = form.querySelector('button[type="submit"]');
          if (btn) {
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Menghapus...';
          }
        });
      });

      // Add hover animations to table rows
      var rows = document.querySelectorAll('.events-table tbody tr');
      rows.forEach(function(row, index) {
        row.style.animation = 'fadeInUp 0.6s ease-out ' + (0.1 + index * 0.1) + 's backwards';
        
        row.addEventListener('mouseenter', function() {
          this.style.transition = 'all 0.3s ease';
        });
      });

      // Intersection Observer for animations
      if ('IntersectionObserver' in window) {
        var observer = new IntersectionObserver(function(entries) {
          entries.forEach(function(entry) {
            if (entry.isIntersecting) {
              entry.target.style.opacity = '1';
              entry.target.style.transform = 'translateY(0)';
            }
          });
        }, {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px'
        });

        // Observe all cards and tables
        document.querySelectorAll('.events-card-container, .empty-state').forEach(function(el) {
          observer.observe(el);
        });
      }
    })();