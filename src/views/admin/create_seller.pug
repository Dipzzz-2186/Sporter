extends ../layout/main

block content
  style.
    .form-hero {
      background:white;
      padding:2rem 0;
      border-bottom:1px solid #f0f0f0;
      margin-bottom:2rem;
    }
    .page-title {
      font-size:1.75rem;
      font-weight:700;
      margin-bottom:.25rem;
    }
    .page-subtitle {
      color:#6b7280;
      margin:0;
    }
    .form-card {
      background:white;
      border-radius:20px;
      padding:2rem;
      box-shadow:0 5px 25px rgba(0,0,0,.08);
      max-width:700px;
      margin:auto;
    }
    .form-label {
      font-weight:600;
      color:#374151;
    }
    .form-control {
      border-radius:12px;
      padding:.75rem 1rem;
    }
    .action-bar {
      display:flex;
      justify-content:space-between;
      align-items:center;
      margin-top:2rem;
    }
    .btn-primary {
      background:linear-gradient(135deg,#7C3AED 0%,#9333EA 100%);
      border:none;
      border-radius:12px;
      padding:.7rem 1.5rem;
      font-weight:600;
    }

  .form-hero
    .container
      h1.page-title Buat Seller
      p.page-subtitle Tambahkan akun penjual merchandise

  .container

    if flash && flash.error && flash.error.length
      each msg in flash.error
        .alert.alert-danger= msg

    if flash && flash.success && flash.success.length
      each msg in flash.success
        .alert.alert-success= msg

    .form-card
      form(method="post" action="/admin/sellers/create")
        .mb-3
          label.form-label Nama Seller
          input.form-control(
            type="text"
            name="name"
            required
            placeholder="Nama seller"
          )

        .mb-3
          label.form-label Email
          input.form-control(
            type="email"
            name="email"
            required
            placeholder="email@domain.com"
          )

        .mb-3
          label.form-label Password
          input.form-control(
            type="password"
            name="password"
            required
            minlength="6"
          )

        .action-bar
          a.btn.btn-outline-secondary(href="/admin/sellers")
            i.bi.bi-arrow-left.me-1
            | Kembali
          button.btn.btn-primary(type="submit")
            i.bi.bi-person-plus.me-1
            | Buat Seller
