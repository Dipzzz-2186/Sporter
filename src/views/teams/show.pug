extends ../layout/main

block content
  .container.mt-5
    h1.mb-3= team.name
    p.text-muted Cabang: #{team.sport_name}

    if members.length
      .row.g-3.mt-4
        each m in members
          .col-md-4
            .card.shadow-sm
              .card-body.d-flex.align-items-center.gap-3
                if m.photo_url
                  img(
                    src=m.photo_url
                    style="width:60px;height:60px;border-radius:50%;object-fit:cover"
                  )
                else
                  i.bi.bi-person-circle.fs-1.text-muted

                .flex-grow-1
                  a.text-decoration-none.fw-bold(href=`/athletes/${m.slug}`)= m.name
                  if m.role
                    div.small.text-muted= m.role
    else
      p.text-muted Tidak ada anggota tim
