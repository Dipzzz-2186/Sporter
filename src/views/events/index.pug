          clearButton.addEventListener('click', function() {
            searchInput.value = '';
            searchInput.focus();
            applyFilter();
            this.style.display = 'none';
          });
          
          searchInput.parentElement.appendChild(clearButton);
          
          searchInput.addEventListener('input', function() {
            if (this.value.trim() !== '') {
              clearButton.style.display = 'block';
            } else {
              clearButton.style.display = 'none';
            }
            applyFilter();
          });
          
          // Enter key untuk search
          searchInput.addEventListener('keydown', function(e) {
            if (e.key === 'Enter') {
              e.preventDefault();
              applyFilter();
            }
          });
        }
        
        // Keyboard navigation untuk filter
        document.addEventListener('keydown', function(e) {
          const activeFilter = document.querySelector('.events-chip.active');
          if (!activeFilter) return;
          
          const filters = Array.from(filterButtons);
          const currentIndex = filters.indexOf(activeFilter);
          
          if (e.key === 'ArrowLeft' && currentIndex > 0) {
            e.preventDefault();
            filters[currentIndex - 1].click();
          } else if (e.key === 'ArrowRight' && currentIndex < filters.length - 1) {
            e.preventDefault();
            filters[currentIndex + 1].click();
          } else if (e.key === 'Home') {
            e.preventDefault();
            filters[0].click();
          } else if (e.key === 'End') {
            e.preventDefault();
            filters[filters.length - 1].click();
          }
        });
        
