extends ../layout/main

block content
  style.
    /* Hero Section - Diperbaiki layout */
    .events-hero {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
      position: relative;
      overflow: hidden;
      padding: 5rem 0 4rem;
      animation: fadeIn 0.8s ease-out;
      margin-bottom: 2rem;
      border-radius: 0 0 30px 30px;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    
    .events-hero::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -20%;
      width: 800px;
      height: 800px;
      background: radial-gradient(circle, rgba(0, 149, 255, 0.15) 0%, transparent 70%);
      border-radius: 50%;
      animation: float 8s ease-in-out infinite;
    }
    
    .events-hero::after {
      content: '';
      position: absolute;
      bottom: -40%;
      left: -10%;
      width: 600px;
      height: 600px;
      background: radial-gradient(circle, rgba(52, 199, 255, 0.1) 0%, transparent 70%);
      border-radius: 50%;
      animation: float 10s ease-in-out infinite reverse;
    }
    
    @keyframes float {
      0%, 100% { transform: translate(0, 0) scale(1); }
      50% { transform: translate(50px, -50px) scale(1.1); }
    }
    
    .events-hero-content {
      position: relative;
      z-index: 2;
    }
    
    .events-hero-badge {
      background: rgba(0, 149, 255, 0.15) !important;
      color: #0095FF !important;
      border: 2px solid rgba(0, 149, 255, 0.3);
      padding: 0.6rem 1.2rem;
      font-size: 0.95rem;
      backdrop-filter: blur(10px);
      animation: pulseBlue 2s infinite;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      border-radius: 50px;
    }
    
    @keyframes pulseBlue {
      0%, 100% { box-shadow: 0 0 0 0 rgba(0, 149, 255, 0.4); }
      50% { box-shadow: 0 0 0 10px rgba(0, 149, 255, 0); }
    }
    
    .events-hero h1 {
      color: white;
      font-size: 3.2rem;
      line-height: 1.2;
      margin-bottom: 1rem;
      font-weight: 800;
    }
    
    .events-hero .text-success {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .events-hero .lead {
      color: rgba(255, 255, 255, 0.85) !important;
      font-size: 1.1rem;
      line-height: 1.7;
      max-width: 600px;
    }
    
    /* Stats Cards - Layout lebih rapi */
    .events-stats {
      margin: -2rem auto 3rem;
      position: relative;
      z-index: 10;
      max-width: 1200px;
    }
    
    .stat-card {
      background: white;
      border-radius: 20px;
      padding: 1.75rem 1.25rem;
      text-align: center;
      transition: all 0.3s ease;
      border: 2px solid #e8edf2;
      height: 100%;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
      position: relative;
      overflow: hidden;
    }
    
    .stat-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
      transform: scaleX(0);
      transition: transform 0.3s ease;
    }
    
    .stat-card:hover::before {
      transform: scaleX(1);
    }
    
    .stat-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 15px 35px rgba(0, 149, 255, 0.12);
      border-color: #0095FF;
    }
    
    .stat-icon-wrapper {
      width: 70px;
      height: 70px;
      background: linear-gradient(135deg, rgba(0, 149, 255, 0.08) 0%, rgba(52, 199, 255, 0.15) 100%);
      border-radius: 18px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1.25rem;
      transition: all 0.3s ease;
    }
    
    .stat-card:hover .stat-icon-wrapper {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      transform: scale(1.08);
    }
    
    .stat-icon-wrapper i {
      font-size: 2rem;
      color: #0095FF;
      transition: color 0.3s ease;
    }
    
    .stat-card:hover .stat-icon-wrapper i {
      color: white;
    }
    
    .stat-value {
      font-size: 2.2rem;
      font-weight: 800;
      color: #0B1F3F;
      line-height: 1;
      margin-bottom: 0.4rem;
      letter-spacing: -0.5px;
    }
    
    .stat-label {
      color: #5a6c7d;
      font-size: 0.95rem;
      margin: 0;
      font-weight: 600;
    }
    
    /* Filter Section - Layout lebih compact */
    .events-filter-section {
      background: white;
      padding: 1.5rem 0 2rem;
      border-bottom: 1px solid #f0f0f0;
      margin-bottom: 2.5rem;
    }
    
    .events-filter-container {
      background: linear-gradient(135deg, #f5f8fa 0%, #e9eef3 100%);
      border-radius: 18px;
      padding: 1.75rem;
      position: relative;
      overflow: hidden;
    }
    
    .events-filter-container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 3px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
    }
    
    .filter-header {
      margin-bottom: 1.5rem;
    }
    
    .filter-header h3 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.2rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin-bottom: 0.25rem;
    }
    
    .filter-header p {
      color: #5a6c7d;
      font-size: 0.95rem;
      margin: 0;
    }
    
    .filter-chips {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
      margin-bottom: 1.5rem;
    }
    
    .events-chip {
      background: white;
      border: 2px solid #d0d0d0;
      border-radius: 50px;
      padding: 0.8rem 1.75rem;
      font-weight: 600;
      color: #5a6c7d;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      cursor: pointer;
      position: relative;
      overflow: hidden;
    }
    
    .events-chip::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: 1;
    }
    
    .events-chip span,
    .events-chip i {
      position: relative;
      z-index: 2;
    }
    
    .events-chip:hover,
    .events-chip.active {
      border-color: transparent;
      color: white;
      transform: translateY(-3px);
      box-shadow: 0 8px 20px rgba(0, 149, 255, 0.25);
    }
    
    .events-chip.active::before,
    .events-chip:hover::before {
      opacity: 1;
    }
    
    .events-chip i {
      font-size: 1.1rem;
    }
    
    .search-container {
      position: relative;
      max-width: 320px;
    }
    
    .search-input {
      width: 100%;
      padding: 0.9rem 1rem 0.9rem 3rem;
      border: 2px solid #d0d0d0;
      border-radius: 15px;
      font-size: 0.95rem;
      transition: all 0.3s ease;
      background: white;
      font-weight: 500;
    }
    
    .search-input:focus {
      outline: none;
      border-color: #0095FF;
      box-shadow: 0 0 0 4px rgba(0, 149, 255, 0.1);
    }
    
    .search-icon {
      position: absolute;
      left: 1rem;
      top: 50%;
      transform: translateY(-50%);
      color: #5a6c7d;
      font-size: 1.1rem;
      z-index: 2;
    }
    
    /* Events Section - Layout lebih terstruktur */
    .events-section {
      padding: 1rem 0 5rem;
      background: white;
    }
    
    .section-header {
      margin-bottom: 2.5rem;
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      padding-bottom: 1rem;
      border-bottom: 2px solid #f0f0f0;
    }
    
    .section-header h2 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.8rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin-bottom: 0.25rem;
      line-height: 1;
    }
    
    .section-header p {
      color: #5a6c7d;
      font-size: 1rem;
      margin: 0;
    }
    
    /* Event Cards - Layout baru yang lebih baik */
    .sporter-event-card {
      border-radius: 20px;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      border: 2px solid #e8edf2;
      overflow: hidden;
      position: relative;
      background: white;
      height: 100%;
      display: flex;
      flex-direction: column;
    }
    
    .sporter-event-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 5px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
      transform: scaleX(0);
      transition: transform 0.4s ease;
      z-index: 2;
    }
    
    .sporter-event-card.upcoming::before {
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
    }
    
    .sporter-event-card.ongoing::before {
      background: linear-gradient(90deg, #10B981 0%, #34D399 100%);
    }
    
    .sporter-event-card.finished::before {
      background: linear-gradient(90deg, #6B7280 0%, #4B5563 100%);
    }
    
    .sporter-event-card:hover::before {
      transform: scaleX(1);
    }
    
    .sporter-event-card:hover {
      transform: translateY(-12px);
      box-shadow: 0 25px 50px rgba(0, 149, 255, 0.15);
      border-color: transparent;
    }
    
    /* Header card dengan layout baru */
    .event-card-header {
      padding: 1.5rem 1.75rem 1rem;
      position: relative;
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    
    .event-header-top {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 0.5rem;
    }
    
    .event-sport-badge {
      background: rgba(0, 149, 255, 0.08) !important;
      color: #0080e0 !important;
      padding: 0.5rem 1.1rem;
      border-radius: 50px;
      font-size: 0.82rem;
      font-weight: 700;
      border: 1.5px solid rgba(0, 149, 255, 0.2);
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      letter-spacing: 0.3px;
    }
    
    .event-sport-badge i {
      font-size: 0.95rem;
    }
    
    .event-status {
      margin-left: auto;
    }
    
    .status-badge {
      padding: 0.45rem 1rem;
      border-radius: 50px;
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    
    .status-upcoming {
      background: rgba(0, 149, 255, 0.1);
      color: #0080e0;
    }
    
    .status-ongoing {
      background: rgba(16, 185, 129, 0.1);
      color: #059669;
    }
    
    .status-finished {
      background: rgba(107, 114, 128, 0.1);
      color: #4B5563;
    }
    
    /* Date ribbon dengan layout baru */
    .event-date-ribbon {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.85rem 1.25rem;
      background: linear-gradient(135deg, rgba(0, 149, 255, 0.05) 0%, rgba(52, 199, 255, 0.1) 100%);
      border-radius: 15px;
      border: 1.5px solid rgba(0, 149, 255, 0.15);
      margin-bottom: 0.5rem;
    }
    
    .event-date-badge {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      color: white;
      padding: 0.5rem 1.1rem;
      border-radius: 50px;
      font-size: 0.85rem;
      font-weight: 700;
      display: flex;
      align-items: center;
      gap: 0.6rem;
      min-width: fit-content;
    }
    
    .event-date-badge.ongoing {
      background: linear-gradient(135deg, #10B981 0%, #34D399 100%);
    }
    
    .event-date-badge.finished {
      background: linear-gradient(135deg, #6B7280 0%, #4B5563 100%);
    }
    
    .event-time {
      font-size: 0.9rem;
      color: #5a6c7d;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 0.4rem;
    }
    
    /* Body card dengan layout baru */
    .sporter-event-card .card-body {
      padding: 0 1.75rem 1.75rem;
      flex: 1;
      display: flex;
      flex-direction: column;
    }
    
    .sporter-event-card h5 {
      color: #0B1F3F;
      font-weight: 800;
      font-size: 1.3rem;
      line-height: 1.4;
      margin-bottom: 1rem;
      min-height: 3.6em;
      letter-spacing: -0.3px;
    }
    
    /* Event meta dengan layout grid */
    .event-meta {
      display: grid;
      grid-template-columns: 1fr;
      gap: 0.75rem;
      margin-bottom: 1.5rem;
      padding: 1.25rem;
      background: rgba(0, 149, 255, 0.02);
      border-radius: 15px;
      border: 1.5px solid rgba(0, 149, 255, 0.05);
    }
    
    .event-meta-item {
      color: #5a6c7d;
      font-size: 0.92rem;
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }
    
    .event-meta-item i {
      color: #0095FF;
      font-size: 1.1rem;
      width: 22px;
      text-align: center;
    }
    
    /* Description dengan layout lebih baik */
    .event-description {
      color: #5a6c7d;
      font-size: 0.92rem;
      line-height: 1.7;
      margin-bottom: 1.75rem;
      flex: 1;
      position: relative;
      overflow: hidden;
    }
    
    .event-description::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 40px;
      background: linear-gradient(to bottom, transparent, white);
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    
    .sporter-event-card:hover .event-description::after {
      opacity: 1;
    }
    
    /* Action buttons dengan layout baru */
    .event-actions {
      display: flex;
      gap: 0.85rem;
      margin-top: auto;
    }
    
    .sporter-event-card .btn {
      border-radius: 12px;
      font-weight: 700;
      font-size: 0.92rem;
      padding: 0.85rem 1.5rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.6rem;
      flex: 1;
      border-width: 2px;
    }
    
    .sporter-event-card .btn-outline-success {
      background: white;
      border-color: #0095FF;
      color: #0095FF;
      position: relative;
      overflow: hidden;
      z-index: 1;
    }
    
    .sporter-event-card .btn-outline-success::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      transform: translateX(-100%);
      transition: transform 0.4s ease;
      z-index: -1;
    }
    
    .sporter-event-card .btn-outline-success:hover::before {
      transform: translateX(0);
    }
    
    .sporter-event-card .btn-outline-success:hover {
      color: white;
      border-color: #0095FF;
      transform: translateY(-3px);
      box-shadow: 0 8px 20px rgba(0, 149, 255, 0.25);
    }
    
    .sporter-event-card .btn-outline-secondary {
      background: white;
      border-color: #d0d0d0;
      color: #5a6c7d;
      position: relative;
      overflow: hidden;
      z-index: 1;
    }
    
    .sporter-event-card .btn-outline-secondary::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: #f8f9fa;
      transform: translateX(-100%);
      transition: transform 0.4s ease;
      z-index: -1;
    }
    
    .sporter-event-card .btn-outline-secondary:hover::before {
      transform: translateX(0);
    }
    
    .sporter-event-card .btn-outline-secondary:hover {
      border-color: #5a6c7d;
      color: #4B5563;
      transform: translateY(-3px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }
    
    /* Empty State - Layout lebih baik */
    .events-empty-state {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border: 2px dashed #d0d0d0;
      border-radius: 20px;
      padding: 5rem 2rem;
      text-align: center;
      max-width: 600px;
      margin: 2rem auto;
      position: relative;
      overflow: hidden;
    }
    
    .events-empty-state::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: linear-gradient(45deg, transparent 30%, rgba(0, 149, 255, 0.03) 50%, transparent 70%);
      animation: shimmer 3s infinite linear;
    }
    
    @keyframes shimmer {
      0% { transform: translateX(-100%); }
      100% { transform: translateX(100%); }
    }
    
    .events-empty-state-icon {
      width: 120px;
      height: 120px;
      background: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.75rem;
      position: relative;
      z-index: 2;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    }
    
    .events-empty-state-icon i {
      font-size: 3.5rem;
      color: #adb5bd;
      animation: bounce 3s infinite;
    }
    
    @keyframes bounce {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }
    
    .events-empty-state h3 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.5rem;
      color: #0B1F3F;
      letter-spacing: 0.5px;
      margin-bottom: 0.75rem;
      position: relative;
      z-index: 2;
    }
    
    .events-empty-state p {
      color: #5a6c7d;
      font-size: 1.05rem;
      margin: 0;
      line-height: 1.6;
      position: relative;
      z-index: 2;
    }
    
    /* Animasi untuk cards */
    .event-item {
      opacity: 0;
      transform: translateY(30px);
      animation: fadeInUp 0.6s ease-out forwards;
    }
    
    @keyframes fadeInUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    /* Responsive */
    @media (max-width: 1200px) {
      .events-hero h1 {
        font-size: 2.8rem;
      }
      
      .section-header h2 {
        font-size: 2.5rem;
      }
    }
    
    @media (max-width: 991px) {
      .events-hero {
        padding: 3.5rem 0 2.5rem;
      }
      
      .events-hero h1 {
        font-size: 2.4rem;
      }
      
      .events-hero .lead {
        font-size: 1rem;
      }
      
      .events-stats {
        margin-top: -1.5rem;
      }
      
      .stat-card {
        padding: 1.5rem 1rem;
      }
      
      .section-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.75rem;
      }
      
      .section-header h2 {
        font-size: 2.2rem;
      }
      
      .filter-chips {
        justify-content: center;
      }
      
      .sporter-event-card h5 {
        min-height: auto;
      }
    }
    
    @media (max-width: 768px) {
      .events-hero h1 {
        font-size: 2rem;
      }
      
      .events-hero-badge {
        font-size: 0.85rem;
        padding: 0.5rem 1rem;
      }
      
      .section-header h2 {
        font-size: 1.9rem;
      }
      
      .events-filter-container {
        padding: 1.5rem;
      }
      
      .events-chip {
        width: calc(50% - 0.375rem);
        justify-content: center;
      }
      
      .search-container {
        max-width: 100%;
      }
      
      .sporter-event-card .card-body {
        padding: 1.25rem;
      }
      
      .event-card-header {
        padding: 1.25rem 1.25rem 1rem;
      }
      
      .event-meta {
        padding: 1rem;
      }
      
      .event-actions {
        flex-direction: column;
      }
      
      .sporter-event-card .btn {
        width: 100%;
      }
      
      .event-header-top {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.75rem;
      }
      
      .event-status {
        margin-left: 0;
      }
      
      .event-date-ribbon {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
      }
    }
    
    @media (max-width: 576px) {
      .events-chip {
        width: 100%;
      }
      
      .stat-value {
        font-size: 1.9rem;
      }
      
      .stat-icon-wrapper {
        width: 60px;
        height: 60px;
      }
      
      .stat-icon-wrapper i {
        font-size: 1.6rem;
      }
      
      .event-sport-badge {
        font-size: 0.78rem;
        padding: 0.45rem 0.9rem;
      }
    }
    
    /* Animation delays untuk cards */
    .event-item:nth-child(1) { animation-delay: 0.1s; }
    .event-item:nth-child(2) { animation-delay: 0.2s; }
    .event-item:nth-child(3) { animation-delay: 0.3s; }
    .event-item:nth-child(4) { animation-delay: 0.4s; }
    .event-item:nth-child(5) { animation-delay: 0.5s; }
    .event-item:nth-child(6) { animation-delay: 0.6s; }
    
    .stat-card:nth-child(1) { animation: fadeInUp 0.6s ease-out 0.2s forwards; opacity: 0; }
