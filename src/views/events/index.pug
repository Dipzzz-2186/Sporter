          if (hero && scrolled < 800) {
            hero.style.transform = 'translateY(' + (scrolled * 0.5) + 'px)';
          }
        });
        
        // Simulasi real-time update untuk event yang sedang berlangsung
        function simulateLiveUpdates() {
          const ongoingEvents = document.querySelectorAll('.event-item[data-status="ongoing"]');
          ongoingEvents.forEach(event => {
            // Update participant count secara acak
            const participantElement = event.querySelector('.event-meta-item:nth-child(3)');
            if (participantElement) {
              const currentText = participantElement.textContent;
              const match = currentText.match(/(\d+)/);
              if (match) {
                const currentCount = parseInt(match[1]);
                const change = Math.floor(Math.random() * 10) - 3; // -3 to +6
                const newCount = Math.max(50, currentCount + change);
                participantElement.textContent = currentText.replace(/\d+/, newCount);
              }
            }
          });
