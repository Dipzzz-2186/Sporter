  //- Custom JavaScript
  script.
    (function() {
      // Helper function untuk icon olahraga
      function getSportIcon(sportName) {
        const icons = {
          'Sepak Bola': 'bi-emoji-angry-fill',
          'Basket': 'bi-basket2-fill',
          'Bulu Tangkis': 'bi-brightness-alt-high-fill',
          'Tenis': 'bi-circle-half',
          'Bola Voli': 'bi-circle-fill',
          'Renang': 'bi-water',
          'Atletik': 'bi-person-running',
          'Sepeda': 'bi-bicycle',
          'Panahan': 'bi-bullseye',
          'Futsal': 'bi-dribbble',
          'Badminton': 'bi-shuttle',
          'Tenis Meja': 'bi-circle-square'
        };
        return icons[sportName] || 'bi-trophy-fill';
      }
      
      document.addEventListener('DOMContentLoaded', function() {
        // Apply icons to sport badges
        document.querySelectorAll('.event-sport-badge i').forEach(function(icon) {
          const badge = icon.closest('.event-sport-badge');
          if (badge) {
            const sportName = badge.textContent.trim();
            const iconClass = getSportIcon(sportName);
            if (iconClass) {
              icon.className = 'bi ' + iconClass;
            }
          }
        });
        
        // Sistem Filter
        const filterButtons = document.querySelectorAll('.events-chip');
        const searchInput = document.getElementById('eventsSearchInput');
        const eventItems = document.querySelectorAll('.event-item');
        const eventsCountElement = document.getElementById('events-count');
        
        function updateEventsCount() {
          const visibleItems = document.querySelectorAll('.event-item:not([style*="display: none"])');
          if (eventsCountElement) {
            eventsCountElement.textContent = `${visibleItems.length} Event Tersedia`;
          }
          
          // Animate stats cards
          const visibleStatus = {
            upcoming: 0,
            ongoing: 0,
            finished: 0
          };
          
          visibleItems.forEach(item => {
            const status = item.getAttribute('data-status');
            if (visibleStatus.hasOwnProperty(status)) {
              visibleStatus[status]++;
            }
          });
          
          // Update stat cards with animation
          animateCounter('.stat-card:nth-child(1) .stat-value', visibleItems.length);
          animateCounter('.stat-card:nth-child(2) .stat-value', visibleStatus.ongoing);
          animateCounter('.stat-card:nth-child(3) .stat-value', visibleItems.length * 150);
          
          const venues = new Set();
          visibleItems.forEach(item => {
            const venue = item.getAttribute('data-venue');
            if (venue) venues.add(venue);
          });
          animateCounter('.stat-card:nth-child(4) .stat-value', venues.size);
        }
        
        function animateCounter(selector, targetValue) {
          const element = document.querySelector(selector);
          if (!element) return;
          
          const currentValue = parseInt(element.textContent) || 0;
          const duration = 800;
          const steps = 40;
          const increment = (targetValue - currentValue) / steps;
          let currentStep = 0;
          
          const timer = setInterval(() => {
            currentStep++;
            const newValue = Math.floor(currentValue + (increment * currentStep));
            element.textContent = newValue;
            
            if (currentStep >= steps) {
              clearInterval(timer);
              element.textContent = targetValue;
            }
          }, duration / steps);
        }
        
        function applyFilter() {
          const activeButton = document.querySelector('.events-chip.active');
          const filter = activeButton ? activeButton.getAttribute('data-filter') : 'all';
          const keyword = (searchInput ? searchInput.value.toLowerCase() : '');
          
          eventItems.forEach(function(item) {
            const status = item.getAttribute('data-status') || '';
            const title = (item.getAttribute('data-title') || '').toLowerCase();
            const venue = (item.getAttribute('data-venue') || '').toLowerCase();
            const sport = (item.getAttribute('data-sport') || '').toLowerCase();
            
            let visibleByStatus = filter === 'all' || status === filter;
            let visibleBySearch = !keyword || 
                                 title.includes(keyword) || 
                                 venue.includes(keyword) || 
                                 sport.includes(keyword);
            
            if (visibleByStatus && visibleBySearch) {
              item.style.display = 'block';
              // Trigger animation
              setTimeout(() => {
                item.style.opacity = '1';
                item.style.transform = 'translateY(0)';
              }, 50);
            } else {
              item.style.opacity = '0';
              item.style.transform = 'translateY(20px)';
              setTimeout(() => {
                item.style.display = 'none';
              }, 300);
            }
          });
          
          // Update counter
          setTimeout(updateEventsCount, 350);
        }
        
        // Event listeners untuk filter
        filterButtons.forEach(function(button) {
          button.addEventListener('click', function() {
            filterButtons.forEach(function(btn) {
              btn.classList.remove('active');
            });
            this.classList.add('active');
            applyFilter();
          });
        });
        
        // Event listener untuk search
        if (searchInput) {
          searchInput.addEventListener('input', function() {
            applyFilter();
          });
          
          // Clear search button
          const clearButton = document.createElement('button');
          clearButton.type = 'button';
          clearButton.className = 'btn btn-sm btn-link position-absolute end-0 top-50 translate-middle-y me-2 p-0';
          clearButton.innerHTML = '<i class="bi bi-x-circle text-muted"></i>';
          clearButton.style.display = 'none';
          clearButton.style.zIndex = '3';
          clearButton.addEventListener('click', function() {
            searchInput.value = '';
            searchInput.focus();
            applyFilter();
            this.style.display = 'none';
          });
          
          searchInput.parentElement.appendChild(clearButton);
          
          searchInput.addEventListener('input', function() {
            if (this.value.trim() !== '') {
              clearButton.style.display = 'block';
            } else {
              clearButton.style.display = 'none';
            }
            applyFilter();
          });
        }
        
        // Add animation untuk cards on hover
        document.querySelectorAll('.sporter-event-card').forEach(function(card) {
          card.addEventListener('mouseenter', function() {
            this.style.transition = 'all 0.4s cubic-bezier(0.4, 0, 0.2, 1)';
          });
          
          card.addEventListener('mouseleave', function() {
            this.style.transition = 'all 0.3s ease';
          });
        });
        
        // Initialize dengan filter aktif
        applyFilter();
        
        // Add CSS untuk additional animations
        const style = document.createElement('style');
        style.textContent = `
          .events-chip:focus {
            outline: 2px solid #0095FF;
            outline-offset: 2px;
          }
          
          .search-input:focus {
            border-color: #0095FF;
            box-shadow: 0 0 0 4px rgba(0, 149, 255, 0.1);
          }
          
          @keyframes slideInRight {
            from {
              opacity: 0;
              transform: translateX(20px);
            }
            to {
              opacity: 1;
              transform: translateX(0);
            }
          }
          
          @keyframes fadeInScale {
            from {
              opacity: 0;
              transform: scale(0.95);
            }
            to {
              opacity: 1;
              transform: scale(1);
            }
          }
          
          .sporter-hero-illustration {
            animation: slideInRight 0.8s ease-out 0.3s backwards;
          }
          
          .status-ongoing {
            animation: pulse 2s infinite;
          }
          
          @keyframes pulse {
            0%, 100% {
              box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.4);
            }
            50% {
              box-shadow: 0 0 0 6px rgba(16, 185, 129, 0);
            }
          }
          
          /* Responsive tweaks */
          @media (max-width: 768px) {
            .events-chip {
              flex: 1;
              min-width: 120px;
              justify-content: center;
            }
          }
          
          /* Smooth hover transitions */
          .sporter-event-card,
          .stat-card,
          .events-chip {
            transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
          }
          
          /* Improve focus styles for accessibility */
          .btn:focus,
          .events-chip:focus {
            box-shadow: 0 0 0 3px rgba(0, 149, 255, 0.25);
          }
        `;
        document.head.appendChild(style);
      });
    })();