extends ../layout/main

block content
  style.
    /* Hero Section with Modern Gradient */
    .events-hero {
      background: linear-gradient(135deg, #0B1F3F 0%, #152844 100%);
      position: relative;
      overflow: hidden;
      padding: 5rem 0;
      animation: fadeIn 0.8s ease-out;
      margin-bottom: 3rem;
      border-radius: 0 0 30px 30px;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    
    .events-hero::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -20%;
      width: 800px;
      height: 800px;
      background: radial-gradient(circle, rgba(0, 149, 255, 0.15) 0%, transparent 70%);
      border-radius: 50%;
      animation: float 8s ease-in-out infinite;
    }
    
    .events-hero::after {
      content: '';
      position: absolute;
      bottom: -40%;
      left: -10%;
      width: 600px;
      height: 600px;
      background: radial-gradient(circle, rgba(52, 199, 255, 0.1) 0%, transparent 70%);
      border-radius: 50%;
      animation: float 10s ease-in-out infinite reverse;
    }
    
    @keyframes float {
      0%, 100% { transform: translate(0, 0) scale(1); }
      50% { transform: translate(50px, -50px) scale(1.1); }
    }
    
    .events-hero-content {
      position: relative;
      z-index: 2;
      animation: slideInLeft 0.8s ease-out;
    }
    
    @keyframes slideInLeft {
      from { opacity: 0; transform: translateX(-50px); }
      to { opacity: 1; transform: translateX(0); }
    }
    
    .events-hero-badge {
      background: rgba(0, 149, 255, 0.15) !important;
      color: #0095FF !important;
      border: 2px solid rgba(0, 149, 255, 0.3);
      padding: 0.6rem 1.2rem;
      font-size: 0.95rem;
      backdrop-filter: blur(10px);
      animation: pulseBlue 2s infinite;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    @keyframes pulseBlue {
      0%, 100% { box-shadow: 0 0 0 0 rgba(0, 149, 255, 0.4); }
      50% { box-shadow: 0 0 0 10px rgba(0, 149, 255, 0); }
    }
    
    .events-hero h1 {
      color: white;
      font-size: 3.5rem;
      line-height: 1.2;
      margin-bottom: 1rem;
      animation: fadeInUp 0.8s ease-out 0.2s backwards;
    }
    
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .events-hero .text-success {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .events-hero .lead {
      color: rgba(255, 255, 255, 0.85) !important;
      font-size: 1.15rem;
      line-height: 1.8;
      animation: fadeInUp 0.8s ease-out 0.4s backwards;
      max-width: 600px;
    }
    
    /* Stats Cards */
    .events-stats {
      margin: -3rem 0 3rem;
      position: relative;
      z-index: 10;
    }
    
    .stat-card {
      background: white;
      border-radius: 20px;
      padding: 1.5rem;
      text-align: center;
      transition: all 0.3s ease;
      border: 2px solid #e8edf2;
      height: 100%;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
      animation: fadeInUp 0.6s ease-out backwards;
    }
    
    .stat-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 40px rgba(0, 149, 255, 0.15);
      border-color: #0095FF;
    }
    
    .stat-icon-wrapper {
      width: 60px;
      height: 60px;
      background: linear-gradient(135deg, rgba(0, 149, 255, 0.1) 0%, rgba(52, 199, 255, 0.2) 100%);
      border-radius: 15px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1rem;
      transition: all 0.3s ease;
    }
    
    .stat-card:hover .stat-icon-wrapper {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      transform: rotate(5deg) scale(1.1);
    }
    
    .stat-icon-wrapper i {
      font-size: 1.8rem;
      color: #0095FF;
      transition: color 0.3s ease;
    }
    
    .stat-card:hover .stat-icon-wrapper i {
      color: white;
    }
    
    .stat-value {
      font-size: 2rem;
      font-weight: 700;
      color: #0B1F3F;
      line-height: 1;
      margin-bottom: 0.25rem;
    }
    
    .stat-label {
      color: #5a6c7d;
      font-size: 0.9rem;
      margin: 0;
    }
    
    /* Filter Section */
    .events-filter-section {
      background: white;
      padding: 2rem 0;
      border-bottom: 1px solid #f0f0f0;
      margin-bottom: 2rem;
    }
    
    .events-filter-container {
      background: linear-gradient(135deg, #f5f8fa 0%, #e9eef3 100%);
      border-radius: 20px;
      padding: 2rem;
      animation: fadeInUp 0.6s ease-out;
    }
    
    .filter-header {
      margin-bottom: 1.5rem;
    }
    
    .filter-header h3 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2rem;
      color: #0B1F3F;
      letter-spacing: 1px;
      margin-bottom: 0.5rem;
    }
    
    .filter-header p {
      color: #5a6c7d;
      font-size: 1rem;
      margin: 0;
    }
    
    .filter-chips {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
      margin-bottom: 1.5rem;
    }
    
    .events-chip {
      background: white;
      border: 2px solid #d0d0d0;
      border-radius: 50px;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      color: #5a6c7d;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      cursor: pointer;
    }
    
    .events-chip:hover,
    .events-chip.active {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      border-color: #0095FF;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(0, 149, 255, 0.3);
    }
    
    .events-chip i {
      font-size: 1.1rem;
    }
    
    .search-container {
      position: relative;
      max-width: 300px;
    }
    
    .search-input {
      width: 100%;
      padding: 0.875rem 1rem 0.875rem 3rem;
      border: 2px solid #d0d0d0;
      border-radius: 15px;
      font-size: 0.95rem;
      transition: all 0.3s ease;
      background: white;
    }
    
    .search-input:focus {
      outline: none;
      border-color: #0095FF;
      box-shadow: 0 0 0 3px rgba(0, 149, 255, 0.1);
    }
    
    .search-icon {
      position: absolute;
      left: 1rem;
      top: 50%;
      transform: translateY(-50%);
      color: #5a6c7d;
      font-size: 1.1rem;
    }
    
    /* Event Cards */
    .events-section {
      padding: 2rem 0 5rem;
      background: white;
    }
    
    .section-header {
      margin-bottom: 3rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 1.5rem;
    }
    
    .section-header h2 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.5rem;
      color: #0B1F3F;
      letter-spacing: 1px;
      margin-bottom: 0.5rem;
    }
    
    .section-header p {
      color: #5a6c7d;
      font-size: 1.05rem;
      margin: 0;
    }
    
    .sporter-event-card {
      border-radius: 20px;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      border: 2px solid #e8edf2;
      overflow: hidden;
      position: relative;
      animation: fadeInUp 0.6s ease-out backwards;
      background: white;
      height: 100%;
    }
    
    .sporter-event-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 5px;
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
      transform: scaleX(0);
      transition: transform 0.4s ease;
      z-index: 2;
    }
    
    .sporter-event-card.upcoming::before {
      background: linear-gradient(90deg, #0095FF 0%, #34C7FF 100%);
    }
    
    .sporter-event-card.ongoing::before {
      background: linear-gradient(90deg, #10B981 0%, #34D399 100%);
    }
    
    .sporter-event-card.finished::before {
      background: linear-gradient(90deg, #6B7280 0%, #4B5563 100%);
    }
    
    .sporter-event-card:hover::before {
      transform: scaleX(1);
    }
    
    .sporter-event-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 20px 40px rgba(0, 149, 255, 0.15);
      border-color: #0095FF;
    }
    
    .event-card-header {
      padding: 1.25rem 1.5rem;
      border-bottom: 1px solid #f0f0f0;
      position: relative;
      overflow: visible;
    }
    
    .event-date-badge {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      color: white;
      padding: 0.5rem 1rem;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      box-shadow: 0 5px 15px rgba(0, 149, 255, 0.3);
    }
    
    .event-date-badge.ongoing {
      background: linear-gradient(135deg, #10B981 0%, #34D399 100%);
    }
    
    .event-date-badge.finished {
      background: linear-gradient(135deg, #6B7280 0%, #4B5563 100%);
    }
    
    .event-status {
      margin-left: auto;
    }
    
    .status-badge {
      padding: 0.4rem 0.9rem;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    
    .status-upcoming {
      background: rgba(0, 149, 255, 0.1);
      color: #0080e0;
    }
    
    .status-ongoing {
      background: rgba(16, 185, 129, 0.1);
      color: #059669;
      animation: pulseGreen 2s infinite;
    }
    
    @keyframes pulseGreen {
      0%, 100% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.4); }
      50% { box-shadow: 0 0 0 5px rgba(16, 185, 129, 0); }
    }
    
    .status-finished {
      background: rgba(107, 114, 128, 0.1);
      color: #4B5563;
    }
    
    .sporter-event-card .card-body {
      padding: 1.5rem 1.75rem;
    }
    
    .sporter-event-card h5 {
      color: #0B1F3F;
      font-weight: 700;
      font-size: 1.25rem;
      line-height: 1.4;
      margin-bottom: 1rem;
      min-height: 56px;
    }
    
    .event-meta {
      margin-bottom: 1.25rem;
    }
    
    .event-meta-item {
      color: #5a6c7d;
      font-size: 0.9rem;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .event-meta-item i {
      color: #0095FF;
      font-size: 1rem;
      width: 20px;
    }
    
    .event-sport-badge {
      background: rgba(0, 149, 255, 0.1) !important;
      color: #0080e0 !important;
      padding: 0.4rem 0.9rem;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: 600;
      border: 1px solid rgba(0, 149, 255, 0.2);
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
      margin-bottom: 1rem;
    }
    
    .event-sport-badge i {
      font-size: 0.9rem;
    }
    
    .event-description {
      color: #5a6c7d;
      font-size: 0.9rem;
      line-height: 1.6;
      margin-bottom: 1.5rem;
      min-height: 84px;
    }
    
    .event-actions {
      display: flex;
      gap: 0.75rem;
      margin-top: auto;
    }
    
    .sporter-event-card .btn {
      border-radius: 12px;
      font-weight: 600;
      font-size: 0.9rem;
      padding: 0.75rem 1.5rem;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      flex: 1;
      justify-content: center;
    }
    
    .sporter-event-card .btn-outline-success {
      background: transparent;
      border: 2px solid #0095FF;
      color: #0080e0;
    }
    
    .sporter-event-card .btn-outline-success:hover {
      background: linear-gradient(135deg, #0095FF 0%, #34C7FF 100%);
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(0, 149, 255, 0.3);
    }
    
    .sporter-event-card .btn-outline-secondary {
      background: transparent;
      border: 2px solid #d0d0d0;
      color: #5a6c7d;
    }
    
    .sporter-event-card .btn-outline-secondary:hover {
      background: #f8f9fa;
      border-color: #5a6c7d;
      color: #4B5563;
      transform: translateY(-2px);
    }
    
    /* Empty State */
    .events-empty-state {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border: 2px dashed #d0d0d0;
      border-radius: 20px;
      padding: 4rem 2rem;
      text-align: center;
      animation: fadeInUp 0.6s ease-out;
    }
    
    .events-empty-state-icon {
      width: 100px;
      height: 100px;
      background: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      animation: float 3s ease-in-out infinite;
    }
    
    .events-empty-state-icon i {
      font-size: 3rem;
      color: #adb5bd;
    }
    
    .events-empty-state h3 {
      font-family: 'Bebas Neue', cursive;
      font-size: 2rem;
      color: #0B1F3F;
      letter-spacing: 1px;
      margin-bottom: 0.75rem;
    }
    
    .events-empty-state p {
      color: #5a6c7d;
      font-size: 1.05rem;
      margin: 0;
    }
    
    /* Responsive */
    @media (max-width: 991px) {
      .events-hero {
        padding: 3rem 0;
      }
      
      .events-hero h1 {
        font-size: 2.5rem;
      }
      
      .events-hero .lead {
        font-size: 1rem;
      }
      
      .events-stats {
        margin-top: -2rem;
      }
      
      .section-header h2 {
        font-size: 2rem;
      }
      
      .filter-chips {
        justify-content: center;
      }
      
      .sporter-event-card h5 {
        min-height: auto;
      }
      
      .event-description {
        min-height: auto;
      }
    }
    
    @media (max-width: 767px) {
      .events-hero h1 {
        font-size: 2rem;
      }
      
      .section-header {
        flex-direction: column;
        align-items: flex-start;
      }
      
      .section-header h2 {
        font-size: 1.75rem;
      }
      
      .events-filter-container {
        padding: 1.5rem;
      }
      
      .events-chip {
        width: 100%;
        justify-content: center;
      }
      
      .search-container {
        max-width: 100%;
      }
      
      .sporter-event-card .card-body {
        padding: 1.25rem;
      }
      
      .event-actions {
        flex-direction: column;
      }
      
      .sporter-event-card .btn {
        width: 100%;
      }
    }
    
    /* Animation delays */
    .sporter-event-card:nth-child(1) { animation-delay: 0.1s; }
    .sporter-event-card:nth-child(2) { animation-delay: 0.2s; }
    .sporter-event-card:nth-child(3) { animation-delay: 0.3s; }
    .sporter-event-card:nth-child(4) { animation-delay: 0.4s; }
    .sporter-event-card:nth-child(5) { animation-delay: 0.5s; }
    .sporter-event-card:nth-child(6) { animation-delay: 0.6s; }
    
    .stat-card:nth-child(1) { animation-delay: 0.2s; }
    .stat-card:nth-child(2) { animation-delay: 0.4s; }
    .stat-card:nth-child(3) { animation-delay: 0.6s; }
    .stat-card:nth-child(4) { animation-delay: 0.8s; }

  // HERO SECTION
  .events-hero
    .container
      .row.align-items-center.gy-4
        .col-lg-7.events-hero-content
          span.badge.events-hero-badge.mb-3
            i.bi.bi-calendar-event.me-2
            | Event & Turnamen Terlengkap
          h1.fw-bold.mb-3
            | Jadwal 
            span.text-success Event Olahraga
          p.lead.mb-4
            | Temukan turnamen dan event olahraga terbaru di seluruh Indonesia. 
            | Dapatkan informasi lengkap tentang jadwal, lokasi, dan tiket dalam satu platform terintegrasi.
          
          .row.mt-4.g-3
            .col-6.col-md-3
              .d-flex.align-items-center.gap-2
                i.bi.bi-check-circle-fill.text-info.fs-5
                div
                  .h4.mb-0.fw-bold.text-white #{events ? events.filter(e => e.status === 'upcoming').length : '0'}
                  small.text-white-50.fs-7 Akan Datang
            .col-6.col-md-3
              .d-flex.align-items-center.gap-2
                i.bi.bi-broadcast.text-success.fs-5
                div
                  .h4.mb-0.fw-bold.text-white #{events ? events.filter(e => e.status === 'ongoing').length : '0'}
                  small.text-white-50.fs-7 Berlangsung
            .col-6.col-md-3
              .d-flex.align-items-center.gap-2
                i.bi.bi-geo-alt.text-warning.fs-5
                div
                  .h4.mb-0.fw-bold.text-white #{events ? new Set(events.map(e => e.venue_name)).size : '0'}
                  small.text-white-50.fs-7 Venue
            .col-6.col-md-3
              .d-flex.align-items-center.gap-2
                i.bi.bi-trophy.text-info.fs-5
                div
                  .h4.mb-0.fw-bold.text-white #{events ? new Set(events.map(e => e.sport_name)).size : '0'}
                  small.text-white-50.fs-7 Cabang
        
        .col-lg-5.text-center
          .sporter-hero-illustration.mx-auto(style="padding: 2.5rem 2rem; background: rgba(0, 149, 255, 0.08); border: 2px solid rgba(0, 149, 255, 0.2); border-radius: 30px; backdrop-filter: blur(10px);")
            i.bi.bi-trophy-fill(style="font-size: 6rem; color: rgba(255, 255, 255, 0.3);")
            p.mb-0.fs-6.text-white-50
              | Jadwal Lengkap • Lokasi Akurat • Tiket Terintegrasi

  // STATS SECTION
  .events-stats
    .container
      .row.g-4
        .col-md-3.col-sm-6
          .stat-card
            .stat-icon-wrapper
              i.bi.bi-calendar-check-fill
            .stat-value #{events ? events.length : '0'}
            .stat-label Total Event
        
        .col-md-3.col-sm-6
          .stat-card
            .stat-icon-wrapper
              i.bi.bi-broadcast-pin
            .stat-value #{events ? events.filter(e => e.status === 'ongoing').length : '0'}
            .stat-label Sedang Berlangsung
        
        .col-md-3.col-sm-6
          .stat-card
            .stat-icon-wrapper
              i.bi.bi-people-fill
            .stat-value #{events ? events.length * 150 : '0'}
            .stat-label Partisipan
        
        .col-md-3.col-sm-6
          .stat-card
            .stat-icon-wrapper
              i.bi.bi-building
            .stat-value #{events ? new Set(events.map(e => e.venue_name)).size : '0'}
            .stat-label Arena

  // FILTER SECTION
  .events-filter-section
    .container
      .events-filter-container
        .filter-header
          h3 Temukan Event Favorit Anda
          p Filter berdasarkan status dan cari event yang sesuai
        
        .d-flex.flex-column.flex-md-row.justify-content-between.align-items-md-center.gap-3
          .filter-chips
            button.events-chip.active(type="button" data-filter="all")
              i.bi.bi-stars
              | Semua Event
            button.events-chip(type="button" data-filter="upcoming")
              i.bi.bi-sunrise
              | Akan Datang
            button.events-chip(type="button" data-filter="ongoing")
              i.bi.bi-broadcast-pin
              | Sedang Berlangsung
            button.events-chip(type="button" data-filter="finished")
              i.bi.bi-flag-checkered
              | Selesai
          
          .search-container
            i.bi.bi-search.search-icon
            input.search-input.form-control#eventsSearchInput(
              type="search" 
              placeholder="Cari event, lokasi, cabang..."
            )

  // EVENTS SECTION
  .events-section
    .container
      .section-header
        div
          h2 Daftar Event
          p Pilih event yang ingin Anda ikuti atau tonton
        
        if events && events.length > 0
          .d-flex.align-items-center.gap-2
            span.text-muted.small#events-count #{events.length} Event Tersedia
            i.bi.bi-calendar-check.text-primary

      if !events || events.length === 0
        .events-empty-state
          .events-empty-state-icon
            i.bi.bi-calendar-x-fill
          h3 Belum Ada Event
          p
            | Event dan turnamen olahraga akan segera hadir di platform SPORTER.
            br
            | Pantau terus halaman ini untuk update terbaru!
      
      else
        #events-container.row.g-4
          each e in events
            - const statusClass = e.status === 'upcoming' ? 'status-upcoming' : (e.status === 'ongoing' ? 'status-ongoing' : 'status-finished');
            - const statusLabel = e.status === 'upcoming' ? 'Akan Datang' : (e.status === 'ongoing' ? 'Sedang Berlangsung' : 'Selesai');
            .col-md-6.col-lg-4.event-item(
              data-status=e.status 
              data-title=e.title 
              data-venue=e.venue_name
              data-sport=e.sport_name
              class=e.status
            )
              .sporter-event-card(class=e.status)
                .event-card-header.d-flex.justify-content-between.align-items-center
                  if e.start_date_formatted
                    span.event-date-badge(class=e.status)
                      i.bi.bi-calendar3
                      | #{e.start_date_formatted}
                  
                  span.status-badge(class=statusClass)= statusLabel
                
                .card-body.d-flex.flex-column
                  h5= e.title
                  
                  .event-meta
                    if e.venue_name
                      .event-meta-item
                        i.bi.bi-geo-alt-fill
                        span= e.venue_name
                    
                    if e.sport_name
                      .event-meta-item
                        i.bi.bi-trophy-fill
